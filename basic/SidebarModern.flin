  <div>
    <!-- Mobile menu button -->
    <div class="lg:hidden fixed top-3 left-3 z-50">
      <button
        click={function() { mobileOpen = !mobileOpen }}
        class="p-2.5 bg-slate-900 rounded-full shadow-md border border-slate-700 hover:bg-slate-800 transition-colors"
      >
        {if !mobileOpen}
          <svg class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        {else}
          <svg class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        {/if}
      </button>
    </div>

    <!-- Mobile sidebar overlay -->
    {if mobileOpen}
      <div
        click={closeMobile}
        class="lg:hidden fixed inset-0 bg-gray-900/50 backdrop-blur-sm z-40 transition-opacity"
      ></div>
    {/if}

    <!-- Mobile sidebar -->
    <div
      class="lg:hidden fixed inset-y-0 left-0 z-50 w-72 h-screen transform transition-transform duration-300 ease-out"
      style="transform: {mobileOpen ? 'translateX(0)' : 'translateX(-100%)'}"
    >
      <div class="h-full overflow-hidden bg-slate-900 flex flex-col">
        <!-- Mobile Header -->
        <div class="h-14 flex items-center px-3 border-b border-slate-800">
          <button
            click={function() { collapsed = !collapsed }}
            class="flex items-center justify-center w-full py-3 text-gray-400 hover:text-white hover:bg-slate-800 rounded-xl transition-all duration-200"
          >
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <nav class="flex-1 min-h-0 py-3 px-2 overflow-y-auto">
          <div class="space-y-0.5 mb-4">
            {for item in directItems}
              <a
                href={item.href}
                click={closeMobile}
                class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 relative"
                style="
                  {if isActive(item.href)}
                    background: rgba(var(--flin-color-slate-800), 0.8);
                    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                    border: 1px solid rgba(var(--flin-color-slate-700), 0.5);
                    color: var(--flin-color-primary-300);
                    font-weight: 600;
                  {else}
                    color: var(--flin-color-gray-300);
                  {/if}
                "
              >
                {if isActive(item.href)}
                  <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                {/if}
                <svg class="w-5 h-5 transition-all duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                </svg>
                <span class="flex-1">{item.name}</span>
              </a>
            {/for}
          </div>

          <!-- Separator -->
          <div class="my-3 mx-2 border-t border-slate-700/60"></div>

          <!-- Collapsible sections -->
          {for section in sections}
            <div class="mt-4 first:mt-0">
              <button
                click={function() { toggleDropdown(section.id) }}
                class="flex items-center justify-between w-full px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider hover:text-gray-300 transition-colors group"
              >
                <span>{section.name}</span>
                <svg
                  class="w-4 h-4 transition-transform duration-200"
                  style="transform: {openDropdown == section.id ? 'rotate(0deg)' : 'rotate(-90deg)'}"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              {if openDropdown == section.id}
                <div class="space-y-0.5 mt-2">
                  {for item in section.items}
                    {if item.external}
                      <a
                        href={item.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        click={closeMobile}
                        class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 relative text-gray-300 hover:bg-slate-800/50 hover:text-white"
                      >
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                        </svg>
                        <span class="flex-1">{item.name}</span>
                        <svg class="w-3 h-3 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                      </a>
                    {else}
                      <a
                        href={item.href}
                        click={closeMobile}
                        class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 relative"
                        style="
                          {if isActive(item.href)}
                            background: rgba(var(--flin-color-slate-700), 1);
                            color: var(--flin-color-primary-300);
                            font-weight: 500;
                          {else}
                            color: var(--flin-color-gray-300);
                          {/if}
                        "
                      >
                        {if isActive(item.href)}
                          <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                        {/if}
                        <svg class="w-4 h-4 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                        </svg>
                        <span class="flex-1">{item.name}</span>
                      </a>
                    {/if}
                  {/for}
                </div>
              {/if}
            </div>
          {/for}
        </nav>

        <!-- Mobile Footer -->
        <div class="border-t border-slate-800 flex-shrink-0">
          <div class="px-4 py-3 bg-slate-800/30">
            <div class="flex items-center gap-2.5 text-xs">
              <div class="w-7 h-7 bg-gradient-to-br from-[var(--flin-color-primary-500)] to-[var(--flin-color-primary-600)] rounded-lg flex items-center justify-center shadow-sm">
                <span class="text-[10px] font-bold text-white">0f</span>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-gray-200">0fee.dev</p>
                <p class="text-gray-500 text-[10px]">Zero-fee payments</p>
              </div>
              <span class="px-2 py-0.5 bg-[var(--flin-color-primary-900)]/50 text-[var(--flin-color-primary-400)] text-[10px] font-semibold rounded-md">
                v1.45
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop sidebar -->
    <div class="hidden lg:fixed lg:inset-y-0 lg:flex lg:flex-col h-screen transition-all duration-300 ease-out" style="width: {collapsed ? '72px' : '256px'}">
      <div class="flex flex-col h-full border-r border-slate-800 bg-slate-900">
        <!-- Desktop Header -->
        <div class="h-14 flex items-center border-b border-slate-800 flex-shrink-0" style="{collapsed ? 'padding: 0 0.5rem;' : 'padding: 0 0.75rem;'}">
          <button
            click={function() { collapsed = !collapsed }}
            class="flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-800 rounded-xl transition-all duration-200"
            style="{collapsed ? 'width: 100%; padding: 0.75rem 0;' : 'padding: 0.625rem;'}"
            title={collapsed ? "Expand sidebar" : "Collapse sidebar"}
          >
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>

        <!-- Desktop Navigation -->
        <nav class="flex-1 min-h-0 py-3 px-2 overflow-y-auto">
          {if !collapsed}
            <!-- Expanded view -->
            <div class="space-y-0.5 mb-4">
              {for item in directItems}
                <a
                  href={item.href}
                  class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 relative"
                  style="
                    {if isActive(item.href)}
                      background: rgba(var(--flin-color-slate-800), 0.8);
                      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                      border: 1px solid rgba(var(--flin-color-slate-700), 0.5);
                      color: var(--flin-color-primary-300);
                      font-weight: 600;
                    {else}
                      color: var(--flin-color-gray-300);
                    {/if}
                  "
                >
                  {if isActive(item.href)}
                    <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                  {/if}
                  <svg class="w-5 h-5 transition-all duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                  </svg>
                  <span class="flex-1">{item.name}</span>
                </a>
              {/for}
            </div>

            <!-- Collapsible sections -->
            {for section in sections}
              <div class="mt-4 first:mt-0">
                <button
                  click={function() { toggleSection(section.id) }}
                  class="flex items-center justify-between w-full px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider hover:text-gray-300 transition-colors group"
                >
                  <span>{section.name}</span>
                  <svg
                    class="w-4 h-4 transition-transform duration-200"
                    style="transform: {openSection == section.id ? 'rotate(0deg)' : 'rotate(-90deg)'}"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                {if openSection == section.id}
                  <div class="space-y-0.5 mt-2">
                    {for item in section.items}
                      {if item.external}
                        <a
                          href={item.href}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 text-gray-300 hover:bg-slate-800/50 hover:text-white"
                        >
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                          </svg>
                          <span class="flex-1">{item.name}</span>
                          <svg class="w-3.5 h-3.5 text-gray-500 group-hover:text-gray-300 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                        </a>
                      {else}
                        <a
                          href={item.href}
                          class="group flex items-center gap-3 px-3 py-2.5 text-sm rounded-xl transition-all duration-200 relative"
                          style="
                            {if isActive(item.href)}
                              background: rgba(var(--flin-color-slate-800), 0.8);
                              box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                              border: 1px solid rgba(var(--flin-color-slate-700), 0.5);
                              color: var(--flin-color-primary-300);
                              font-weight: 600;
                            {else}
                              color: var(--flin-color-gray-300);
                            {/if}
                          "
                        >
                          {if isActive(item.href)}
                            <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                          {/if}
                          <svg class="w-5 h-5 transition-all duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                          </svg>
                          <span class="flex-1">{item.name}</span>
                        </a>
                      {/if}
                    {/for}
                  </div>
                {/if}
              </div>
            {/for}
          {else}
            <!-- Collapsed view with icons only -->
            <div class="space-y-1">
              {for item in directItems}
                <a
                  href={item.href}
                  class="group relative flex flex-col items-center justify-center w-full py-3.5 rounded-lg transition-all duration-200"
                  style="
                    {if isActive(item.href)}
                      background: rgba(var(--flin-color-slate-800), 0.8);
                      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                      border: 1px solid rgba(var(--flin-color-slate-700), 0.5);
                    {/if}
                  "
                  title={item.name}
                >
                  {if isActive(item.href)}
                    <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                  {/if}
                  <div class="mb-1.5 transition-all duration-200" style="color: {isActive(item.href) ? 'var(--flin-color-primary-400)' : 'var(--flin-color-gray-400)'}">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item.icon)} />
                    </svg>
                  </div>
                  <span class="text-[10px] font-medium text-center leading-tight truncate max-w-[56px] transition-colors duration-200" style="color: {isActive(item.href) ? 'var(--flin-color-primary-300)' : 'var(--flin-color-gray-400)'}; font-weight: {isActive(item.href) ? '600' : '500'};">
                    {item.name.split(" ")[0]}
                  </span>
                </a>
              {/for}

              <!-- Separator -->
              <div class="my-3 mx-2 border-t border-slate-700/60"></div>

              <!-- Section icons -->
              {for section in sections}
                <button
                  mouseenter={function() { openSection = section.id }}
                  mouseleave={function() { openSection = null }}
                  class="group relative flex flex-col items-center justify-center w-full py-3.5 rounded-lg transition-all duration-200 cursor-pointer"
                  style="
                    {if isSectionActive(section)}
                      background: rgba(var(--flin-color-slate-800), 0.8);
                      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                      border: 1px solid rgba(var(--flin-color-slate-700), 0.5);
                    {/if}
                  "
                  title={section.name}
                >
                  {if isSectionActive(section)}
                    <div class="absolute left-0 top-2 bottom-2 w-1 bg-[var(--flin-color-primary-400)] rounded-r-full"></div>
                  {/if}
                  <div class="mb-1.5 transition-all duration-200" style="color: {isSectionActive(section) ? 'var(--flin-color-primary-400)' : 'var(--flin-color-gray-400)'}">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(section.icon)} />
                    </svg>
                  </div>
                  <span class="text-[10px] font-medium text-center leading-tight truncate max-w-[56px] transition-colors duration-200" style="color: {isSectionActive(section) ? 'var(--flin-color-primary-300)' : 'var(--flin-color-gray-400)'}; font-weight: {isSectionActive(section) ? '600' : '500'};">
                    {section.label}
                  </span>
                </button>
              {/for}
            </div>
          {/if}
        </nav>

        <!-- Desktop Footer -->
        {if !collapsed}
          <div class="border-t border-slate-800 flex-shrink-0">
            <div class="px-4 py-3 bg-slate-800/30">
              <div class="flex items-center gap-2.5 text-xs">
                <div class="w-7 h-7 bg-gradient-to-br from-[var(--flin-color-primary-500)] to-[var(--flin-color-primary-600)] rounded-lg flex items-center justify-center shadow-sm">
                  <span class="text-[10px] font-bold text-white">0f</span>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-200">0fee.dev</p>
                  <p class="text-gray-500 text-[10px]">Zero-fee payments</p>
                </div>
                <span class="px-2 py-0.5 bg-[var(--flin-color-primary-900)]/50 text-[var(--flin-color-primary-400)] text-[10px] font-semibold rounded-md">
                  v1.45
                </span>
              </div>
            </div>
          </div>
        {/if}
      </div>
    </div>
  </div>
</component>
