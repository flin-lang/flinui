<!-- SidebarModern.flin - Modern sidebar with flyout menus and collapsible state -->

<component>
  collapsed = props.collapsed || false
  mobileOpen = false
  openSection = null
  openDropdown = null

  <!-- Direct navigation items (no flyout) -->
  directItems = [
    { name: "Dashboard", href: "/dashboard", icon: "dashboard" },
    { name: "Get Started", href: "/get-started", icon: "rocket" },
    { name: "Apps", href: "/apps", icon: "apps" },
    { name: "Fee Wallet", href: "/wallet", icon: "wallet" }
  ]

  <!-- Sections with flyout menus -->
  sections = [
    {
      id: "config",
      name: "Configuration",
      label: "Config",
      icon: "cog",
      items: [
        { name: "Teams", href: "/teams", icon: "team" },
        { name: "Payment Links", href: "/payment-links", icon: "link" },
        { name: "Countries", href: "/dashboard/countries", icon: "globe" },
        { name: "Payment Methods", href: "/dashboard/payment-methods-config", icon: "card" },
        { name: "Providers", href: "/dashboard/providers-config", icon: "building" }
      ]
    },
    {
      id: "payments",
      name: "Payments",
      label: "Payments",
      icon: "receipt",
      items: [
        { name: "Customers", href: "/customers", icon: "users" },
        { name: "Transactions", href: "/transactions", icon: "receipt" },
        { name: "Invoices", href: "/invoices", icon: "invoice" }
      ]
    },
    {
      id: "developer",
      name: "Developer",
      label: "Developer",
      icon: "terminal",
      items: [
        { name: "Developer Console", href: "/console", icon: "terminal" },
        { name: "SDKs", href: "/sdks", icon: "sdk" },
        { name: "Webhooks", href: "/webhooks", icon: "webhook" },
        { name: "Documentation", href: "/docs", icon: "book", external: true },
        { name: "OpenAPI Spec", href: "https://api.0fee.dev/docs", icon: "code", external: true },
        { name: "Feature Requests", href: "/feature-requests", icon: "lightbulb" }
      ]
    }
  ]

  <!-- Check if path is active -->
  isActive = function(href) {
    currentPath = window.location.pathname
    {if href == "/dashboard"}
      return currentPath == "/dashboard"
    {/if}
    return currentPath.startsWith(href)
  }

  <!-- Check if section has active item -->
  isSectionActive = function(section) {
    {for item in section.items}
      {if isActive(item.href)}
        return true
      {/if}
    {/for}
    return false
  }

  <!-- Toggle section -->
  toggleSection = function(sectionId) {
    {if openSection == sectionId}
      openSection = null
    {else}
      openSection = sectionId
    {/if}
  }

  <!-- Toggle dropdown -->
  toggleDropdown = function(sectionId) {
    {if openDropdown == sectionId}
      openDropdown = null
    {else}
      openDropdown = sectionId
    {/if}
  }

  <!-- Close mobile menu -->
  closeMobile = function() {
    mobileOpen = false
  }

