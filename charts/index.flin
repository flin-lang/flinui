//       title="Activity"
//   />
//
//   <RadarChart
//       data={[{ name: "Skills", values: [80, 90, 70, 85, 75] }]}
//       labels={["Speed", "Power", "Technique", "Stamina", "Mental"]}
//   />
//
//   <SparkLine data={[10, 15, 8, 20, 25, 18]} variant="success" />
//
// ============================================================================

