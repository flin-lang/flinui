    border-radius: var(--flin-radius-md);
    font-size: var(--flin-text-sm);
    line-height: 1.5;
    color: var(--flin-fg);
    cursor: pointer;
    transition: all var(--flin-transition-fast);
    user-select: none;
    -webkit-user-select: none;
    outline: none;
}

.menu-item:hover:not(.menu-item--disabled),
.menu-item--focused:not(.menu-item--disabled) {
    background-color: var(--flin-neutral-100);
}

.menu-item:active:not(.menu-item--disabled) {
    background-color: var(--flin-neutral-200);
}

/* Disabled item */
.menu-item--disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
}

/* Item elements */
.menu-item__icon {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--flin-fg-muted);
}

.menu-item__label {
    flex: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.menu-item__shortcut {
    flex-shrink: 0;
    font-size: var(--flin-text-xs);
    color: var(--flin-fg-muted);
    font-family: var(--flin-font-mono);
    background-color: var(--flin-neutral-100);
    padding: 2px 6px;
    border-radius: var(--flin-radius-sm);
}

/* Divider */
.menu-divider {
    height: 1px;
    background-color: var(--flin-neutral-200);
    margin: var(--flin-space-1) 0;
}

/* Focus styling */
.flin-menu:focus {
    outline: none;
}

.menu-item:focus-visible {
    background-color: var(--flin-neutral-100);
    box-shadow: 0 0 0 2px var(--flin-primary);
}

/* Dark theme support */
[data-theme="dark"] .flin-menu {
    background-color: var(--flin-neutral-800);
    border-color: var(--flin-neutral-700);
}

[data-theme="dark"] .menu-item:hover:not(.menu-item--disabled),
[data-theme="dark"] .menu-item--focused:not(.menu-item--disabled) {
    background-color: var(--flin-neutral-700);
}

[data-theme="dark"] .menu-item:active:not(.menu-item--disabled) {
    background-color: var(--flin-neutral-600);
}

[data-theme="dark"] .menu-item__shortcut {
    background-color: var(--flin-neutral-700);
}

[data-theme="dark"] .menu-divider {
    background-color: var(--flin-neutral-700);
