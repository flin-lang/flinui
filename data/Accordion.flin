    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--flin-space-4);
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: inherit;
    transition: background-color var(--flin-transition-fast);
}

.flin-accordion__header:hover {
    background-color: var(--flin-neutral-50);
}

.flin-accordion__header:focus {
    outline: 2px solid var(--flin-primary);
    outline-offset: -2px;
}

.flin-accordion__title {
    font-size: var(--flin-text-base);
    font-weight: 600;
    color: var(--flin-fg);
}

.flin-accordion__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    color: var(--flin-fg-muted);
    transition: transform var(--flin-transition-normal);
}

.flin-accordion__icon svg {
    width: 100%;
    height: 100%;
}

.flin-accordion--open .flin-accordion__icon {
    transform: rotate(180deg);
}

.flin-accordion__content {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows var(--flin-transition-normal);
}

.flin-accordion--open .flin-accordion__content {
    grid-template-rows: 1fr;
}

.flin-accordion__body {
    overflow: hidden;
}

.flin-accordion--open .flin-accordion__body {
    padding: 0 var(--flin-space-4) var(--flin-space-4);
}

/* Border top for content when open */
.flin-accordion--open .flin-accordion__content::before {
    content: "";
    display: block;
    height: 1px;
    background-color: var(--flin-neutral-200);
    margin: 0 var(--flin-space-4);
}

/* Dark theme support */
[data-theme="dark"] .flin-accordion {
    border-color: var(--flin-neutral-700);
}

[data-theme="dark"] .flin-accordion__header:hover {
    background-color: var(--flin-neutral-800);
