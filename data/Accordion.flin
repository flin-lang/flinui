// FlinUI Accordion Component
// Expandable/collapsible content section with title and toggle

// Props with defaults
title = props.title || "Accordion"
defaultOpen = props.defaultOpen || false

// Internal state for open/close
isOpen = defaultOpen

// Toggle function that also calls onToggle prop if provided
toggleAccordion = {
    isOpen = !isOpen;
    if props.onToggle {
        props.onToggle(isOpen)
    }
}

<div class="flin-accordion {if isOpen { 'flin-accordion--open' }}">
    <button class="flin-accordion__header"
            type="button"
            aria-expanded={isOpen}
            click={toggleAccordion}>
        <span class="flin-accordion__title">{title}</span>
        <span class="flin-accordion__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 9l-7 7-7-7" />
            </svg>
        </span>
    </button>

    <div class="flin-accordion__content">
        <div class="flin-accordion__body">
            {children}
        </div>
    </div>
</div>

<style scoped>
.flin-accordion {
    border: 1px solid var(--flin-neutral-200);
    border-radius: var(--flin-radius-lg);
    background-color: var(--flin-bg);
