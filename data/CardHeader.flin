// FlinUI CardHeader Component
// Header section for Card component with title, subtitle, avatar and action slots

// Props with defaults
title = props.title || ""
subtitle = props.subtitle || ""
size = props.size || "md"

// Size-based styling
titleClass = match size {
    "sm" -> "flin-card-header--sm"
    "lg" -> "flin-card-header--lg"
    _ -> ""
}

<div class={"flin-card-header " ++ titleClass}>
    <div class="flin-card-header__avatar">
        <slot name="avatar" />
    </div>
    <div class="flin-card-header__content">
        <h3 class="flin-card-header__title">
            <slot name="title">
                {if title != ""}{title}{/if}
            </slot>
        </h3>
        <p class="flin-card-header__subtitle">
            <slot name="subtitle">
                {if subtitle != ""}{subtitle}{/if}
            </slot>
        </p>
        <slot />
    </div>
    <div class="flin-card-header__actions">
        <slot name="actions" />
    </div>
</div>

<style scoped>
