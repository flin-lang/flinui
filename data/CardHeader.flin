    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--flin-space-3);
    padding-bottom: var(--flin-space-4);
    border-bottom: 1px solid var(--flin-neutral-200);
    margin-bottom: var(--flin-space-4);
}

.flin-card-header__avatar {
    flex-shrink: 0;
}

.flin-card-header__avatar:empty {
    display: none;
}

.flin-card-header__content {
    flex: 1;
    min-width: 0;
}

.flin-card-header__title {
    font-size: var(--flin-text-lg);
    font-weight: var(--flin-font-semibold);
    color: var(--flin-fg);
    margin: 0;
    line-height: var(--flin-leading-snug);
}

.flin-card-header__title:empty {
    display: none;
}

.flin-card-header__subtitle {
    font-size: var(--flin-text-sm);
    color: var(--flin-fg-muted);
    margin: var(--flin-space-1) 0 0 0;
    line-height: var(--flin-leading-normal);
}

.flin-card-header__subtitle:empty {
    display: none;
}

.flin-card-header__actions {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: var(--flin-space-2);
}

.flin-card-header__actions:empty {
    display: none;
}

/* Size variants */
.flin-card-header--sm .flin-card-header__title {
    font-size: var(--flin-text-base);
}

.flin-card-header--sm .flin-card-header__subtitle {
    font-size: var(--flin-text-xs);
}

.flin-card-header--lg .flin-card-header__title {
    font-size: var(--flin-text-xl);
}

.flin-card-header--lg .flin-card-header__subtitle {
    font-size: var(--flin-text-base);
}

/* Dark theme support */
[data-theme="dark"] .flin-card-header {
    border-bottom-color: var(--flin-neutral-700);
}
</style>
