    {/if}

    <h3 class="flin-empty__title">{title}</h3>

    {if description != ""}
        <p class="flin-empty__description">{description}</p>
    {/if}

    {if children}
        <div class="flin-empty__action">
            {children}
        </div>
    {/if}
</div>

