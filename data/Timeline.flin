    color: var(--flin-error);
}

.flin-timeline__status--info {
    background-color: var(--flin-info-bg);
    color: var(--flin-info);
}

/* Empty state */
.flin-timeline:empty::after {
    content: "No timeline events";
    display: block;
    text-align: center;
    padding: var(--flin-space-8);
    color: var(--flin-fg-muted);
    font-size: var(--flin-text-sm);
}

/* Dark theme support */
[data-theme="dark"] .flin-timeline__item::before {
    background-color: var(--flin-neutral-700);
}

[data-theme="dark"] .flin-timeline__marker {
    background-color: var(--flin-neutral-900);
}

[data-theme="dark"] .flin-timeline__status--success {
    background-color: rgba(34, 197, 94, 0.15);
}

[data-theme="dark"] .flin-timeline__status--warning {
    background-color: rgba(251, 191, 36, 0.15);
}

[data-theme="dark"] .flin-timeline__status--error {
    background-color: rgba(239, 68, 68, 0.15);
}

[data-theme="dark"] .flin-timeline__status--info {
    background-color: rgba(59, 130, 246, 0.15);
}

/* Responsive behavior */
@media (max-width: 640px) {
    /* Disable alternating on small screens */
    .flin-timeline--alternating .flin-timeline__item--right {
        flex-direction: row;
        padding-left: var(--flin-space-8);
        padding-right: 0;
    }

    .flin-timeline--alternating .flin-timeline__item--right .flin-timeline__content {
        text-align: left;
    }

    .flin-timeline--alternating .flin-timeline__item--right::before {
        left: 15px;
        right: auto;
    }

