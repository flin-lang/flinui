// FlinUI Timeline Component
// An event timeline component for displaying chronological events

// Props with defaults
variant = props.variant || "vertical"
alternating = props.alternating || false

// Build timeline class
alternatingClass = match alternating { true -> " flin-timeline--alternating", _ -> "" }
timelineClass = "flin-timeline flin-timeline--" ++ variant ++ alternatingClass

<div class={timelineClass}>
    <slot></slot>
</div>

<style scoped>
.flin-timeline {
    position: relative;
    padding: var(--flin-space-4) 0;
}

/* Vertical variant (default) */
.flin-timeline--vertical {
    display: flex;
    flex-direction: column;
    gap: var(--flin-space-6);
}

/* Horizontal variant */
.flin-timeline--horizontal {
    display: flex;
    flex-direction: row;
    gap: var(--flin-space-6);
    overflow-x: auto;
    padding-bottom: var(--flin-space-2);
}

/* Timeline item */
.flin-timeline__item {
    position: relative;
    display: flex;
    gap: var(--flin-space-4);
    align-items: flex-start;
}

/* Vertical layout */
.flin-timeline--vertical .flin-timeline__item {
    padding-left: var(--flin-space-8);
}

/* Alternating layout */
.flin-timeline--alternating .flin-timeline__item--right {
    flex-direction: row-reverse;
    padding-left: 0;
    padding-right: var(--flin-space-8);
}

.flin-timeline--alternating .flin-timeline__item--right .flin-timeline__content {
    text-align: right;
}

/* Horizontal layout */
.flin-timeline--horizontal .flin-timeline__item {
    flex-direction: column;
    min-width: 250px;
    padding-left: 0;
}

/* Timeline marker (dot/icon container) */
.flin-timeline__marker {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    background-color: var(--flin-bg);
    border: 2px solid var(--timeline-status-color, var(--flin-primary));
    border-radius: 50%;
    z-index: 2;
}

/* Timeline dot */
.flin-timeline__dot {
    width: 12px;
    height: 12px;
    background-color: var(--timeline-status-color, var(--flin-primary));
    border-radius: 50%;
}

/* Timeline icon */
.flin-timeline__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--flin-text-sm);
    color: var(--timeline-status-color, var(--flin-primary));
}

/* Connecting line - Vertical */
.flin-timeline--vertical .flin-timeline__item::before {
    content: "";
    position: absolute;
    left: 15px;
    top: 32px;
    bottom: -24px;
    width: 2px;
    background-color: var(--flin-neutral-200);
    z-index: 1;
}

/* Last item - no line */
.flin-timeline--vertical .flin-timeline__item:last-child::before {
    display: none;
}

/* Alternating right items */
.flin-timeline--alternating .flin-timeline__item--right::before {
    left: auto;
    right: 15px;
}

/* Connecting line - Horizontal */
.flin-timeline--horizontal .flin-timeline__item::before {
    content: "";
    position: absolute;
    left: 32px;
    top: 15px;
    right: -24px;
    height: 2px;
    background-color: var(--flin-neutral-200);
    z-index: 1;
}

.flin-timeline--horizontal .flin-timeline__item:last-child::before {
    display: none;
}

