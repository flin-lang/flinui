.flin-timeline__content {
    flex: 1;
    padding-top: 4px;
}

.flin-timeline--horizontal .flin-timeline__content {
    padding-top: var(--flin-space-2);
}

/* Date */
.flin-timeline__date {
    font-size: var(--flin-text-xs);
    color: var(--flin-fg-muted);
    margin-bottom: var(--flin-space-1);
    font-weight: 500;
}

/* Title */
.flin-timeline__title {
    font-size: var(--flin-text-base);
    font-weight: 600;
    color: var(--flin-fg);
    margin: 0 0 var(--flin-space-2) 0;
    line-height: 1.4;
}

/* Description */
.flin-timeline__description {
    font-size: var(--flin-text-sm);
    color: var(--flin-fg-muted);
    margin: 0 0 var(--flin-space-2) 0;
    line-height: 1.5;
}

/* Status badge */
.flin-timeline__status {
    display: inline-block;
    padding: var(--flin-space-1) var(--flin-space-2);
    font-size: var(--flin-text-xs);
    font-weight: 600;
    border-radius: var(--flin-radius-md);
    text-transform: capitalize;
