        }

        @media (max-width: 640px) {
            .two-column {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <div class="card-field">
        <label class="field-label">Card Number</label>
        <div class="input-wrapper">
            <input
                type="text"
                class="card-input {sizeClass} {if cardNumber.length > 0}{if cardValid}valid{else}invalid{/if}{/if}"
                placeholder="1234 5678 9012 3456"
                value={cardNumber}
                input={(e) => handleCardInput(e.target.value)}
                focus={() => focusedField = "card"}
                blur={() => focusedField = "none"}
                disabled={disabled}
                autocomplete="cc-number"
            />
            <div class="card-brand-icon">
                {if cardBrand != "unknown"}
                    <div class="brand-logo">
                        {if cardBrand == "visa"}VISA{/if}
                        {if cardBrand == "mastercard"}MC{/if}
                        {if cardBrand == "amex"}AMEX{/if}
                        {if cardBrand == "discover"}DISC{/if}
                        {if cardBrand == "generic"}ðŸ’³{/if}
                    </div>
                {/if}
                {if cardValid}
                    <span class="valid-icon">âœ“</span>
                {/if}
            </div>
        </div>
    </div>

    <div class="two-column">
        <div class="card-field">
            <label class="field-label">Expiry Date</label>
            <input
                type="text"
                class="card-input {sizeClass} {if expiryDate.length > 0}{if expiryValid}valid{else}invalid{/if}{/if}"
                placeholder="MM/YY"
                value={expiryDate}
                input={(e) => handleExpiryInput(e.target.value)}
                focus={() => focusedField = "expiry"}
                blur={() => focusedField = "none"}
                disabled={disabled}
                autocomplete="cc-exp"
            />
        </div>

        <div class="card-field">
            <label class="field-label">
                CVV
                <span class="cvv-tooltip">?</span>
            </label>
            <input
                type="password"
                class="card-input {sizeClass} {if cvvCode.length > 0}{if cvvValid}valid{else}invalid{/if}{/if}"
                placeholder={cardBrand == "amex" ? "1234" : "123"}
                value={cvvCode}
                input={(e) => handleCVVInput(e.target.value)}
                focus={() => focusedField = "cvv"}
                blur={() => focusedField = "none"}
                disabled={disabled}
                autocomplete="cc-csc"
            />
        </div>
