// CreditCardInput.flin - FlinUI PRO Credit Card Input Component
// Specialized input with auto-formatting and validation

// Props with defaults
value = props.value || ""
onCardChange = props.onCardChange
onExpiryChange = props.onExpiryChange
onCVVChange = props.onCVVChange
disabled = props.disabled || false
size = props.size || "md"

// Card state
cardNumber = ""
expiryDate = ""
cvvCode = ""
cardBrand = "unknown"
focusedField = "none"

// Validation states
cardValid = false
expiryValid = false
cvvValid = false

// Card brand detection
function detectCardBrand(number) {
    clean = number.replace(" ", "")

    {if clean.startsWith("4")}
        return "visa"
    {else if clean.startsWith("51") || clean.startsWith("52") || clean.startsWith("53") || clean.startsWith("54") || clean.startsWith("55")}
        return "mastercard"
    {else if clean.startsWith("34") || clean.startsWith("37")}
        return "amex"
    {else if clean.startsWith("6011") || clean.startsWith("65")}
        return "discover"
    {else if clean.length >= 2}
        return "generic"
    {else}
        return "unknown"
    {/if}
}

// Format card number (4-digit groups)
function formatCardNumber(input) {
    digits = input.replace("[^0-9]", "")
    maxLength = cardBrand == "amex" ? 15 : 16
    digits = digits.substring(0, maxLength)

    formatted = ""
    i = 0
    {for char in digits}
        {if i > 0 && i % 4 == 0}
            formatted = formatted ++ " "
        {/if}
        formatted = formatted ++ char
        i = i + 1
    {/for}

    return formatted
}

// Format expiry (MM/YY)
function formatExpiry(input) {
    digits = input.replace("[^0-9]", "").substring(0, 4)

    {if digits.length >= 2}
        month = digits.substring(0, 2)
        year = digits.substring(2)
        return month ++ "/" ++ year
    {else}
        return digits
    {/if}
}

// Validate card number (basic Luhn check)
function validateCard(number) {
    clean = number.replace(" ", "")
    return clean.length >= 13 && clean.length <= 19
}

// Validate expiry
function validateExpiry(expiry) {
    parts = expiry.split("/")
    {if parts.length != 2}
        return false
    {/if}

    month = parseInt(parts[0])
    year = parseInt(parts[1])

    return month >= 1 && month <= 12 && year >= 24 && year <= 35
}

// Validate CVV
function validateCVV(cvv) {
    expectedLength = cardBrand == "amex" ? 4 : 3
    return cvv.length == expectedLength
}

// Handle card number input
function handleCardInput(value) {
    cardNumber = formatCardNumber(value)
    cardBrand = detectCardBrand(cardNumber)
    cardValid = validateCard(cardNumber)

    {if onCardChange}
        onCardChange({
            value: cardNumber,
            brand: cardBrand,
            valid: cardValid
        })
    {/if}
}

// Handle expiry input
function handleExpiryInput(value) {
    expiryDate = formatExpiry(value)
    expiryValid = validateExpiry(expiryDate)

    {if onExpiryChange}
        onExpiryChange({
            value: expiryDate,
            valid: expiryValid
        })
    {/if}
}

// Handle CVV input
function handleCVVInput(value) {
    maxLength = cardBrand == "amex" ? 4 : 3
    cvvCode = value.replace("[^0-9]", "").substring(0, maxLength)
    cvvValid = validateCVV(cvvCode)

    {if onCVVChange}
        onCVVChange({
            value: cvvCode,
            valid: cvvValid
        })
    {/if}
}

sizeClass = match size {
    "sm" -> "input-sm"
    "lg" -> "input-lg"
    _ -> "input-md"
}

<div class="credit-card-input">
