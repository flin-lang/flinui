// ProductBundleOffer.flin - FlinUI PRO E-commerce Component
// Multi-product bundle with discount visualization and add to cart

// Props with defaults
products = props.products || []
bundleTitle = props.bundleTitle || "Starter Bundle"
bundleImage = props.bundleImage || none
bundleSavingsPercent = props.bundleSavingsPercent || 20
onAddToCart = props.onAddToCart
currency = props.currency || "$"
highlighted = props.highlighted || false

// State
none

// Computed values
hasProducts = products.length > 0

totalPrice = products.reduce((sum, product) => {
    sum + (product.price || 0)
}, 0)

bundlePrice = totalPrice * (1 - (bundleSavingsPercent / 100))
savings = totalPrice - bundlePrice

formattedTotalPrice = currency ++ totalPrice
formattedBundlePrice = currency ++ bundlePrice
formattedSavings = currency ++ savings

perItemSavings = savings / products.length

// Handlers
fn handleAddBundleToCart() {
    {if onAddToCart != none}
        onAddToCart({
            products: products,
            bundlePrice: bundlePrice,
            savings: savings
        })
    {/if}
}

<div class={"product-bundle-offer" ++ {if highlighted} " product-bundle-offer-highlighted" {else} "" {/if}}>
    {if highlighted}
        <div class="product-bundle-offer-spotlight">
            <span class="product-bundle-offer-spotlight-text">BEST DEAL</span>
        </div>
    {/if}

    <div class="product-bundle-offer-header">
        <h2 class="product-bundle-offer-title">{bundleTitle}</h2>
        <div class="product-bundle-offer-savings-badge">
            <span class="product-bundle-offer-savings-icon">üéÅ</span>
            <span class="product-bundle-offer-savings-text">Save {bundleSavingsPercent}%</span>
        </div>
    </div>

    {if bundleImage != none}
        <div class="product-bundle-offer-image">
            <img src={bundleImage} alt={bundleTitle} />
        </div>
    {/if}

    {if hasProducts}
        <div class="product-bundle-offer-items">
            {for product in products}
                <div class="product-bundle-offer-item" key={product.id}>
                    <div class="product-bundle-offer-item-image">
                        <img src={product.image || ""} alt={product.name || "Product"} />
                    </div>
                    <div class="product-bundle-offer-item-content">
                        <h3 class="product-bundle-offer-item-name">{product.name || "Product Name"}</h3>
                        <p class="product-bundle-offer-item-description">{product.description || ""}</p>
                        <div class="product-bundle-offer-item-pricing">
                            <span class="product-bundle-offer-item-price">{currency}{product.price || 0}</span>
                            {if product.originalPrice != none && product.originalPrice > product.price}
                                <span class="product-bundle-offer-item-original">{currency}{product.originalPrice}</span>
                            {/if}
                        </div>
                    </div>
                    <div class="product-bundle-offer-item-plus">+</div>
                </div>
            {/for}
        </div>

        <div class="product-bundle-offer-divider"></div>

        <div class="product-bundle-offer-pricing">
            <div class="product-bundle-offer-pricing-row">
                <span class="product-bundle-offer-pricing-label">Subtotal ({products.length} items)</span>
                <span class="product-bundle-offer-pricing-value product-bundle-offer-pricing-original">
                    <span class="product-bundle-offer-pricing-strikethrough">{formattedTotalPrice}</span>
                </span>
            </div>

            <div class="product-bundle-offer-pricing-row">
                <span class="product-bundle-offer-pricing-label">Bundle Discount</span>
                <span class="product-bundle-offer-pricing-value product-bundle-offer-pricing-discount">
                    -{formattedSavings}
                </span>
            </div>

            <div class="product-bundle-offer-pricing-divider"></div>

            <div class="product-bundle-offer-pricing-row product-bundle-offer-pricing-total">
                <span class="product-bundle-offer-pricing-label">Bundle Price</span>
                <span class="product-bundle-offer-pricing-value product-bundle-offer-pricing-final">
                    {formattedBundlePrice}
                </span>
            </div>

            <div class="product-bundle-offer-pricing-breakdown">
                <span class="product-bundle-offer-pricing-per-item">
                    {currency}{(bundlePrice / products.length)} per item
                </span>
            </div>
        </div>

        <button class="product-bundle-offer-cta" click={handleAddBundleToCart}>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            <span>Add Bundle to Cart</span>
            <span class="product-bundle-offer-cta-savings">(Save {formattedSavings})</span>
        </button>

        <p class="product-bundle-offer-trust">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <span>30-day money-back guarantee</span>
        </p>
    {else}
        <div class="product-bundle-offer-empty">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 2H3v6h6V2z"/>
                <path d="M21 2h-6v6h6V2z"/>
                <path d="M9 14H3v6h6v-6z"/>
                <path d="M21 14h-6v6h6v-6z"/>
            </svg>
            <p>No bundle items available</p>
        </div>
    {/if}
</div>

