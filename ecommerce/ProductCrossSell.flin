// ProductCrossSell.flin - FlinUI PRO E-commerce Component
// "Complete Your Setup" display with complementary products and batch add

// Props with defaults
products = props.products || []
title = props.title || "Complete Your Setup"
description = props.description || "Add complementary products to enhance your purchase"
onAddToCart = props.onAddToCart
onAddMultiple = props.onAddMultiple
currency = props.currency || "$"
maxProducts = props.maxProducts || 4

// State
selectedProducts = []
expandedProduct = none

// Computed values
visibleProducts = products.slice(0, maxProducts)
hasProducts = products.length > 0
selectedCount = selectedProducts.length
selectedTotal = selectedProducts.reduce((sum, productId) => {
    product = products.find(p => p.id == productId)
    {if product != none}
        sum = sum + product.price
    {/if}
    sum
}, 0)

// Handlers
fn toggleProductSelection(productId) {
    {if selectedProducts.includes(productId)}
        selectedProducts = selectedProducts.filter(id => id != productId)
    {else}
        selectedProducts = [...selectedProducts, productId]
    {/if}
}

fn isProductSelected(productId) {
    selectedProducts.includes(productId)
}

fn handleAddSingle(product) {
    {if onAddToCart != none}
        onAddToCart(product)
    {/if}
}

fn handleAddMultiple() {
    {if onAddMultiple != none && selectedCount > 0}
        productsToAdd = products.filter(p => selectedProducts.includes(p.id))
        onAddMultiple(productsToAdd)
        selectedProducts = []
    {/if}
}

fn toggleExpanded(productId) {
    {if expandedProduct == productId}
        expandedProduct = none
    {else}
        expandedProduct = productId
    {/if}
}

<div class="product-cross-sell">
    <div class="product-cross-sell-header">
        <div>
            <h2 class="product-cross-sell-title">{title}</h2>
            <p class="product-cross-sell-description">{description}</p>
        </div>
    </div>

    {if hasProducts}
        <div class="product-cross-sell-grid">
            {for product in visibleProducts}
                <div class="product-cross-sell-item" key={product.id}>
                    <div class="product-cross-sell-card">
                        <div class="product-cross-sell-checkbox-wrapper">
                            <input
                                type="checkbox"
                                class="product-cross-sell-checkbox"
                                checked={isProductSelected(product.id)}
                                change={() => toggleProductSelection(product.id)}
                                id={"product-" ++ product.id}
                            />
                            <label class="product-cross-sell-checkbox-label" for={"product-" ++ product.id}></label>
                        </div>

                        <div class="product-cross-sell-image-wrapper">
                            <img
                                src={product.image || ""}
                                alt={product.name || "Product"}
                                class="product-cross-sell-image"
                            />
                            {if product.discount != none && product.discount > 0}
                                <div class="product-cross-sell-discount-badge">-{product.discount}%</div>
                            {/if}
                        </div>

                        <div class="product-cross-sell-content">
                            <h3 class="product-cross-sell-name">{product.name || "Product Name"}</h3>

                            {if product.description != ""}
                                <p class="product-cross-sell-short-desc">{product.description}</p>
                            {/if}

                            <div class="product-cross-sell-specs">
                                {for spec in product.specs || []}
                                    <div class="product-cross-sell-spec">
                                        <span class="product-cross-sell-spec-label">{spec.label}:</span>
                                        <span class="product-cross-sell-spec-value">{spec.value}</span>
                                    </div>
                                {/for}
                            </div>

                            <div class="product-cross-sell-pricing">
                                {if product.salePrice != none && product.salePrice < product.price}
                                    <span class="product-cross-sell-sale-price">{currency}{product.salePrice}</span>
                                    <span class="product-cross-sell-original-price">{currency}{product.price}</span>
                                {else}
                                    <span class="product-cross-sell-sale-price">{currency}{product.price}</span>
                                {/if}
                            </div>

                            <div class="product-cross-sell-actions">
                                <button
                                    class="product-cross-sell-expand-btn"
                                    click={() => toggleExpanded(product.id)}
                                    aria-label="Details"
                                >
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="1"/>
                                        <circle cx="19" cy="12" r="1"/>
                                        <circle cx="5" cy="12" r="1"/>
                                    </svg>
                                </button>

                                <button
                                    class="product-cross-sell-add-btn"
                                    click={() => handleAddSingle(product)}
                                >
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="9" cy="21" r="1"/>
                                        <circle cx="20" cy="21" r="1"/>
                                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>

                    {if expandedProduct == product.id}
                        <div class="product-cross-sell-expanded">
                            <div class="product-cross-sell-expanded-content">
                                <h4>Details</h4>
                                <p>{product.fullDescription || "No additional details"}</p>
                                {if product.features != ""}
                                    <div class="product-cross-sell-features">
                                        <h5>Key Features:</h5>
                                        <ul>
                                            {for feature in product.features || []}
                                                <li>{feature}</li>
                                            {/for}
                                        </ul>
                                    </div>
                                {/if}
                            </div>
                        </div>
                    {/if}
                </div>
            {/for}
        </div>

        {if hasProducts}
            <div class="product-cross-sell-footer">
                <div class="product-cross-sell-summary">
                    <span class="product-cross-sell-summary-label">Selected: {selectedCount} item{if selectedCount != 1}s{/if}</span>
                    {if selectedCount > 0}
                        <span class="product-cross-sell-summary-total">{currency}{selectedTotal}</span>
                    {/if}
                </div>

                <button
                    class="product-cross-sell-add-all-btn"
                    click={handleAddMultiple}
                    disabled={selectedCount == 0}
                >
                    {if selectedCount > 0}
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    {else}
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 5v14M5 12h14"/>
                        </svg>
                    {/if}
                    {if selectedCount > 0}
                        Add {selectedCount} to Cart
                    {else}
                        Select items
                    {/if}
                </button>
            </div>
        {/if}
    {else}
        <div class="product-cross-sell-empty">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                <line x1="3" y1="6" x2="21" y2="6"/>
                <path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            <p>No complementary products available</p>
        </div>
    {/if}
</div>

