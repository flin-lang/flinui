// ProductFrequentlyBought.flin - FlinUI PRO E-commerce Component
// "Frequently Bought Together" with checkbox selection and total price calculator

// Props with defaults
products = props.products || []
title = props.title || "Frequently Bought Together"
subtitle = props.subtitle || "Complete your purchase with these popular items"
onAddMultiple = props.onAddMultiple
currency = props.currency || "$"

// State
selectedProducts = []

// Computed values
hasProducts = products.length > 0

selectedCount = selectedProducts.length
selectedTotal = selectedProducts.reduce((sum, productId) => {
    product = products.find(p => p.id == productId)
    {if product != none}
        sum = sum + (product.price || 0)
    {/if}
    sum
}, 0)

totalIfAll = products.reduce((sum, product) => {
    sum + (product.price || 0)
}, 0)

// Price formatting
formattedSelectedTotal = currency ++ selectedTotal
formattedTotalIfAll = currency ++ totalIfAll

// Handlers
fn toggleProductSelection(productId) {
    {if selectedProducts.includes(productId)}
        selectedProducts = selectedProducts.filter(id => id != productId)
    {else}
        selectedProducts = [...selectedProducts, productId]
    {/if}
}

fn selectAll() {
    selectedProducts = products.map(p => p.id)
}

fn deselectAll() {
    selectedProducts = []
}

fn isProductSelected(productId) {
    selectedProducts.includes(productId)
}

fn handleAddAllSelected() {
    {if onAddMultiple != none && selectedCount > 0}
        productsToAdd = products.filter(p => selectedProducts.includes(p.id))
        onAddMultiple(productsToAdd)
        selectedProducts = []
    {/if}
}

<div class="product-frequently-bought">
    <div class="product-frequently-bought-header">
        <div>
            <h2 class="product-frequently-bought-title">{title}</h2>
            {if subtitle != ""}
                <p class="product-frequently-bought-subtitle">{subtitle}</p>
            {/if}
        </div>
        <div class="product-frequently-bought-select-controls">
            {if hasProducts}
                <button
                    class="product-frequently-bought-select-btn"
                    click={selectAll}
                >
                    Select All
                </button>
                <button
                    class="product-frequently-bought-select-btn product-frequently-bought-select-btn-secondary"
                    click={deselectAll}
                >
                    Clear
                </button>
            {/if}
        </div>
    </div>

    {if hasProducts}
        <div class="product-frequently-bought-list">
            {for product in products}
                <div class="product-frequently-bought-item" key={product.id}>
                    <div class="product-frequently-bought-checkbox-wrapper">
                        <input
                            type="checkbox"
                            class="product-frequently-bought-checkbox"
                            checked={isProductSelected(product.id)}
                            change={() => toggleProductSelection(product.id)}
                            id={"product-" ++ product.id}
                        />
                        <label class="product-frequently-bought-checkbox-label" for={"product-" ++ product.id}></label>
                    </div>

                    <div class="product-frequently-bought-image">
                        <img src={product.image || ""} alt={product.name || "Product"} />
                    </div>

                    <div class="product-frequently-bought-details">
                        <div class="product-frequently-bought-info">
                            <h3 class="product-frequently-bought-name">{product.name || "Product Name"}</h3>
                            {if product.description != ""}
                                <p class="product-frequently-bought-description">{product.description}</p>
                            {/if}

                            {if product.rating != none}
                                <div class="product-frequently-bought-rating">
                                    <div class="product-frequently-bought-stars">
                                        {for i in [1, 2, 3, 4, 5]}
                                            {if i <= product.rating}
                                                <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor" class="star-filled">
                                                    <polygon points="12 2 15.09 10.26 24 10.26 17.55 15.91 19.64 24 12 19.35 4.36 24 6.45 15.91 0 10.26 8.91 10.26"/>
                                                </svg>
                                            {else}
                                                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="star-empty">
                                                    <polygon points="12 2 15.09 10.26 24 10.26 17.55 15.91 19.64 24 12 19.35 4.36 24 6.45 15.91 0 10.26 8.91 10.26"/>
                                                </svg>
                                            {/if}
                                        {/for}
                                    </div>
                                    <span class="product-frequently-bought-reviews">({product.reviews || 0} reviews)</span>
                                </div>
                            {/if}

                            {if product.specs != none && product.specs.length > 0}
                                <div class="product-frequently-bought-specs">
                                    {for spec in product.specs}
                                        <span class="product-frequently-bought-spec-badge">{spec}</span>
                                    {/for}
                                </div>
                            {/if}
                        </div>

                        <div class="product-frequently-bought-pricing">
                            {if product.salePrice != none && product.salePrice < product.price}
                                <div class="product-frequently-bought-price-container">
                                    <span class="product-frequently-bought-sale-price">{currency}{product.salePrice}</span>
                                    <span class="product-frequently-bought-original-price">{currency}{product.price}</span>
                                </div>
                            {else}
                                <span class="product-frequently-bought-sale-price">{currency}{product.price || 0}</span>
                            {/if}

                            {if product.discount != none && product.discount > 0}
                                <span class="product-frequently-bought-discount-badge">-{product.discount}%</span>
                            {/if}
                        </div>
                    </div>
                </div>
            {/for}
        </div>

        <div class="product-frequently-bought-summary">
            <div class="product-frequently-bought-summary-item">
                <div class="product-frequently-bought-summary-label">Selected</div>
                <div class="product-frequently-bought-summary-value">{selectedCount} of {products.length}</div>
            </div>

            <div class="product-frequently-bought-summary-item">
                <div class="product-frequently-bought-summary-label">Total</div>
                <div class="product-frequently-bought-summary-value product-frequently-bought-summary-total">
                    {formattedSelectedTotal}
                </div>
            </div>

            {if selectedCount > 0}
                <div class="product-frequently-bought-summary-item product-frequently-bought-summary-savings">
                    <div class="product-frequently-bought-summary-label">Save</div>
                    <div class="product-frequently-bought-summary-value product-frequently-bought-savings-amount">
                        {if selectedCount == products.length}
                            {if totalIfAll > selectedTotal}
                                {currency}{(totalIfAll - selectedTotal).toFixed(2)}
                            {else}
                                {currency}0
                            {/if}
                        {else}
                            Varies
                        {/if}
                    </div>
                </div>
            {/if}
        </div>

        <button
            class="product-frequently-bought-cta"
            click={handleAddAllSelected}
            disabled={selectedCount == 0}
        >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            <span>
                {if selectedCount > 0}
                    Add {selectedCount} Item{if selectedCount != 1}s{/if} to Cart
                {else}
                    Select Items
                {/if}
            </span>
        </button>
    {else}
        <div class="product-frequently-bought-empty">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            <p>No frequently bought items</p>
        </div>
    {/if}
</div>

