// ProductQuickView.flin - FlinUI PRO E-commerce Component
// Modal quick view with essential product info, add to cart, and view details link

// Props with defaults
image = props.image || ""
name = props.name || "Product Name"
description = props.description || ""
price = props.price || 0
originalPrice = props.originalPrice || none
rating = props.rating || 0
reviews = props.reviews || 0
inStock = props.inStock || true
onClose = props.onClose
onAddToCart = props.onAddToCart
onViewDetails = props.onViewDetails
size = props.size || "md"

// State
quantity = 1
isOpen = props.isOpen || false

// Computed values
hasDiscount = originalPrice != none && originalPrice > price
discountPercent = if hasDiscount then {
    ((originalPrice - price) / originalPrice * 100).toFixed(0)
} else {
    0
}
formattedPrice = "$" ++ price
formattedOriginal = if hasDiscount then "$" ++ originalPrice else ""
hasRating = rating > 0

// Handlers
fn handleQuantityChange(newQty) {
    if newQty > 0 && newQty <= 99 {
        quantity = newQty
    }
}

fn handleAddToCart() {
    if onAddToCart {
        onAddToCart({ quantity, name, price })
    }
}

fn handleViewDetails() {
    if onViewDetails {
        onViewDetails()
    }
    if onClose {
        onClose()
    }
}

fn handleClose() {
    if onClose {
        onClose()
    }
}

// Size class
sizeClass = match size {
    "sm" -> "quick-view-sm"
    "lg" -> "quick-view-lg"
    _ -> "quick-view-md"
}

{if isOpen}
    <div class="quick-view-overlay" click={handleClose}>
        <div class="quick-view-modal {sizeClass}" click={fn(e) { e.stopPropagation() }}>
            <button class="quick-view-close" click={handleClose} aria-label="Close quick view">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>

            <div class="quick-view-content">
                <!-- Image -->
                <div class="quick-view-image-section">
                    {if image != ""}
                        <img src={image} alt={name} class="quick-view-image" />
                    {else}
                        <div class="quick-view-image-placeholder">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                <path d="M21 15l-5-5L5 21"/>
                            </svg>
                        </div>
                    {/if}

                    {if hasDiscount}
                        <div class="quick-view-badge">{discountPercent}% OFF</div>
                    {/if}
                </div>

                <!-- Info Section -->
                <div class="quick-view-info-section">
                    <!-- Title -->
                    <h2 class="quick-view-title">{name}</h2>

                    <!-- Rating -->
                    {if hasRating}
                        <div class="quick-view-rating">
                            <div class="quick-view-stars">
                                {each [1, 2, 3, 4, 5] as star}
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill={if star <= rating then "currentColor" else "none"} stroke="currentColor" stroke-width="2">
                                        <polygon points="12 2 15.09 10.26 24 10.35 17.77 16.01 20.16 24.02 12 18.35 3.84 24.02 6.23 16.01 0 10.35 8.91 10.26 12 2"/>
                                    </svg>
                                {/each}
                            </div>
                            <span class="quick-view-rating-text">{rating} ({reviews} reviews)</span>
                        </div>
                    {/if}

                    <!-- Description -->
                    {if description != ""}
                        <p class="quick-view-description">{description}</p>
                    {/if}

                    <!-- Pricing -->
                    <div class="quick-view-pricing">
                        <span class="quick-view-price">{formattedPrice}</span>
                        {if hasDiscount}
                            <span class="quick-view-original-price">{formattedOriginal}</span>
                        {/if}
                    </div>

                    <!-- Stock Status -->
                    <div class="quick-view-stock">
                        {if inStock}
                            <span class="quick-view-stock-badge in-stock">In Stock</span>
                        {else}
                            <span class="quick-view-stock-badge out-of-stock">Out of Stock</span>
                        {/if}
                    </div>

                    <!-- Quantity Selector -->
                    {if inStock}
                        <div class="quick-view-quantity">
                            <label class="quick-view-quantity-label">Quantity:</label>
                            <div class="quick-view-quantity-control">
                                <button
                                    class="quick-view-qty-btn"
                                    click={fn() { handleQuantityChange(quantity - 1) }}
                                    disabled={quantity <= 1}
                                    aria-label="Decrease quantity"
                                >
                                    âˆ’
                                </button>
                                <input
                                    type="number"
                                    class="quick-view-qty-input"
                                    value={quantity}
                                    min="1"
                                    max="99"
                                    change={fn(e) { handleQuantityChange(e.target.value) }}
                                />
                                <button
                                    class="quick-view-qty-btn"
                                    click={fn() { handleQuantityChange(quantity + 1) }}
                                    disabled={quantity >= 99}
                                    aria-label="Increase quantity"
                                >
                                    +
                                </button>
                            </div>
                        </div>
                    {/if}

                    <!-- Actions -->
                    <div class="quick-view-actions">
                        <button
                            class="quick-view-btn quick-view-btn-primary"
                            click={handleAddToCart}
                            disabled={!inStock}
                            aria-label="Add to cart"
                        >
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"/>
                                <circle cx="20" cy="21" r="1"/>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                            </svg>
                            Add to Cart
                        </button>
                        <button
                            class="quick-view-btn quick-view-btn-secondary"
                            click={handleViewDetails}
                            aria-label="View full details"
                        >
                            View Details
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{/if}

