                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                {else}
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="cross-icon">
                                        <line x1="18" y1="6" x2="6" y2="18"/>
                                        <line x1="6" y1="6" x2="18" y2="18"/>
                                    </svg>
                                {/if}
                            </div>
                        </div>
                    {/for}
                </div>
            {else}
                <div class="product-upsell-quick-comparison">
                    {for i in [0, 1, 2]}
                        {if i < comparisonFeatures.length}
                            {feature = comparisonFeatures[i]}
                            <div class="product-upsell-quick-item">
                                <div class="product-upsell-quick-feature">
                                    <span class="product-upsell-feature-name">{feature.name}</span>
                                </div>
                                <div class="product-upsell-quick-values">
                                    <span class="product-upsell-quick-value" data-included={feature.current}>
