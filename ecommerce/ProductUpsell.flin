// ProductUpsell.flin - FlinUI PRO E-commerce Component
// "Upgrade to Premium" section with comparison table and upgrade CTA

// Props with defaults
currentProduct = props.currentProduct || none
upgradeProduct = props.upgradeProduct || none
comparisonFeatures = props.comparisonFeatures || []
title = props.title || "Upgrade to Premium"
subtitle = props.subtitle || "Get more value with the premium version"
onUpgrade = props.onUpgrade
onKeepCurrent = props.onKeepCurrent
currency = props.currency || "$"
savings = props.savings || none

// State
showFullComparison = false

// Computed values
hasProducts = currentProduct != none && upgradeProduct != none
priceDifference = {if upgradeProduct != none && currentProduct != none}
    upgradeProduct.price - currentProduct.price
{else}
    0
{/if}

savingsAmount = savings || (currentProduct.price * 0.2)

// Handlers
fn handleUpgradeClick() {
    {if onUpgrade != none}
        onUpgrade(upgradeProduct)
    {/if}
}

fn handleKeepCurrentClick() {
    {if onKeepCurrent != none}
        onKeepCurrent()
    {/if}
}

fn toggleFullComparison() {
    showFullComparison = !showFullComparison
}

<div class="product-upsell">
    <div class="product-upsell-header">
        <div>
            <h2 class="product-upsell-title">{title}</h2>
            <p class="product-upsell-subtitle">{subtitle}</p>
        </div>
        {if savings > 0}
            <div class="product-upsell-badge">
                <span class="product-upsell-badge-icon">ðŸ’°</span>
                <span>Save {currency}{savingsAmount}</span>
            </div>
        {/if}
    </div>

    {if hasProducts}
        <div class="product-upsell-comparison">
            <div class="product-upsell-column">
                <div class="product-upsell-product-header">
                    <h3 class="product-upsell-product-name">{currentProduct.name}</h3>
                    <span class="product-upsell-current-badge">Current</span>
                </div>

                <div class="product-upsell-product-image">
                    <img src={currentProduct.image || ""} alt={currentProduct.name} />
                </div>

                <div class="product-upsell-product-pricing">
                    <span class="product-upsell-price">{currency}{currentProduct.price}</span>
                    {if currentProduct.originalPrice != none}
                        <span class="product-upsell-original-price">{currency}{currentProduct.originalPrice}</span>
                    {/if}
                </div>

                <div class="product-upsell-description">{currentProduct.description || "Standard edition"}</div>

                <button class="product-upsell-btn product-upsell-btn-secondary" click={handleKeepCurrentClick}>
                    Keep Current
                </button>
            </div>

            <div class="product-upsell-vs">
                <span>vs</span>
            </div>

            <div class="product-upsell-column product-upsell-column-featured">
                <div class="product-upsell-product-header">
                    <h3 class="product-upsell-product-name">{upgradeProduct.name}</h3>
                    <span class="product-upsell-premium-badge">Premium</span>
                </div>

                <div class="product-upsell-product-image">
                    <img src={upgradeProduct.image || ""} alt={upgradeProduct.name} />
                </div>

                <div class="product-upsell-product-pricing">
                    <span class="product-upsell-price">{currency}{upgradeProduct.price}</span>
                    {if upgradeProduct.originalPrice != none}
                        <span class="product-upsell-original-price">{currency}{upgradeProduct.originalPrice}</span>
                    {/if}
                    <div class="product-upsell-price-comparison">
                        <span class="product-upsell-price-diff">+{currency}{priceDifference}/month</span>
                    </div>
                </div>

                <div class="product-upsell-description">{upgradeProduct.description || "Premium edition with advanced features"}</div>

                <button class="product-upsell-btn product-upsell-btn-primary" click={handleUpgradeClick}>
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                    </svg>
