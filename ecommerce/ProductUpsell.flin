                <p class="product-upsell-cta-secondary">Start with a {upgradeProduct.trialDays || 30}-day free trial. No credit card required.</p>
            </div>
            <button class="product-upsell-cta-button" click={handleUpgradeClick}>
                <span>Start Premium Trial</span>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"/>
                    <polyline points="12 5 19 12 12 19"/>
                </svg>
            </button>
        </div>
    {else}
        <div class="product-upsell-empty">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <line x1="9" y1="9" x2="15" y2="9"/>
                <line x1="9" y1="15" x2="15" y2="15"/>
            </svg>
            <p>Upgrade data not available</p>
        </div>
    {/if}
</div>

