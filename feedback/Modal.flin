}

.modal-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    border-radius: var(--flin-radius-md);
    cursor: pointer;
    color: var(--flin-fg-muted);
    transition: color var(--flin-transition-fast), background-color var(--flin-transition-fast);
    margin-left: var(--flin-space-2);
}

.modal-close:hover {
    color: var(--flin-fg);
    background-color: var(--flin-neutral-100);
}

.modal-close svg {
    width: 20px;
    height: 20px;
}

/* Body with slot support */
.modal-body {
    overflow-y: auto;
    flex: 1;
    padding: var(--flin-space-6);
}

.modal-body:empty {
    display: none;
}

/* Footer with slot support */
.modal-footer {
    padding: var(--flin-space-4) var(--flin-space-6);
    border-top: 1px solid var(--flin-neutral-200);
    display: flex;
    justify-content: flex-end;
    gap: var(--flin-space-3);
    flex-shrink: 0;
}

.modal-footer:empty {
    display: none;
    border-top: none;
}

/* Focus trap visual indicator */
.flin-modal:focus {
    outline: none;
}

/* Mobile responsiveness */
@media (max-width: 640px) {
    .flin-modal {
        width: calc(100vw - var(--flin-space-4));
        max-height: calc(100vh - var(--flin-space-8));
    }

    .modal-header {
        padding: var(--flin-space-3) var(--flin-space-4);
    }

    .modal-body {
        padding: var(--flin-space-4);
    }

    .modal-footer {
        padding: var(--flin-space-3) var(--flin-space-4);
    }
}

/* Dark theme */
[data-theme="dark"] .flin-modal {
    background-color: var(--flin-neutral-800);
    border: 1px solid var(--flin-neutral-700);
}

[data-theme="dark"] .modal-header {
    border-bottom-color: var(--flin-neutral-700);
}

[data-theme="dark"] .modal-footer {
    border-top-color: var(--flin-neutral-700);
}

[data-theme="dark"] .modal-close:hover {
    background-color: var(--flin-neutral-700);
}
</style>
