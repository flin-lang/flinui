// Modal.flin - FlinUI Modal Component
// A dialog overlay with slots for header, body, and footer

// Props with defaults
open = props.open || false
title = props.title || ""
size = props.size || "md"
closable = props.closable || true
onClose = props.onClose

// Internal state for animations
isClosing = false

// Handle close with animation
handleClose = {
    if closable {
        isClosing = true
        if onClose { onClose() }
    }
}

// Handle backdrop click
handleBackdropClick = {
    if closable {
        isClosing = true
        if onClose { onClose() }
    }
}

// Handle escape key
handleKeyDown = {
    if closable {
        isClosing = true
        if onClose { onClose() }
    }
}

// Size class computation
sizeClass = match size {
    "sm" -> "modal-sm"
    "lg" -> "modal-lg"
    "xl" -> "modal-xl"
    "full" -> "modal-full"
    _ -> "modal-md"
}

// Computed classes for animation states
backdropClosingClass = match isClosing { true -> " modal-backdrop-closing", _ -> "" }
modalClosingClass = match isClosing { true -> " modal-closing", _ -> "" }

// Compute display class
displayClass = match open { true -> "flin-modal-container", _ -> "flin-modal-container flin-modal-container--hidden" }

<div class={displayClass}>
    <div
        class={"flin-modal-backdrop" ++ backdropClosingClass}
        click={handleBackdropClick}
        aria-hidden="true"
    ></div>

    <div
        class={"flin-modal " ++ sizeClass ++ modalClosingClass}
        role="dialog"
        aria-modal="true"
        aria-labelledby="modal-title"
        tabindex="-1"
        keydown={handleKeyDown}
    >
        <div class="modal-header">
            <div class="modal-header__content">
                <slot name="header">
                    {if title != ""}
                        <h2 id="modal-title" class="modal-title">{title}</h2>
                    {/if}
                </slot>
            </div>
            {if closable}
                <button
                    class="modal-close"
                    click={handleClose}
                    aria-label="Close modal"
                    type="button"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            {/if}
        </div>

        <div class="modal-body">
            <slot />
        </div>

        <div class="modal-footer">
            <slot name="footer" />
        </div>
    </div>
</div>

<style scoped>
/* Container */
.flin-modal-container {
    position: fixed;
    inset: 0;
    z-index: 9998;
}

.flin-modal-container--hidden {
    display: none;
}

/* Backdrop */
.flin-modal-backdrop {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
    z-index: 9998;
    animation: backdropFadeIn var(--flin-transition-fast) ease-out;
}

@keyframes backdropFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-backdrop-closing {
    animation: backdropFadeOut var(--flin-transition-fast) ease-in forwards;
}

@keyframes backdropFadeOut {
    to { opacity: 0; }
}

/* Modal */
.flin-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: var(--flin-bg);
    border-radius: var(--flin-radius-xl);
    box-shadow: var(--flin-shadow-xl);
    z-index: 9999;
    display: flex;
    flex-direction: column;
    max-height: 90vh;
    animation: modalSlideIn var(--flin-transition-normal) ease-out;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
}

.modal-closing {
    animation: modalSlideOut var(--flin-transition-fast) ease-in forwards;
}

@keyframes modalSlideOut {
    to {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.95);
    }
}

/* Size variants */
.modal-sm { width: 100%; max-width: 400px; }
.modal-md { width: 100%; max-width: 560px; }
.modal-lg { width: 100%; max-width: 720px; }
.modal-xl { width: 100%; max-width: 960px; }
.modal-full {
    width: calc(100vw - var(--flin-space-8));
    max-width: none;
    height: calc(100vh - var(--flin-space-8));
    max-height: none;
}

/* Header with slot support */
.modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--flin-space-4) var(--flin-space-6);
    border-bottom: 1px solid var(--flin-neutral-200);
    flex-shrink: 0;
}

.modal-header__content {
    flex: 1;
    min-width: 0;
}

.modal-header__content:empty {
    display: none;
}

.modal-title {
