// RichTextEditor.flin - FlinUI Rich Text Editor Component
// WYSIWYG editor with toolbar for bold, italic, underline, lists, links, and headings

// Props with defaults
value = props.value || ""
placeholder = props.placeholder || "Start typing..."
disabled = props.disabled || false
minHeight = props.minHeight || "200px"
maxHeight = props.maxHeight || "500px"
showToolbar = props.showToolbar || true
toolbarPosition = props.toolbarPosition || "top"
onChange = props.onChange
onFocus = props.onFocus
onBlur = props.onBlur

// State management
content = value
isFocused = false
activeFormats = []
showLinkModal = false
linkUrl = ""
linkText = ""
selectedRange = null

// Check if format is active
isFormatActive = {
    format = event;
    activeFormats.includes(format)
}

// Execute formatting command
execCommand = {
    command = event;
    document.execCommand(command, false, null);
    updateActiveFormats()
}

// Execute command with value
execCommandWithValue = {
    command = event.command;
    val = event.value;
    document.execCommand(command, false, val);
    updateActiveFormats()
}

// Update active formats based on current selection
updateActiveFormats = {
    formats = [];
    {if document.queryCommandState("bold")}
        formats.push("bold")
    {/if}
    {if document.queryCommandState("italic")}
        formats.push("italic")
    {/if}
    {if document.queryCommandState("underline")}
        formats.push("underline")
    {/if}
    {if document.queryCommandState("strikeThrough")}
        formats.push("strikeThrough")
    {/if}
    {if document.queryCommandState("insertUnorderedList")}
        formats.push("unorderedList")
    {/if}
    {if document.queryCommandState("insertOrderedList")}
        formats.push("orderedList")
    {/if}
    activeFormats = formats
}

// Handle content input
handleInput = {
    content = event.target.innerHTML;
    updateActiveFormats();
    {if onChange}
        onChange(content)
    {/if}
}

// Handle focus
handleFocus = {
    isFocused = true;
    {if onFocus}
        onFocus(event)
    {/if}
}

// Handle blur
handleBlur = {
    isFocused = false;
    {if onBlur}
        onBlur(event)
    {/if}
}

// Handle selection change
handleSelectionChange = {
    updateActiveFormats()
}

// Handle key commands
handleKeydown = {
    {if event.ctrlKey || event.metaKey}
        {if event.key == "b"}
            event.preventDefault();
            execCommand("bold")
        {else if event.key == "i"}
            event.preventDefault();
            execCommand("italic")
        {else if event.key == "u"}
            event.preventDefault();
            execCommand("underline")
        {else if event.key == "k"}
            event.preventDefault();
            openLinkModal()
        {/if}
    {/if}
}

// Format heading
formatHeading = {
    level = event;
    execCommandWithValue({ command: "formatBlock", value: level })
}

// Clear formatting
clearFormatting = {
    document.execCommand("removeFormat", false, null)
}

// Open link modal
openLinkModal = {
    selection = window.getSelection();
    {if selection.rangeCount > 0}
        selectedRange = selection.getRangeAt(0);
        linkText = selection.toString();
        linkUrl = "";
        showLinkModal = true
    {/if}
}

// Insert link
insertLink = {
    {if linkUrl != "" && selectedRange != null}
        selection = window.getSelection();
        selection.removeAllRanges();
        selection.addRange(selectedRange);
        document.execCommand("createLink", false, linkUrl);
        showLinkModal = false;
        linkUrl = "";
        linkText = "";
        selectedRange = null
    {/if}
}

// Remove link
removeLink = {
    document.execCommand("unlink", false, null)
}

// Cancel link modal
cancelLinkModal = {
    showLinkModal = false;
    linkUrl = "";
    linkText = "";
    selectedRange = null
}

// Insert horizontal rule
insertHorizontalRule = {
    document.execCommand("insertHorizontalRule", false, null)
}

// Undo/Redo
undo = {
    document.execCommand("undo", false, null)
}

redo = {
    document.execCommand("redo", false, null)
}

// Compute class modifiers
focusedClass = match isFocused { true -> " rich-text-editor-focused", _ -> "" }
disabledClass = match disabled { true -> " rich-text-editor-disabled", _ -> "" }
toolbarTopClass = match toolbarPosition { "top" -> " toolbar-top", _ -> " toolbar-bottom" }

// Compute active button classes
boldActiveClass = match isFormatActive("bold") { true -> " toolbar-btn-active", _ -> "" }
italicActiveClass = match isFormatActive("italic") { true -> " toolbar-btn-active", _ -> "" }
underlineActiveClass = match isFormatActive("underline") { true -> " toolbar-btn-active", _ -> "" }
strikeActiveClass = match isFormatActive("strikeThrough") { true -> " toolbar-btn-active", _ -> "" }
ulActiveClass = match isFormatActive("unorderedList") { true -> " toolbar-btn-active", _ -> "" }
olActiveClass = match isFormatActive("orderedList") { true -> " toolbar-btn-active", _ -> "" }

<div class={"rich-text-editor" ++ focusedClass ++ disabledClass ++ toolbarTopClass} role="application" aria-label="Rich text editor">
    {if showToolbar && toolbarPosition == "top"}
        <div class="rich-text-toolbar" role="toolbar" aria-label="Formatting options">
            <div class="toolbar-group">
                <button
                    type="button"
                    class={"toolbar-btn" ++ boldActiveClass}
                    click={() => execCommand("bold")}
                    disabled={disabled}
                    title="Bold (Ctrl+B)"
                    aria-label="Bold"
                    aria-pressed={isFormatActive("bold")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 4h8a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/>
                        <path d="M6 12h9a4 4 0 0 1 4 4 4 4 0 0 1-4 4H6z"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class={"toolbar-btn" ++ italicActiveClass}
                    click={() => execCommand("italic")}
                    disabled={disabled}
                    title="Italic (Ctrl+I)"
                    aria-label="Italic"
                    aria-pressed={isFormatActive("italic")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="19" y1="4" x2="10" y2="4"/>
                        <line x1="14" y1="20" x2="5" y2="20"/>
                        <line x1="15" y1="4" x2="9" y2="20"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class={"toolbar-btn" ++ underlineActiveClass}
                    click={() => execCommand("underline")}
                    disabled={disabled}
                    title="Underline (Ctrl+U)"
                    aria-label="Underline"
                    aria-pressed={isFormatActive("underline")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 3v7a6 6 0 0 0 6 6 6 6 0 0 0 6-6V3"/>
                        <line x1="4" y1="21" x2="20" y2="21"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class={"toolbar-btn" ++ strikeActiveClass}
                    click={() => execCommand("strikeThrough")}
                    disabled={disabled}
                    title="Strikethrough"
                    aria-label="Strikethrough"
                    aria-pressed={isFormatActive("strikeThrough")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 4H9a3 3 0 0 0-2.83 4"/>
                        <path d="M14 12a4 4 0 0 1 0 8H6"/>
                        <line x1="4" y1="12" x2="20" y2="12"/>
                    </svg>
                </button>
            </div>

            <span class="toolbar-divider" aria-hidden="true"></span>

            <div class="toolbar-group">
                <select
                    class="toolbar-select"
                    change={(e) => formatHeading(e.target.value)}
                    disabled={disabled}
                    aria-label="Text style"
                >
                    <option value="p">Paragraph</option>
                    <option value="h1">Heading 1</option>
                    <option value="h2">Heading 2</option>
                    <option value="h3">Heading 3</option>
                    <option value="h4">Heading 4</option>
                    <option value="blockquote">Quote</option>
                    <option value="pre">Code</option>
                </select>
            </div>

            <span class="toolbar-divider" aria-hidden="true"></span>

            <div class="toolbar-group">
                <button
                    type="button"
                    class={"toolbar-btn" ++ ulActiveClass}
                    click={() => execCommand("insertUnorderedList")}
                    disabled={disabled}
                    title="Bullet list"
                    aria-label="Bullet list"
                    aria-pressed={isFormatActive("unorderedList")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="8" y1="6" x2="21" y2="6"/>
                        <line x1="8" y1="12" x2="21" y2="12"/>
                        <line x1="8" y1="18" x2="21" y2="18"/>
                        <circle cx="3" cy="6" r="1" fill="currentColor"/>
                        <circle cx="3" cy="12" r="1" fill="currentColor"/>
                        <circle cx="3" cy="18" r="1" fill="currentColor"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class={"toolbar-btn" ++ olActiveClass}
                    click={() => execCommand("insertOrderedList")}
                    disabled={disabled}
                    title="Numbered list"
                    aria-label="Numbered list"
                    aria-pressed={isFormatActive("orderedList")}
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="10" y1="6" x2="21" y2="6"/>
                        <line x1="10" y1="12" x2="21" y2="12"/>
                        <line x1="10" y1="18" x2="21" y2="18"/>
                        <path d="M4 6h1v4"/>
                        <path d="M4 10h2"/>
                        <path d="M6 18H4c0-1 2-2 2-3s-1-1.5-2-1"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={() => execCommand("indent")}
                    disabled={disabled}
                    title="Increase indent"
                    aria-label="Increase indent"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="21" y1="6" x2="11" y2="6"/>
                        <line x1="21" y1="12" x2="11" y2="12"/>
                        <line x1="21" y1="18" x2="11" y2="18"/>
                        <polyline points="3 8 7 12 3 16"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={() => execCommand("outdent")}
                    disabled={disabled}
                    title="Decrease indent"
                    aria-label="Decrease indent"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="21" y1="6" x2="11" y2="6"/>
                        <line x1="21" y1="12" x2="11" y2="12"/>
                        <line x1="21" y1="18" x2="11" y2="18"/>
                        <polyline points="7 8 3 12 7 16"/>
                    </svg>
                </button>
            </div>

            <span class="toolbar-divider" aria-hidden="true"></span>

            <div class="toolbar-group">
                <button
                    type="button"
                    class="toolbar-btn"
                    click={openLinkModal}
                    disabled={disabled}
                    title="Insert link (Ctrl+K)"
                    aria-label="Insert link"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={removeLink}
                    disabled={disabled}
                    title="Remove link"
                    aria-label="Remove link"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18.84 12.25l1.72-1.71a5 5 0 0 0-7.07-7.07l-3 3a5 5 0 0 0 .12 7.19"/>
                        <path d="M5.16 11.75l-1.72 1.71a5 5 0 0 0 7.07 7.07l3-3a5 5 0 0 0-.12-7.19"/>
                        <line x1="2" y1="2" x2="22" y2="22"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={insertHorizontalRule}
                    disabled={disabled}
                    title="Insert horizontal line"
                    aria-label="Insert horizontal line"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
                        <line x1="2" y1="12" x2="22" y2="12"/>
                    </svg>
                </button>
            </div>

            <span class="toolbar-divider" aria-hidden="true"></span>

            <div class="toolbar-group">
                <button
                    type="button"
                    class="toolbar-btn"
                    click={clearFormatting}
                    disabled={disabled}
                    title="Clear formatting"
                    aria-label="Clear formatting"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 18L18 6"/>
                        <path d="M4 6l6.5 0"/>
                        <path d="M7 2l3 6"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={undo}
                    disabled={disabled}
                    title="Undo (Ctrl+Z)"
                    aria-label="Undo"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 7v6h6"/>
                        <path d="M21 17a9 9 0 0 0-9-9 9 9 0 0 0-6 2.3L3 13"/>
                    </svg>
                </button>
                <button
                    type="button"
                    class="toolbar-btn"
                    click={redo}
                    disabled={disabled}
                    title="Redo (Ctrl+Y)"
                    aria-label="Redo"
                >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 7v6h-6"/>
                        <path d="M3 17a9 9 0 0 1 9-9 9 9 0 0 1 6 2.3L21 13"/>
                    </svg>
                </button>
            </div>
        </div>
    {/if}

    <div
        class="rich-text-content"
        contenteditable={!disabled}
        input={handleInput}
        focus={handleFocus}
        blur={handleBlur}
        keydown={handleKeydown}
        selectionchange={handleSelectionChange}
        style={"min-height: " ++ minHeight ++ "; max-height: " ++ maxHeight}
        role="textbox"
        aria-multiline="true"
        aria-label="Editor content"
        aria-placeholder={placeholder}
        data-placeholder={placeholder}
    >
        {content}
    </div>

    {if showToolbar && toolbarPosition == "bottom"}
        <div class="rich-text-toolbar" role="toolbar" aria-label="Formatting options">
            // Same toolbar content as above (abbreviated for clarity)
        </div>
    {/if}

    {if showLinkModal}
        <div class="link-modal-overlay" click={cancelLinkModal}>
            <div class="link-modal" click={(e) => e.stopPropagation()} role="dialog" aria-labelledby="link-modal-title">
                <div class="link-modal-header">
                    <h3 id="link-modal-title" class="link-modal-title">Insert Link</h3>
                    <button type="button" class="link-modal-close" click={cancelLinkModal} aria-label="Close">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
                            <path d="M18 6L6 18M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                <div class="link-modal-body">
                    <div class="link-modal-field">
                        <label for="link-text" class="link-modal-label">Link Text</label>
                        <input
                            type="text"
                            id="link-text"
                            class="link-modal-input"
                            value={linkText}
                            input={(e) => linkText = e.target.value}
                            placeholder="Display text"
                        >
                    </div>
                    <div class="link-modal-field">
                        <label for="link-url" class="link-modal-label">URL</label>
                        <input
                            type="url"
                            id="link-url"
                            class="link-modal-input"
                            value={linkUrl}
                            input={(e) => linkUrl = e.target.value}
                            placeholder="https://example.com"
                            autofocus
                        >
                    </div>
                </div>
                <div class="link-modal-footer">
                    <button type="button" class="link-modal-btn link-modal-btn-cancel" click={cancelLinkModal}>
                        Cancel
                    </button>
                    <button type="button" class="link-modal-btn link-modal-btn-insert" click={insertLink} disabled={linkUrl == ""}>
                        Insert Link
                    </button>
                </div>
            </div>
        </div>
    {/if}
</div>

