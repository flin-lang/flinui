// SearchInput.flin - FlinUI Search Input Component
// Search input with clear button and loading state

// Props with defaults
value = props.value || ""
placeholder = props.placeholder || "Search..."
size = props.size || "md"
disabled = props.disabled || false
loading = props.loading || false
onChange = props.onChange

// Size classes
sizeClass = match size {
    "sm" -> "search-input-sm"
    "lg" -> "search-input-lg"
    _ -> "search-input-md"
}

// Compute classes
disabledClass = match disabled {
    true -> " search-input-disabled"
    _ -> ""
}
loadingClass = match loading {
    true -> " search-input-loading"
    _ -> ""
}
hasValueClass = match value != "" {
    true -> " search-input-has-value"
    _ -> ""
}
containerClass = "search-input " ++ sizeClass ++ disabledClass ++ loadingClass ++ hasValueClass

// Loading icon visibility
spinnerClass = match loading {
    true -> ""
    _ -> " hidden"
}
searchIconClass = match loading {
    true -> " hidden"
    _ -> ""
}

<div class={containerClass}>
    <button
        type="button"
        class="search-input-icon-btn search-input-search-btn"
        disabled={disabled || loading}
        tabindex="-1"
        aria-label="Search"
    >
        <span class={"search-input-spinner" ++ spinnerClass}></span>
        <svg class={"search-icon" ++ searchIconClass} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
        </svg>
    </button>
    <input
        type="text"
        class="search-input-field"
        value={value}
        placeholder={placeholder}
        disabled={disabled}
        change={onChange}
        aria-label="Search input"
        role="searchbox"
    >
    {if value != "" && !loading}
        <button
            type="button"
            class="search-input-icon-btn search-input-clear-btn"
            disabled={disabled}
            tabindex="-1"
            aria-label="Clear search"
        >
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M15 9l-6 6M9 9l6 6"/>
            </svg>
        </button>
    {/if}
</div>

