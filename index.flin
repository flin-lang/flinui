    margin-top: var(--flin-space-8);
    color: var(--flin-fg);
}

.flinui-root pre {
    background: var(--flin-bg-muted);
    padding: var(--flin-space-4);
    border-radius: var(--flin-radius-lg);
    overflow-x: auto;
}

.flinui-root code {
    font-family: var(--flin-font-mono);
