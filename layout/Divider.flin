.flin-divider-space-6.flin-divider-vertical { margin-left: var(--flin-space-6); margin-right: var(--flin-space-6); }
.flin-divider-space-8.flin-divider-vertical { margin-left: var(--flin-space-8); margin-right: var(--flin-space-8); }
.flin-divider-space-12.flin-divider-vertical { margin-left: var(--flin-space-12); margin-right: var(--flin-space-12); }
