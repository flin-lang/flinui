// FlinUI Footer Component
// Page footer with copyright and social links
// Props: copyright (string), variant (simple/columns)

copyright = props.copyright || ""
variant = props.variant || "simple"

// Build class string
variantClass = match variant {
    "simple" -> " flin-footer-simple",
    "columns" -> " flin-footer-columns",
    _ -> " flin-footer-simple"
}

footerClass = "flin-footer" ++ variantClass

// Check content availability
hasCopyright = copyright != ""

<footer class={footerClass}>
    <div class="flin-footer-bottom">
        {if hasCopyright}
            <p class="flin-footer-copyright">{copyright}</p>
        {/if}

        {children}
    </div>
</footer>

<style scoped>
