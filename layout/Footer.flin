.flin-footer-simple {
    padding: var(--flin-space-6) var(--flin-space-4);
}

.flin-footer-simple .flin-footer-bottom {
    flex-direction: column;
    gap: var(--flin-space-4);
}

/* Bottom section */
.flin-footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--flin-space-4);
}

.flin-footer-social {
    display: flex;
    align-items: center;
    gap: var(--flin-space-3);
}

.flin-footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--flin-radius-full);
    background-color: var(--flin-neutral-100);
    color: var(--flin-muted-fg);
