.flin-navbar-mobile-icon::before,
.flin-navbar-mobile-icon::after {
    content: '';
    position: absolute;
    left: 10px;
}

.flin-navbar-mobile-icon::before {
    top: 14px;
}

.flin-navbar-mobile-icon::after {
