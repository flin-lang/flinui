// FlinUI — Sidebar Component
// ============================================================================
// Collapsible side navigation with sections, icons, and badges
//
// USAGE:
//   <Sidebar
//       collapsed={false}
//       position="left"
//       width="280px"
//   >
//       <!-- Navigation content as children -->
//   </Sidebar>
//
// PROPS:
//   collapsed      - Icon-only mode (default: false)
//   position       - "left" | "right" (default: "left")
//   width          - Width when expanded (default: "280px")
//   collapsedWidth - Width when collapsed (default: "72px")
//
// ============================================================================

// Props with defaults
collapsed = props.collapsed || false
position = props.position || "left"
width = props.width || "280px"
collapsedWidth = props.collapsedWidth || "72px"

// Position class
positionClass = match position {
    "right" -> " flin-sidebar-right",
    _ -> " flin-sidebar-left"
}

// Collapsed class
collapsedClass = match collapsed {
    true -> " flin-sidebar-collapsed",
    _ -> ""
}

// Build CSS custom property for width
sidebarWidth = match collapsed {
    true -> collapsedWidth,
    _ -> width
}

// Build final class
sidebarClass = "flin-sidebar" ++ positionClass ++ collapsedClass

<aside class={sidebarClass} style={"--flin-sidebar-width: " ++ sidebarWidth}>
    <div class="flin-sidebar-content">
        {children}
    </div>
</aside>

<style scoped>
/* ────────────────────────────────────────────────────────────────────────
   BASE SIDEBAR STYLES
   ──────────────────────────────────────────────────────────────────────── */

.flin-sidebar {
    width: var(--flin-sidebar-width, 280px);
    height: 100vh;
    position: fixed;
    top: 0;
    background: var(--flin-sidebar-bg, var(--flin-bg-surface, #12121a));
    padding: var(--flin-space-8, 2rem) 0;
    overflow-y: auto;
    overflow-x: hidden;
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: var(--flin-z-sticky, 200);
}

/* Scrollbar styling */
.flin-sidebar::-webkit-scrollbar {
    width: 6px;
}

.flin-sidebar::-webkit-scrollbar-track {
    background: transparent;
}

.flin-sidebar::-webkit-scrollbar-thumb {
    background: var(--flin-border-medium, rgba(255, 255, 255, 0.1));
    border-radius: 3px;
}

.flin-sidebar::-webkit-scrollbar-thumb:hover {
    background: var(--flin-border-strong, rgba(255, 255, 255, 0.15));
}

/* ────────────────────────────────────────────────────────────────────────
   POSITION VARIANTS
   ──────────────────────────────────────────────────────────────────────── */

.flin-sidebar-left {
    left: 0;
    border-right: 1px solid var(--flin-border-subtle, rgba(255, 255, 255, 0.06));
}

.flin-sidebar-right {
    right: 0;
    left: auto;
    border-right: none;
    border-left: 1px solid var(--flin-border-subtle, rgba(255, 255, 255, 0.06));
}

/* ────────────────────────────────────────────────────────────────────────
   COLLAPSED STATE
   ──────────────────────────────────────────────────────────────────────── */

.flin-sidebar-collapsed .flin-sidebar-item-label,
.flin-sidebar-collapsed .flin-sidebar-section-title,
.flin-sidebar-collapsed .flin-sidebar-item-badge {
    opacity: 0;
    width: 0;
    overflow: hidden;
    white-space: nowrap;
}

.flin-sidebar-collapsed .flin-sidebar-item {
    justify-content: center;
    padding: var(--flin-space-2, 0.5rem);
}

.flin-sidebar-collapsed .flin-sidebar-content {
    padding: 0 var(--flin-space-2, 0.5rem);
}

/* ────────────────────────────────────────────────────────────────────────
   CONTENT
   ──────────────────────────────────────────────────────────────────────── */

.flin-sidebar-content {
    padding: 0 var(--flin-space-4, 1rem);
}

/* ────────────────────────────────────────────────────────────────────────
   SECTIONS
   ──────────────────────────────────────────────────────────────────────── */

.flin-sidebar-section {
    margin-bottom: var(--flin-space-8, 2rem);
}

.flin-sidebar-section-title {
    font-size: var(--flin-text-xs, 0.75rem);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--flin-text-muted, #606070);
