// NavbarBrand.flin - FlinUI Navbar Brand Component
// Logo and brand section for the navigation bar

// Props with defaults
href = props.href || "/"
logo = props.logo  // Named slot for logo content

<a
    href={href}
    class="flin-navbar-brand"
    aria-label="Home"
>
    {if logo}
        <span class="flin-navbar-brand__logo">
            {logo}
        </span>
    {/if}
    <span class="flin-navbar-brand__text">
        {children}
    </span>
</a>

