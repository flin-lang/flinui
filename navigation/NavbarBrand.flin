    font-weight: var(--flin-font-semibold);
    transition: opacity var(--flin-transition-fast);
    flex-shrink: 0;
}

.flin-navbar-brand:hover {
    opacity: var(--flin-opacity-80);
}

.flin-navbar-brand:focus-visible {
    outline: var(--flin-space-0-5) solid var(--flin-primary);
    outline-offset: var(--flin-space-0-5);
