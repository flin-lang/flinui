}

.logout-confirm-warning svg {
    width: 16px;
    height: 16px;
    color: var(--flin-warning);
    flex-shrink: 0;
    margin-top: 1px;
}

.logout-confirm-warning span {
    font-size: var(--flin-text-xs);
    color: var(--flin-warning-dark);
    line-height: 1.4;
}

/* User info */
.logout-confirm-user {
    display: flex;
    align-items: center;
    gap: var(--flin-space-3);
    padding: var(--flin-space-4) var(--flin-space-6);
    background-color: var(--flin-neutral-50);
    border-top: 1px solid var(--flin-neutral-200);
    border-bottom: 1px solid var(--flin-neutral-200);
}

.logout-confirm-user-avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--flin-radius-full);
    background-color: var(--flin-neutral-200);
}

.logout-confirm-user-avatar svg {
    width: 18px;
    height: 18px;
    color: var(--flin-fg-muted);
}

.logout-confirm-user-name {
    font-size: var(--flin-text-sm);
    font-weight: 500;
    color: var(--flin-fg);
}

/* Actions */
.logout-confirm-actions {
    display: flex;
    gap: var(--flin-space-3);
    padding: var(--flin-space-4) var(--flin-space-6);
}

.logout-confirm-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--flin-space-2);
    flex: 1;
    height: var(--flin-height-sm);
    font-size: var(--flin-text-sm);
    font-weight: 600;
    border: none;
    border-radius: var(--flin-radius-md);
    cursor: pointer;
    transition: all var(--flin-transition-fast);
}

.logout-confirm-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.logout-confirm-btn-cancel {
    background-color: var(--flin-neutral-100);
    color: var(--flin-fg);
}

.logout-confirm-btn-cancel:hover:not(:disabled) {
    background-color: var(--flin-neutral-200);
}

.logout-confirm-btn-confirm {
    background-color: var(--flin-danger);
    color: white;
}

.logout-confirm-btn-confirm:hover:not(:disabled) {
    background-color: var(--flin-danger-dark);
}

.logout-confirm-spinner {
    width: 16px;
    height: 16px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Responsive */
@media (max-width: 480px) {
    .logout-confirm-modal {
        max-width: none;
        margin: var(--flin-space-4);
    }

    .logout-confirm-actions {
        flex-direction: column-reverse;
    }
}
</style>
