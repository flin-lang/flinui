    padding: var(--flin-space-4);
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    opacity: 0;
    visibility: hidden;
    transition: all var(--flin-transition-normal);
}

.logout-confirm-overlay-visible {
    opacity: 1;
    visibility: visible;
}

