// LogoutConfirm.flin - FlinUI PRO Logout Confirmation Modal
// Confirmation dialog for logout action

// Props with defaults
isOpen = props.isOpen || false
onConfirm = props.onConfirm
onCancel = props.onCancel
userName = props.userName || "User"
title = props.title || "Log out?"
message = props.message || none
confirmLabel = props.confirmLabel || "Log out"
cancelLabel = props.cancelLabel || "Cancel"
showWarning = props.showWarning || true

// State
isLoading = false

// Default message
displayMessage = {if message != none {
    message
} else {
    "Are you sure you want to log out of your account?"
}}

// Handle confirm
handleConfirm = {
    isLoading = true
    if onConfirm {
        onConfirm()
    }
}

// Handle cancel
handleCancel = {
    if onCancel {
        onCancel()
    }
}

// Handle backdrop click
handleBackdropClick = fn(e) {
    if e.target == e.currentTarget && !isLoading {
        handleCancel()
    }
}

// Handle escape key
handleKeyDown = fn(e) {
    if e.key == "Escape" && !isLoading {
        handleCancel()
    }
}

// Overlay classes
overlayClass = "logout-confirm-overlay" ++ match isOpen {
    true -> " logout-confirm-overlay-visible"
    _ -> ""
}

{if isOpen}
    <div
        class={overlayClass}
        click={handleBackdropClick}
        keydown={handleKeyDown}
        role="dialog"
        aria-modal="true"
        aria-labelledby="logout-confirm-title"
    >
        <div class="logout-confirm-modal">
            <div class="logout-confirm-header">
                <div class="logout-confirm-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" y1="12" x2="9" y2="12"/>
                    </svg>
                </div>
                <button
                    class="logout-confirm-close"
                    click={handleCancel}
                    disabled={isLoading}
                    aria-label="Close"
                >
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"/>
                        <line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>

            <div class="logout-confirm-content">
                <h2 id="logout-confirm-title" class="logout-confirm-title">{title}</h2>
                <p class="logout-confirm-message">{displayMessage}</p>

                {if showWarning}
                    <div class="logout-confirm-warning">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <span>You'll need to sign in again to access your account.</span>
                    </div>
                {/if}
            </div>

            <div class="logout-confirm-user">
                <div class="logout-confirm-user-avatar">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                </div>
                <span class="logout-confirm-user-name">{userName}</span>
            </div>

            <div class="logout-confirm-actions">
                <button
                    class="logout-confirm-btn logout-confirm-btn-cancel"
                    click={handleCancel}
                    disabled={isLoading}
                >
                    {cancelLabel}
                </button>
                <button
                    class="logout-confirm-btn logout-confirm-btn-confirm"
                    click={handleConfirm}
                    disabled={isLoading}
                >
                    {if isLoading}
                        <svg class="logout-confirm-spinner" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="32" stroke-dashoffset="32">
                                <animate attributeName="stroke-dashoffset" values="32;0;32" dur="1s" repeatCount="indefinite"/>
                            </circle>
                        </svg>
                        Logging out...
                    {else}
                        {confirmLabel}
                    {/if}
                </button>
            </div>
        </div>
    </div>
{/if}

<style scoped>
