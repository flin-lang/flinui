// ============================================================================
// ArticleContent.flin â€” FlinUI PRO
// Blog post body with styled prose for long-form content
// ============================================================================
// Props:
//   content: text - The article content (HTML or markdown rendered)
//   size: text - Font size variant ("sm", "base", "lg") (default: "base")
//   maxWidth: text - Max width of content (default: "65ch")
//   dropCap: boolean - Show decorative drop cap on first letter (default: false)
// ============================================================================

content = props.content || ""
size = props.size || "base"
maxWidth = props.maxWidth || "65ch"
dropCap = props.dropCap || false

// Compute size class
sizeClass = match size {
    "sm" -> "article-content--sm"
    "lg" -> "article-content--lg"
    _ -> "article-content--base"
}

// Compute drop cap class
dropCapClass = match dropCap {
    true -> "article-content--drop-cap"
    _ -> ""
}

<article
    class={"article-content " ++ sizeClass ++ " " ++ dropCapClass}
    style={"--article-max-width: " ++ maxWidth}
>
    {if content != ""}
        <div class="article-content__body">
            {content}
        </div>
    {else}
        <div class="article-content__body">
            {children}
        </div>
    {/if}
</article>

