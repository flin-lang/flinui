// ============================================================================
// MediaObject.flin â€” FlinUI PRO
// Image + text horizontal layout (classic media object pattern)
// ============================================================================
// Props:
//   imageSrc: text - Image source URL (default: none)
//   imageAlt: text - Image alt text (default: "")
//   imageSize: text - Image size ("sm", "md", "lg", "xl") (default: "md")
//   imageShape: text - Image shape ("circle", "rounded", "square") (default: "rounded")
//   title: text - Title text (default: none)
//   subtitle: text - Subtitle text (default: none)
//   description: text - Description text (default: none)
//   meta: text - Meta text (timestamp, etc.) (default: none)
//   href: text - Link for the entire media object (default: none)
//   align: text - Vertical alignment ("top", "center", "bottom") (default: "top")
//   reverse: boolean - Reverse image/content order (default: false)
//   variant: text - Style variant ("default", "bordered", "elevated") (default: "default")
//   actions: slot - Action buttons slot (default: none)
// ============================================================================

imageSrc = props.imageSrc || none
imageAlt = props.imageAlt || ""
imageSize = props.imageSize || "md"
imageShape = props.imageShape || "rounded"
title = props.title || none
subtitle = props.subtitle || none
description = props.description || none
meta = props.meta || none
href = props.href || none
align = props.align || "top"
reverse = props.reverse || false
variant = props.variant || "default"
actions = props.actions || none

// Compute size class
sizeClass = match imageSize {
    "sm" -> "media-object--sm"
    "lg" -> "media-object--lg"
    "xl" -> "media-object--xl"
    _ -> "media-object--md"
}

// Compute shape class
shapeClass = match imageShape {
    "circle" -> "media-object--circle"
    "square" -> "media-object--square"
    _ -> "media-object--rounded"
}

// Compute align class
alignClass = match align {
    "center" -> "media-object--align-center"
    "bottom" -> "media-object--align-bottom"
    _ -> "media-object--align-top"
}

// Compute reverse class
reverseClass = match reverse {
    true -> "media-object--reverse"
    _ -> ""
}

// Compute variant class
variantClass = match variant {
    "bordered" -> "media-object--bordered"
    "elevated" -> "media-object--elevated"
    _ -> "media-object--default"
}

mediaContent = <div class={"media-object " ++ sizeClass ++ " " ++ shapeClass ++ " " ++ alignClass ++ " " ++ reverseClass ++ " " ++ variantClass}>
    // Media (image)
    {if imageSrc != none}
        <div class="media-object__media">
            <img class="media-object__image" src={imageSrc} alt={imageAlt}>
        </div>
    {else}
        <div class="media-object__media media-object__placeholder">
            <svg width="40%" height="40%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
        </div>
    {/if}

    // Content
    <div class="media-object__content">
        <div class="media-object__header">
            <div class="media-object__text">
                {if title != none}
                    <h4 class="media-object__title">{title}</h4>
                {/if}
                {if subtitle != none}
                    <p class="media-object__subtitle">{subtitle}</p>
                {/if}
            </div>
            {if meta != none}
                <span class="media-object__meta">{meta}</span>
            {/if}
        </div>

        {if description != none}
            <p class="media-object__description">{description}</p>
        {/if}

        {if actions != none}
            <div class="media-object__actions">
                {actions}
            </div>
        {/if}

        {if children}
            <div class="media-object__body">
                {children}
            </div>
        {/if}
    </div>
</div>

{if href != none}
    <a href={href} class="media-object__link">
        {mediaContent}
    </a>
{else}
    {mediaContent}
{/if}

<style scoped>
