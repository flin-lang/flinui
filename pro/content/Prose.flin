// ============================================================================
// Prose.flin â€” FlinUI PRO
// Rich text styling container for rendered content
// ============================================================================
// Props:
//   size: text - Text size ("sm", "base", "lg", "xl") (default: "base")
//   color: text - Text color variant ("default", "muted", "inverted") (default: "default")
//   centered: boolean - Center text alignment (default: false)
//   tight: boolean - Reduce spacing between elements (default: false)
// ============================================================================

size = props.size || "base"
color = props.color || "default"
centered = props.centered || false
tight = props.tight || false

// Compute size class
sizeClass = match size {
    "sm" -> "prose--sm"
    "lg" -> "prose--lg"
    "xl" -> "prose--xl"
    _ -> "prose--base"
}

// Compute color class
colorClass = match color {
    "muted" -> "prose--muted"
    "inverted" -> "prose--inverted"
    _ -> "prose--default"
}

// Compute alignment class
alignClass = match centered {
    true -> "prose--centered"
    _ -> ""
}

// Compute spacing class
spacingClass = match tight {
    true -> "prose--tight"
    _ -> ""
}

<div class={"prose " ++ sizeClass ++ " " ++ colorClass ++ " " ++ alignClass ++ " " ++ spacingClass}>
    {children}
</div>

