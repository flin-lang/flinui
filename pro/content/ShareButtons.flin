// ============================================================================
// ShareButtons.flin â€” FlinUI PRO
// Social share buttons (Twitter, LinkedIn, Facebook, etc.)
// ============================================================================
// Props:
//   url: text - URL to share (default: current page URL)
//   title: text - Title for sharing (default: "")
//   description: text - Description for sharing (default: "")
//   platforms: array - Platforms to show (default: ["twitter", "linkedin", "facebook"])
//   variant: text - Button style ("default", "rounded", "icon-only") (default: "default")
//   size: text - Button size ("sm", "md", "lg") (default: "md")
//   showLabels: boolean - Show platform labels (default: true for default variant)
//   showCount: boolean - Show share count placeholder (default: false)
//   direction: text - Layout direction ("horizontal", "vertical") (default: "horizontal")
//   color: text - Color scheme ("brand", "neutral", "primary") (default: "brand")
// ============================================================================

url = props.url || window.location.href
title = props.title || ""
description = props.description || ""
platforms = props.platforms || ["twitter", "linkedin", "facebook"]
variant = props.variant || "default"
size = props.size || "md"
showLabels = props.showLabels || (variant == "default")
showCount = props.showCount || false
direction = props.direction || "horizontal"
color = props.color || "brand"

// Compute variant class
variantClass = match variant {
    "rounded" -> "share-buttons--rounded"
    "icon-only" -> "share-buttons--icon-only"
    _ -> "share-buttons--default"
}

// Compute size class
sizeClass = match size {
    "sm" -> "share-buttons--sm"
    "lg" -> "share-buttons--lg"
    _ -> "share-buttons--md"
}

// Compute direction class
directionClass = match direction {
    "vertical" -> "share-buttons--vertical"
    _ -> "share-buttons--horizontal"
}

// Compute color class
colorClass = match color {
    "neutral" -> "share-buttons--neutral"
    "primary" -> "share-buttons--primary"
    _ -> "share-buttons--brand"
}

// Encoded values for URLs
encodedUrl = encodeURIComponent(url)
encodedTitle = encodeURIComponent(title)
encodedDescription = encodeURIComponent(description)

// Share URLs for each platform
shareUrls = {
    twitter: "https://twitter.com/intent/tweet?url=" ++ encodedUrl ++ "&text=" ++ encodedTitle,
    linkedin: "https://www.linkedin.com/sharing/share-offsite/?url=" ++ encodedUrl,
    facebook: "https://www.facebook.com/sharer/sharer.php?u=" ++ encodedUrl,
    reddit: "https://reddit.com/submit?url=" ++ encodedUrl ++ "&title=" ++ encodedTitle,
    hackernews: "https://news.ycombinator.com/submitlink?u=" ++ encodedUrl ++ "&t=" ++ encodedTitle,
    email: "mailto:?subject=" ++ encodedTitle ++ "&body=" ++ encodedDescription ++ "%0A%0A" ++ encodedUrl,
    whatsapp: "https://api.whatsapp.com/send?text=" ++ encodedTitle ++ "%20" ++ encodedUrl,
    telegram: "https://t.me/share/url?url=" ++ encodedUrl ++ "&text=" ++ encodedTitle,
    pinterest: "https://pinterest.com/pin/create/button/?url=" ++ encodedUrl ++ "&description=" ++ encodedTitle,
    copy: none
}

// Platform labels
labels = {
    twitter: "Twitter",
    linkedin: "LinkedIn",
    facebook: "Facebook",
    reddit: "Reddit",
    hackernews: "Hacker News",
    email: "Email",
    whatsapp: "WhatsApp",
    telegram: "Telegram",
    pinterest: "Pinterest",
    copy: "Copy Link"
}

