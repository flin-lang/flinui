}

// State for copy button
copied = false

// Copy to clipboard handler
handleCopy = {
    navigator.clipboard.writeText(url)
    copied = true
    setTimeout({ copied = false }, 2000)
}

// Open share window
openShare = (platform) => {
    shareUrl = shareUrls[platform]
    if shareUrl != none {
        window.open(shareUrl, "_blank", "width=600,height=400,menubar=no,toolbar=no")
    }
}

<div class={"share-buttons " ++ variantClass ++ " " ++ sizeClass ++ " " ++ directionClass ++ " " ++ colorClass}>
    {for platform in platforms}
        {if platform == "copy"}
            <button
                class={"share-buttons__btn share-buttons__btn--" ++ platform}
                click={handleCopy}
                aria-label={if copied { "Copied!" } else { "Copy link" }}
                type="button"
            >
                <span class="share-buttons__icon">
                    {if copied}
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    {else}
                        {icons[platform]}
                    {/if}
                </span>
                {if showLabels}
                    <span class="share-buttons__label">{if copied { "Copied!" } else { labels[platform] }}</span>
                {/if}
            </button>
        {else}
            <a
                href={shareUrls[platform]}
                class={"share-buttons__btn share-buttons__btn--" ++ platform}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={"Share on " ++ labels[platform]}
                click={(e) => {
                    e.preventDefault()
                    openShare(platform)
                }}
            >
                <span class="share-buttons__icon">{icons[platform]}</span>
                {if showLabels}
                    <span class="share-buttons__label">{labels[platform]}</span>
                {/if}
                {if showCount}
                    <span class="share-buttons__count">0</span>
                {/if}
            </a>
        {/if}
    {/for}
</div>

