    border-radius: var(--flin-radius-md) var(--flin-radius-md) 0 0;
}

.dropdown--with-dividers .dropdown__list > *:last-child {
    border-radius: 0 0 var(--flin-radius-md) var(--flin-radius-md);
}

/* Disabled items */
.dropdown__list > *[disabled],
.dropdown__list > *.dropdown-item--disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
}

/* Danger items */
.dropdown__list > *.dropdown-item--danger {
    color: var(--flin-danger);
}

.dropdown__list > *.dropdown-item--danger:hover {
    background-color: var(--flin-danger-light);
}

.dropdown__list > *.dropdown-item--danger svg {
    color: var(--flin-danger);
}

/* Separator */
.dropdown__separator {
    height: 1px;
    background-color: var(--flin-neutral-200);
    margin: var(--flin-space-1) 0;
}

/* Group label */
.dropdown__label {
    padding: var(--flin-space-2) var(--flin-space-3);
    font-size: var(--flin-text-xs);
    font-weight: 600;
    color: var(--flin-fg-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Position: Bottom Start (default) */
.dropdown--bottom-start {
    top: 100%;
    left: 0;
    margin-top: var(--flin-space-1);
}

/* Position: Bottom */
.dropdown--bottom {
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: var(--flin-space-1);
}

/* Position: Bottom End */
.dropdown--bottom-end {
    top: 100%;
    right: 0;
    margin-top: var(--flin-space-1);
}

/* Position: Top */
.dropdown--top {
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: var(--flin-space-1);
    animation-name: dropdownFadeInTop;
}

/* Position: Top Start */
.dropdown--top-start {
    bottom: 100%;
    left: 0;
    margin-bottom: var(--flin-space-1);
    animation-name: dropdownFadeInTop;
}

/* Position: Top End */
.dropdown--top-end {
    bottom: 100%;
    right: 0;
    margin-bottom: var(--flin-space-1);
    animation-name: dropdownFadeInTop;
}

@keyframes dropdownFadeInTop {
    from {
        opacity: 0;
        transform: translateY(4px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Focus styling */
.flin-pro-dropdown:focus {
    outline: none;
}

/* Max height with scroll */
.dropdown__content {
    max-height: 300px;
    overflow-y: auto;
}

/* Dark theme */
[data-theme="dark"] .flin-pro-dropdown {
    background-color: var(--flin-neutral-800);
    border-color: var(--flin-neutral-700);
}

[data-theme="dark"] .dropdown__list > *:hover,
[data-theme="dark"] .dropdown__list > *:focus {
    background-color: var(--flin-neutral-700);
}

[data-theme="dark"] .dropdown--with-dividers .dropdown__list > *:not(:last-child) {
    border-color: var(--flin-neutral-700);
}

[data-theme="dark"] .dropdown__separator {
    background-color: var(--flin-neutral-700);
}
</style>
