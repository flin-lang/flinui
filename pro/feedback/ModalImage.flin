}

/* Caption */
.modal-image-caption {
    padding: var(--flin-space-4) var(--flin-space-6);
    text-align: center;
    flex-shrink: 0;
}

.modal-image-caption p {
    margin: 0;
    font-size: var(--flin-text-sm);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.5;
}

/* Thumbnails */
.modal-image-thumbnails {
    display: flex;
    justify-content: center;
    gap: var(--flin-space-2);
    padding: var(--flin-space-4) var(--flin-space-6);
    overflow-x: auto;
    flex-shrink: 0;
}

.modal-image-thumb {
    width: 60px;
    height: 60px;
    padding: 0;
    background: transparent;
    border: 2px solid transparent;
    border-radius: var(--flin-radius-md);
    cursor: pointer;
    overflow: hidden;
    flex-shrink: 0;
    opacity: 0.5;
    transition: all var(--flin-transition-fast);
}

.modal-image-thumb:hover {
    opacity: 0.8;
}

.modal-image-thumb--active {
    border-color: white;
    opacity: 1;
