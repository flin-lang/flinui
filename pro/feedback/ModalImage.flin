        padding: 0 var(--flin-space-2);
    }

    .modal-image-nav {
        width: 40px;
        height: 40px;
    }

    .modal-image-nav--prev {
        left: var(--flin-space-2);
    }

    .modal-image-nav--next {
        right: var(--flin-space-2);
    }

    .modal-image-nav svg {
        width: 20px;
        height: 20px;
    }

    .modal-image-thumbnails {
        display: none;
    }

    .modal-image-main--zoomed {
        transform: scale(2);
    }
}

/* Touch device optimizations */
@media (hover: none) {
    .modal-image-nav {
        background: rgba(255, 255, 255, 0.2);
    }
}
</style>
