.spinner-overlay-hint {
    margin: 0;
    font-size: var(--flin-text-sm);
    opacity: 0.7;
    line-height: 1.5;
}

/* Cancel button */
.spinner-overlay-cancel {
    margin-top: var(--flin-space-2);
    padding: var(--flin-space-2) var(--flin-space-4);
    background: transparent;
    border: 1px solid currentColor;
    border-radius: var(--flin-radius-lg);
    color: inherit;
    font-size: var(--flin-text-sm);
    font-weight: 500;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity var(--flin-transition-fast);
}

.spinner-overlay-cancel:hover {
    opacity: 1;
}

.spinner-overlay-cancel:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
}

/* Color variants for spinner */
.spinner-overlay--auto .spinner-circle,
.spinner-overlay--light .spinner-circle {
    stroke: var(--flin-primary);
}

.spinner-overlay--dark .spinner-circle {
    stroke: white;
}

.spinner-overlay--dark .spinner-progress-bar {
    background-color: white;
}

/* Mobile responsiveness */
@media (max-width: 640px) {
    .spinner-overlay-content {
        padding: var(--flin-space-4);
    }

    .spinner-overlay-progress {
        width: 160px;
    }
}

/* System dark mode */
[data-theme="dark"] .spinner-overlay--auto {
    background-color: rgba(0, 0, 0, 0.9);
    color: white;
}

[data-theme="dark"] .spinner-overlay--auto .spinner-circle {
    stroke: var(--flin-primary);
}

[data-theme="dark"] .spinner-overlay--light {
    background-color: rgba(30, 30, 30, 0.95);
    color: var(--flin-neutral-100);
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
    .spinner-svg {
        animation: spinnerRotateSlow 4s linear infinite;
    }

    @keyframes spinnerRotateSlow {
        100% {
            transform: rotate(360deg);
        }
    }

    .spinner-circle {
        animation: none;
        stroke-dasharray: 60, 200;
    }

    .spinner-branded-ring {
        animation: spinnerBrandedRingSlow 2s linear infinite;
    }

    @keyframes spinnerBrandedRingSlow {
        100% {
            transform: rotate(360deg);
        }
    }

    .spinner-branded-logo {
        animation: none;
    }
}
</style>
