    object-fit: contain;
}

@keyframes spinnerBrandedPulse {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.6;
        transform: scale(0.9);
    }
}

/* Progress bar */
.spinner-overlay-progress {
    width: 200px;
    height: 4px;
    background-color: rgba(128, 128, 128, 0.2);
    border-radius: var(--flin-radius-full);
    overflow: hidden;
    position: relative;
}

.spinner-progress-bar {
    height: 100%;
    background-color: var(--flin-primary);
    border-radius: var(--flin-radius-full);
    transition: width var(--flin-transition-normal);
}

.spinner-progress-text {
    position: absolute;
    top: calc(100% + var(--flin-space-2));
    left: 50%;
    transform: translateX(-50%);
    font-size: var(--flin-text-xs);
    font-weight: 500;
    white-space: nowrap;
}

/* Message */
.spinner-overlay-message {
    margin: 0;
    font-size: var(--flin-text-base);
    font-weight: 500;
    line-height: 1.5;
}

