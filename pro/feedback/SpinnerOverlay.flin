        stroke-dasharray: 1, 200;
        stroke-dashoffset: 0;
    }
    50% {
        stroke-dasharray: 90, 200;
        stroke-dashoffset: -35px;
    }
    100% {
        stroke-dasharray: 90, 200;
        stroke-dashoffset: -125px;
    }
}

/* Branded spinner */
.spinner-branded {
    position: relative;
    width: 100%;
    height: 100%;
}

.spinner-branded-ring {
    position: absolute;
    inset: 0;
