// ============================================================================
// FlyoutMenu.flin â€” FlinUI PRO Navigation Component
// Hover-triggered dropdown menu for single nav items with icons and descriptions
// ============================================================================
// Props:
//   - trigger: Trigger button text (text)
//   - items: Array of menu items [{ label, href, description, icon, badge }] (array)
//   - placement: Menu placement - bottom-start, bottom-center, bottom-end (text)
//   - showArrow: Show arrow indicator on trigger (bool)
//   - variant: Color scheme - light, dark (text)
//   - width: Menu width - auto, sm, md, lg (text)

trigger = props.trigger || "Menu"
items = props.items || []
placement = props.placement || "bottom-start"
showArrow = props.showArrow || true
variant = props.variant || "light"
width = props.width || "md"

// State
isOpen = false

openMenu = {
    isOpen = true
}

closeMenu = {
    isOpen = false
}

// Variant classes
variantClass = match variant {
    "dark" => "flyout-dark"
    _ => "flyout-light"
}

// Placement classes
placementClass = match placement {
    "bottom-center" => "flyout-center"
    "bottom-end" => "flyout-end"
    _ => "flyout-start"
}

// Width classes
widthClass = match width {
    "auto" => "flyout-width-auto"
    "sm" => "flyout-width-sm"
    "lg" => "flyout-width-lg"
    _ => "flyout-width-md"
}

// Open class
openClass = match isOpen {
    true => " flyout-open"
    _ => ""
}

flyoutClass = "flin-flyout-menu " ++ variantClass ++ " " ++ placementClass ++ " " ++ widthClass ++ openClass

<div
    class={flyoutClass}
    mouseenter={openMenu}
    mouseleave={closeMenu}
>
    <button class="flyout-trigger" aria-expanded={isOpen} aria-haspopup="true">
        <span class="flyout-trigger-text">{trigger}</span>
        {if showArrow}
            <svg class="flyout-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"/>
            </svg>
        {/if}
    </button>

    <div class="flyout-panel" role="menu">
        <div class="flyout-content">
            {for item in items}
                {if item.divider == true}
                    <div class="flyout-divider"></div>
                {else}
                    <a href={item.href} class="flyout-item" role="menuitem" click={closeMenu}>
                        {if item.icon != none}
                            <span class="flyout-item-icon">{item.icon}</span>
                        {/if}
                        <div class="flyout-item-content">
                            <span class="flyout-item-label">
                                {item.label}
                                {if item.badge != none}
                                    <span class="flyout-item-badge">{item.badge}</span>
                                {/if}
                            </span>
                            {if item.description != none}
                                <span class="flyout-item-desc">{item.description}</span>
                            {/if}
                        </div>
                        {if item.external == true}
                            <svg class="flyout-item-external" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                <polyline points="15 3 21 3 21 9"/>
                                <line x1="10" y1="14" x2="21" y2="3"/>
                            </svg>
                        {/if}
                    </a>
                {/if}
            {/for}
        </div>
    </div>
</div>

<style scoped>
