// ============================================================================
// MegaMenu.flin â€” FlinUI PRO Navigation Component
// Large dropdown menu with columns, images, and featured items
// ============================================================================
// Props:
//   - logo: Logo image URL or none for default (text)
//   - logoText: Text to show with/instead of logo (text)
//   - logoHref: Link for logo click (text)
//   - items: Array of menu items with mega menu content (array)
//     [{ label, href, mega: { columns: [{ title, links: [{ label, href, description }] }], featured: { image, title, description, href } } }]
//   - ctaLabel: CTA button text (text)
//   - ctaHref: CTA button link (text)
//   - variant: Color scheme - light, dark (text)

logo = props.logo || none
logoText = props.logoText || "Brand"
logoHref = props.logoHref || "/"
items = props.items || []
ctaLabel = props.ctaLabel || none
ctaHref = props.ctaHref || none
variant = props.variant || "light"

// State
mobileOpen = false
activeMega = none
activeMobileMenu = none

toggleMobile = {
    mobileOpen = !mobileOpen
    activeMobileMenu = none
}

closeMobile = {
    mobileOpen = false
    activeMobileMenu = none
}

openMega = fn(index) {
    activeMega = index
}

closeMega = {
    activeMega = none
}

toggleMobileMenu = fn(index) {
    if activeMobileMenu == index {
        activeMobileMenu = none
    } else {
        activeMobileMenu = index
    }
}

// Variant classes
variantClass = match variant {
    "dark" => "megamenu-dark"
    _ => "megamenu-light"
}

// Mobile menu class
mobileClass = match mobileOpen {
    true => " navbar-mobile-open"
    _ => ""
}

navbarClass = "flin-megamenu " ++ variantClass ++ mobileClass

<nav class={navbarClass} role="navigation" aria-label="Main navigation">
    <div class="megamenu-container">
        <!-- Logo -->
        <a href={logoHref} class="megamenu-brand">
            {if logo != none}
                <img src={logo} alt={logoText} class="megamenu-logo-img">
            {else}
                <div class="megamenu-logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
            {/if}
            <span class="megamenu-logo-text">{logoText}</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="megamenu-nav">
            {for item, index in items}
                {if item.mega != none}
                    <div
                        class="megamenu-item-wrapper"
                        mouseenter={fn() { openMega(index) }}
                        mouseleave={closeMega}
                    >
                        <button
                            class={"megamenu-trigger" ++ (match activeMega == index { true => " megamenu-trigger-active", _ => "" })}
                            aria-expanded={activeMega == index}
                            aria-haspopup="true"
                        >
                            {item.label}
                            <svg class="megamenu-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>

                        <!-- Mega Menu Panel -->
                        <div class={"megamenu-panel" ++ (match activeMega == index { true => " megamenu-panel-open", _ => "" })}>
                            <div class="megamenu-panel-inner">
                                <!-- Columns -->
                                <div class="megamenu-columns">
                                    {for column in item.mega.columns}
                                        <div class="megamenu-column">
                                            {if column.title != none}
                                                <h3 class="megamenu-column-title">{column.title}</h3>
                                            {/if}
                                            <ul class="megamenu-column-links">
                                                {for link in column.links}
                                                    <li>
                                                        <a href={link.href} class="megamenu-link" click={closeMega}>
                                                            <span class="megamenu-link-label">{link.label}</span>
                                                            {if link.description != none}
                                                                <span class="megamenu-link-desc">{link.description}</span>
                                                            {/if}
                                                        </a>
                                                    </li>
                                                {/for}
                                            </ul>
                                        </div>
                                    {/for}
                                </div>

                                <!-- Featured Section -->
                                {if item.mega.featured != none}
                                    <div class="megamenu-featured">
                                        {if item.mega.featured.image != none}
                                            <a href={item.mega.featured.href} class="megamenu-featured-link" click={closeMega}>
                                                <img src={item.mega.featured.image} alt={item.mega.featured.title} class="megamenu-featured-img">
                                                <div class="megamenu-featured-overlay">
                                                    <h4 class="megamenu-featured-title">{item.mega.featured.title}</h4>
                                                    <p class="megamenu-featured-desc">{item.mega.featured.description}</p>
                                                    <span class="megamenu-featured-cta">
                                                        Learn more
                                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="5" y1="12" x2="19" y2="12"/>
                                                            <polyline points="12 5 19 12 12 19"/>
                                                        </svg>
                                                    </span>
                                                </div>
                                            </a>
                                        {else}
                                            <a href={item.mega.featured.href} class="megamenu-featured-text" click={closeMega}>
                                                <h4 class="megamenu-featured-title">{item.mega.featured.title}</h4>
                                                <p class="megamenu-featured-desc">{item.mega.featured.description}</p>
                                                <span class="megamenu-featured-cta">
                                                    Learn more
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <line x1="5" y1="12" x2="19" y2="12"/>
                                                        <polyline points="12 5 19 12 12 19"/>
                                                    </svg>
                                                </span>
                                            </a>
                                        {/if}
                                    </div>
                                {/if}
                            </div>
                        </div>
                    </div>
                {else}
                    <a href={item.href} class="megamenu-link-simple">{item.label}</a>
                {/if}
            {/for}
        </div>

        <!-- Actions -->
        <div class="megamenu-actions">
            {if ctaLabel != none}
                <a href={ctaHref} class="megamenu-cta">{ctaLabel}</a>
            {/if}
        </div>

        <!-- Mobile Toggle -->
        <button
            class="megamenu-toggle"
            click={toggleMobile}
            aria-label="Toggle navigation menu"
            aria-expanded={mobileOpen}
        >
            {if mobileOpen}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            {else}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
            {/if}
        </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="megamenu-mobile">
        <div class="megamenu-mobile-inner">
            {for item, index in items}
                {if item.mega != none}
                    <div class="megamenu-mobile-section">
                        <button
                            class={"megamenu-mobile-trigger" ++ (match activeMobileMenu == index { true => " is-open", _ => "" })}
                            click={fn() { toggleMobileMenu(index) }}
                        >
                            {item.label}
                            <svg class="megamenu-mobile-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        {if activeMobileMenu == index}
                            <div class="megamenu-mobile-content">
                                {for column in item.mega.columns}
                                    <div class="megamenu-mobile-column">
                                        {if column.title != none}
                                            <h4 class="megamenu-mobile-column-title">{column.title}</h4>
                                        {/if}
                                        {for link in column.links}
                                            <a href={link.href} class="megamenu-mobile-link" click={closeMobile}>
                                                {link.label}
                                            </a>
                                        {/for}
                                    </div>
                                {/for}
                            </div>
                        {/if}
                    </div>
                {else}
                    <a href={item.href} class="megamenu-mobile-simple" click={closeMobile}>{item.label}</a>
                {/if}
            {/for}
            {if ctaLabel != none}
                <a href={ctaHref} class="megamenu-mobile-cta" click={closeMobile}>{ctaLabel}</a>
            {/if}
        </div>
    </div>
</nav>

