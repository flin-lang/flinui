// ============================================================================
// NavbarSticky.flin â€” FlinUI PRO Navigation Component
// Navbar that sticks to top on scroll with smooth shadow animation
// ============================================================================
// Props:
//   - logo: Logo image URL or none for default (text)
//   - logoText: Text to show with/instead of logo (text)
//   - logoHref: Link for logo click (text)
//   - links: Array of nav links [{ label, href, active }] (array)
//   - ctaLabel: CTA button text (text)
//   - ctaHref: CTA button link (text)
//   - variant: Color scheme - light, dark (text)
//   - stickyOffset: Scroll offset before becoming sticky (number)
//   - showProgress: Show scroll progress bar (bool)

logo = props.logo || none
logoText = props.logoText || "Brand"
logoHref = props.logoHref || "/"
links = props.links || []
ctaLabel = props.ctaLabel || none
ctaHref = props.ctaHref || none
variant = props.variant || "light"
stickyOffset = props.stickyOffset || 0
showProgress = props.showProgress || false

// State
mobileOpen = false
isSticky = false
scrollProgress = 0

toggleMobile = {
    mobileOpen = !mobileOpen
}

closeMobile = {
    mobileOpen = false
}

// Handle scroll
handleScroll = {
    scrollY = window.scrollY
    isSticky = scrollY > stickyOffset

    if showProgress {
        docHeight = document.documentElement.scrollHeight - window.innerHeight
        if docHeight > 0 {
            scrollProgress = (scrollY / docHeight) * 100
        }
    }
}

// Attach scroll listener on mount
window.addEventListener("scroll", handleScroll)

// Variant classes
variantClass = match variant {
    "dark" => "navbar-sticky-dark"
    _ => "navbar-sticky-light"
}

// Sticky class
stickyClass = match isSticky {
    true => " is-sticky"
    _ => ""
}

// Mobile menu class
mobileClass = match mobileOpen {
    true => " navbar-mobile-open"
    _ => ""
}

navbarClass = "flin-navbar-sticky " ++ variantClass ++ stickyClass ++ mobileClass

<nav class={navbarClass} role="navigation" aria-label="Main navigation">
    {if showProgress}
        <div class="navbar-progress-bar">
            <div class="navbar-progress-fill" style="width: {scrollProgress}%"></div>
        </div>
    {/if}

    <div class="navbar-container">
        <!-- Logo -->
        <a href={logoHref} class="navbar-brand">
            {if logo != none}
                <img src={logo} alt={logoText} class="navbar-logo-img">
            {else}
                <div class="navbar-logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
            {/if}
            <span class="navbar-logo-text">{logoText}</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="navbar-nav">
            {for link in links}
                <a
                    href={link.href}
                    class={"navbar-link" ++ (match link.active { true => " navbar-link-active", _ => "" })}
                >
                    {link.label}
                </a>
            {/for}
        </div>

        <!-- Actions -->
        <div class="navbar-actions">
            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-cta">{ctaLabel}</a>
            {/if}
        </div>

        <!-- Mobile Menu Toggle -->
        <button
            class="navbar-toggle"
            click={toggleMobile}
            aria-label="Toggle navigation menu"
            aria-expanded={mobileOpen}
        >
            {if mobileOpen}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            {else}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
            {/if}
        </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="navbar-mobile">
        <div class="navbar-mobile-inner">
            {for link in links}
                <a
                    href={link.href}
                    class={"navbar-mobile-link" ++ (match link.active { true => " navbar-mobile-link-active", _ => "" })}
                    click={closeMobile}
                >
                    {link.label}
                </a>
            {/for}
            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-mobile-cta" click={closeMobile}>{ctaLabel}</a>
            {/if}
        </div>
    </div>
</nav>

