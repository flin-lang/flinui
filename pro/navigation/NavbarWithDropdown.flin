// ============================================================================
// NavbarWithDropdown.flin â€” FlinUI PRO Navigation Component
// Navbar with dropdown menus for navigation items with nested options
// ============================================================================
// Props:
//   - logo: Logo image URL or none for default (text)
//   - logoText: Text to show with/instead of logo (text)
//   - logoHref: Link for logo click (text)
//   - links: Array of nav links [{ label, href, active, dropdown: [{ label, href, description, icon }] }] (array)
//   - ctaLabel: CTA button text (text)
//   - ctaHref: CTA button link (text)
//   - variant: Color scheme - light, dark (text)

logo = props.logo || none
logoText = props.logoText || "Brand"
logoHref = props.logoHref || "/"
links = props.links || []
ctaLabel = props.ctaLabel || none
ctaHref = props.ctaHref || none
variant = props.variant || "light"

// State
mobileOpen = false
activeDropdown = none

toggleMobile = {
    mobileOpen = !mobileOpen
    activeDropdown = none
}

closeMobile = {
    mobileOpen = false
    activeDropdown = none
}

openDropdown = fn(index) {
    activeDropdown = index
}

closeDropdown = {
    activeDropdown = none
}

toggleDropdown = fn(index) {
    if activeDropdown == index {
        activeDropdown = none
    } else {
        activeDropdown = index
    }
}

// Variant classes
variantClass = match variant {
    "dark" => "navbar-dropdown-dark"
    _ => "navbar-dropdown-light"
}

// Mobile menu class
mobileClass = match mobileOpen {
    true => " navbar-mobile-open"
    _ => ""
}

navbarClass = "flin-navbar-dropdown " ++ variantClass ++ mobileClass

<nav class={navbarClass} role="navigation" aria-label="Main navigation">
    <div class="navbar-container">
        <!-- Logo -->
        <a href={logoHref} class="navbar-brand">
            {if logo != none}
                <img src={logo} alt={logoText} class="navbar-logo-img">
            {else}
                <div class="navbar-logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
            {/if}
            <span class="navbar-logo-text">{logoText}</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="navbar-nav">
            {for link, index in links}
                {if link.dropdown != none}
                    <div
                        class="navbar-dropdown-wrapper"
                        mouseenter={fn() { openDropdown(index) }}
                        mouseleave={closeDropdown}
                    >
                        <button
                            class={"navbar-link navbar-link-dropdown" ++ (match link.active { true => " navbar-link-active", _ => "" })}
                            aria-expanded={activeDropdown == index}
                            aria-haspopup="true"
                        >
                            {link.label}
                            <svg class="navbar-dropdown-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        <div class={"navbar-dropdown-menu" ++ (match activeDropdown == index { true => " navbar-dropdown-open", _ => "" })}>
                            <div class="navbar-dropdown-content">
                                {for item in link.dropdown}
                                    <a href={item.href} class="navbar-dropdown-item" click={closeDropdown}>
                                        {if item.icon != none}
                                            <span class="navbar-dropdown-icon">{item.icon}</span>
                                        {/if}
                                        <div class="navbar-dropdown-item-content">
                                            <span class="navbar-dropdown-item-label">{item.label}</span>
                                            {if item.description != none}
                                                <span class="navbar-dropdown-item-desc">{item.description}</span>
                                            {/if}
                                        </div>
                                    </a>
                                {/for}
                            </div>
                        </div>
                    </div>
                {else}
                    <a
                        href={link.href}
                        class={"navbar-link" ++ (match link.active { true => " navbar-link-active", _ => "" })}
                    >
                        {link.label}
                    </a>
                {/if}
            {/for}
        </div>

        <!-- Actions -->
        <div class="navbar-actions">
            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-cta">{ctaLabel}</a>
            {/if}
        </div>

        <!-- Mobile Menu Toggle -->
        <button
            class="navbar-toggle"
            click={toggleMobile}
            aria-label="Toggle navigation menu"
            aria-expanded={mobileOpen}
        >
            {if mobileOpen}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            {else}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
            {/if}
        </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="navbar-mobile">
        <div class="navbar-mobile-inner">
            {for link, index in links}
                {if link.dropdown != none}
                    <div class="navbar-mobile-dropdown">
                        <button
                            class={"navbar-mobile-dropdown-btn" ++ (match activeDropdown == index { true => " navbar-mobile-dropdown-open", _ => "" })}
                            click={fn() { toggleDropdown(index) }}
                        >
                            {link.label}
                            <svg class="navbar-mobile-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="6 9 12 15 18 9"/>
                            </svg>
                        </button>
                        {if activeDropdown == index}
                            <div class="navbar-mobile-dropdown-content">
                                {for item in link.dropdown}
                                    <a href={item.href} class="navbar-mobile-dropdown-item" click={closeMobile}>
                                        {if item.icon != none}
                                            <span class="navbar-mobile-dropdown-icon">{item.icon}</span>
                                        {/if}
                                        <div class="navbar-mobile-dropdown-text">
                                            <span class="navbar-mobile-dropdown-label">{item.label}</span>
                                            {if item.description != none}
                                                <span class="navbar-mobile-dropdown-desc">{item.description}</span>
                                            {/if}
                                        </div>
                                    </a>
                                {/for}
                            </div>
                        {/if}
                    </div>
                {else}
                    <a
                        href={link.href}
                        class={"navbar-mobile-link" ++ (match link.active { true => " navbar-mobile-link-active", _ => "" })}
                        click={closeMobile}
                    >
                        {link.label}
                    </a>
                {/if}
            {/for}
            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-mobile-cta" click={closeMobile}>{ctaLabel}</a>
            {/if}
        </div>
    </div>
</nav>

