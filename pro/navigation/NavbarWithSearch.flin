// ============================================================================
// NavbarWithSearch.flin â€” FlinUI PRO Navigation Component
// Navbar with integrated search input and expandable mobile search
// ============================================================================
// Props:
//   - logo: Logo image URL or none for default (text)
//   - logoText: Text to show with/instead of logo (text)
//   - logoHref: Link for logo click (text)
//   - links: Array of nav links [{ label, href, active }] (array)
//   - searchPlaceholder: Placeholder text for search (text)
//   - onSearch: Search submit handler (function)
//   - ctaLabel: CTA button text (text)
//   - ctaHref: CTA button link (text)
//   - variant: Color scheme - light, dark (text)
//   - searchPosition: Position of search - center, right (text)

logo = props.logo || none
logoText = props.logoText || "Brand"
logoHref = props.logoHref || "/"
links = props.links || []
searchPlaceholder = props.searchPlaceholder || "Search..."
onSearch = props.onSearch || none
ctaLabel = props.ctaLabel || none
ctaHref = props.ctaHref || none
variant = props.variant || "light"
searchPosition = props.searchPosition || "center"

// State
mobileOpen = false
searchOpen = false
searchQuery = ""

toggleMobile = {
    mobileOpen = !mobileOpen
    searchOpen = false
}

toggleSearch = {
    searchOpen = !searchOpen
    if searchOpen {
        mobileOpen = false
    }
}

closeMobile = {
    mobileOpen = false
}

handleSearchInput = fn(e) {
    searchQuery = e.target.value
}

handleSearchSubmit = {
    event.preventDefault()
    if onSearch && searchQuery != "" {
        onSearch(searchQuery)
    }
}

// Variant classes
variantClass = match variant {
    "dark" => "navbar-search-dark"
    _ => "navbar-search-light"
}

// Mobile menu class
mobileClass = match mobileOpen {
    true => " navbar-mobile-open"
    _ => ""
}

// Search open class
searchClass = match searchOpen {
    true => " navbar-search-expanded"
    _ => ""
}

// Search position class
positionClass = match searchPosition {
    "right" => " search-right"
    _ => " search-center"
}

navbarClass = "flin-navbar-search " ++ variantClass ++ mobileClass ++ searchClass ++ positionClass

<nav class={navbarClass} role="navigation" aria-label="Main navigation">
    <div class="navbar-container">
        <!-- Logo -->
        <a href={logoHref} class="navbar-brand">
            {if logo != none}
                <img src={logo} alt={logoText} class="navbar-logo-img">
            {else}
                <div class="navbar-logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
            {/if}
            <span class="navbar-logo-text">{logoText}</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="navbar-nav">
            {for link in links}
                <a
                    href={link.href}
                    class={"navbar-link" ++ (match link.active { true => " navbar-link-active", _ => "" })}
                >
                    {link.label}
                </a>
            {/for}
        </div>

        <!-- Search Form (Desktop) -->
        <form class="navbar-search-form" submit={handleSearchSubmit}>
            <div class="navbar-search-wrapper">
                <span class="navbar-search-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                </span>
                <input
                    type="search"
                    class="navbar-search-input"
                    placeholder={searchPlaceholder}
                    value={searchQuery}
                    input={handleSearchInput}
                    aria-label="Search"
                >
                {if searchQuery != ""}
                    <button
                        type="button"
                        class="navbar-search-clear"
                        click={fn() { searchQuery = "" }}
                        aria-label="Clear search"
                    >
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/>
                            <line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                    </button>
                {/if}
            </div>
        </form>

        <!-- Actions -->
        <div class="navbar-actions">
            <!-- Mobile search toggle -->
            <button
                class="navbar-search-toggle"
                click={toggleSearch}
                aria-label="Toggle search"
            >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                </svg>
            </button>

            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-cta">{ctaLabel}</a>
            {/if}
        </div>

        <!-- Mobile Menu Toggle -->
        <button
            class="navbar-toggle"
            click={toggleMobile}
            aria-label="Toggle navigation menu"
            aria-expanded={mobileOpen}
        >
            {if mobileOpen}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            {else}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
            {/if}
        </button>
    </div>

    <!-- Mobile Search Bar -->
    <div class="navbar-mobile-search">
        <form class="navbar-mobile-search-form" submit={handleSearchSubmit}>
            <span class="navbar-search-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                </svg>
            </span>
            <input
                type="search"
                class="navbar-mobile-search-input"
                placeholder={searchPlaceholder}
                value={searchQuery}
                input={handleSearchInput}
                aria-label="Search"
            >
            <button type="button" class="navbar-mobile-search-close" click={toggleSearch}>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </form>
    </div>

    <!-- Mobile Navigation -->
    <div class="navbar-mobile">
        <div class="navbar-mobile-inner">
            {for link in links}
                <a
                    href={link.href}
                    class={"navbar-mobile-link" ++ (match link.active { true => " navbar-mobile-link-active", _ => "" })}
                    click={closeMobile}
                >
                    {link.label}
                </a>
            {/for}
            {if ctaLabel != none}
                <a href={ctaHref} class="navbar-mobile-cta" click={closeMobile}>{ctaLabel}</a>
            {/if}
        </div>
    </div>
</nav>

