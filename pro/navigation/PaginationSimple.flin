// ============================================================================
// PaginationSimple.flin â€” FlinUI PRO Navigation Component
// Simple prev/next pagination with page indicator
// ============================================================================
// Props:
//   - currentPage: Current active page (number)
//   - totalPages: Total number of pages (number)
//   - onPrevious: Callback for previous button (function)
//   - onNext: Callback for next button (function)
//   - showPageInfo: Show "Page X of Y" text (boolean)
//   - size: Size variant - sm, md, lg (string)
//   - variant: Style variant - default, outline, minimal (string)
//   - labels: Custom labels object with prev, next keys (object)

currentPage = props.currentPage || 1
totalPages = props.totalPages || 10
onPrevious = props.onPrevious || none
onNext = props.onNext || none
showPageInfo = props.showPageInfo || true
size = props.size || "md"
variant = props.variant || "default"
labels = props.labels || ["prev": "Previous", "next": "Next"]

// Size class
sizeClass = match size {
    "sm" => "pagination-simple-sm"
    "lg" => "pagination-simple-lg"
    _ => "pagination-simple-md"
}

// Variant class
variantClass = match variant {
    "outline" => "pagination-simple-outline"
    "minimal" => "pagination-simple-minimal"
    _ => "pagination-simple-default"
}

// Navigation handlers
handlePrevious = () => {
    if currentPage > 1 && onPrevious != none {
        onPrevious(currentPage - 1)
    }
}

handleNext = () => {
    if currentPage < totalPages && onNext != none {
        onNext(currentPage + 1)
    }
}

// Disabled states
prevDisabled = currentPage == 1
nextDisabled = currentPage == totalPages

<nav
    class="flin-pagination-simple {sizeClass} {variantClass}"
    aria-label="Simple page navigation"
    role="navigation"
>
    <button
        class="pagination-simple-btn pagination-simple-prev"
        click={handlePrevious}
        disabled={prevDisabled}
        aria-label="Go to previous page"
    >
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <span class="pagination-simple-label">{labels.prev}</span>
    </button>

    {if showPageInfo}
        <div class="pagination-simple-info">
            <span class="pagination-simple-current">{currentPage}</span>
            <span class="pagination-simple-separator">of</span>
            <span class="pagination-simple-total">{totalPages}</span>
        </div>
    {/if}

    <button
        class="pagination-simple-btn pagination-simple-next"
        click={handleNext}
        disabled={nextDisabled}
        aria-label="Go to next page"
    >
        <span class="pagination-simple-label">{labels.next}</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
    </button>
</nav>

