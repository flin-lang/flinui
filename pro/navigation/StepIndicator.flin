// ============================================================================
// StepIndicator.flin â€” FlinUI PRO Navigation Component
// Multi-step progress indicator with numbered steps and connecting lines
// ============================================================================
// Props:
//   - steps: List of step objects with label, description, icon (list)
//   - currentStep: Current active step (1-indexed) (number)
//   - variant: Orientation - horizontal, vertical (string)
//   - size: Size variant - sm, md, lg (string)
//   - showLabels: Show step labels (boolean)
//   - clickable: Allow clicking on steps (boolean)
//   - onStepClick: Callback when step is clicked (function or none)
//   - color: Accent color - gold, blue, green, purple (string)

steps = props.steps || [
    ["label": "Account", "description": "Create your account"],
    ["label": "Details", "description": "Personal information"],
    ["label": "Verify", "description": "Verify your email"],
    ["label": "Complete", "description": "Setup complete"]
]
currentStep = props.currentStep || 1
variant = props.variant || "horizontal"
size = props.size || "md"
showLabels = props.showLabels || true
clickable = props.clickable || false
onStepClick = props.onStepClick || none
color = props.color || "gold"

// Size class
sizeClass = match size {
    "sm" => "step-indicator-sm"
    "lg" => "step-indicator-lg"
    _ => "step-indicator-md"
}

// Variant class
variantClass = match variant {
    "vertical" => "step-indicator-vertical"
    _ => "step-indicator-horizontal"
}

// Color class
colorClass = match color {
    "blue" => "step-indicator-blue"
    "green" => "step-indicator-green"
    "purple" => "step-indicator-purple"
    _ => "step-indicator-gold"
}

// Get step status
getStepStatus = (index) => {
    stepNum = index + 1
    if stepNum < currentStep {
        return "completed"
    } else if stepNum == currentStep {
        return "active"
    } else {
        return "pending"
    }
}

// Handle step click
handleStepClick = (index) => {
    if clickable && onStepClick != none {
        onStepClick(index + 1)
    }
}

<div
    class="flin-step-indicator {variantClass} {sizeClass} {colorClass}"
    role="navigation"
    aria-label="Progress steps"
>
    {for step, index in steps}
        <div
            class="step-item step-{getStepStatus(index)} {if clickable}step-clickable{/if}"
            click={() => handleStepClick(index)}
        >
            <div class="step-marker">
                <div class="step-circle">
                    {if getStepStatus(index) == "completed"}
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    {else}
                        <span class="step-number">{index + 1}</span>
                    {/if}
                </div>
                {if index < steps.length - 1}
                    <div class="step-connector">
                        <div class="connector-track"></div>
                        <div class="connector-progress {if getStepStatus(index) == 'completed'}connector-filled{/if}"></div>
                    </div>
                {/if}
            </div>

            {if showLabels}
                <div class="step-content">
                    <span class="step-label">{step.label}</span>
                    {if step.description != none && variant == "vertical"}
                        <span class="step-description">{step.description}</span>
                    {/if}
                </div>
            {/if}
        </div>
    {/for}
</div>

