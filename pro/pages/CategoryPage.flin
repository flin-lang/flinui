      <!-- Price Range -->
      <div class="filter-section">
        <h4>Price Range</h4>
        <div class="price-inputs">
          <div class="price-input">
            <span>$</span>
            <input type="number" value={priceRange[0]} placeholder="Min" />
          </div>
          <span class="price-separator">to</span>
          <div class="price-input">
            <span>$</span>
            <input type="number" value={priceRange[1]} placeholder="Max" />
          </div>
        </div>
        <div class="price-slider">
          <div class="slider-track">
            <div class="slider-range" style="left: 0%; right: 0%;"></div>
          </div>
        </div>
      </div>

      <!-- Brands -->
      <div class="filter-section">
        <h4>Brand</h4>
        <div class="filter-options">
          {for brand in brands}
            <label class="filter-option">
              <input type="checkbox" />
              <span class="option-label">{brand.name}</span>
              <span class="option-count">({brand.count})</span>
            </label>
          {/for}
        </div>
      </div>

      <!-- Rating -->
      <div class="filter-section">
        <h4>Rating</h4>
        <div class="rating-options">
          <button class={"rating-btn " + (selectedRating == 4 ? "selected" : "")} click={() => selectedRating = 4}>
            <div class="stars">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            </div>
            <span>& up</span>
          </button>
          <button class={"rating-btn " + (selectedRating == 3 ? "selected" : "")} click={() => selectedRating = 3}>
            <div class="stars">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            </div>
            <span>& up</span>
          </button>
        </div>
      </div>

      <!-- Availability -->
      <div class="filter-section">
        <h4>Availability</h4>
        <div class="filter-options">
          <label class="filter-option">
            <input type="checkbox" checked />
            <span class="option-label">In Stock</span>
          </label>
          <label class="filter-option">
            <input type="checkbox" />
            <span class="option-label">On Sale</span>
          </label>
        </div>
      </div>
    </aside>

    <!-- Products Area -->
    <main class="products-area">
      <!-- Toolbar -->
      <div class="products-toolbar">
        <div class="toolbar-left">
          <button class="filter-toggle" click={() => showFilters = !showFilters}>
