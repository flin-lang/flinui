  { id: 6, name: "Mechanical Keyboard", price: 169.00, originalPrice: none, rating: 4.9, reviews: 456, brand: "DigiWorld", image: "keyboard.jpg", badge: "Top Rated" },
  { id: 7, name: "Gaming Mouse", price: 89.99, originalPrice: 119.99, rating: 4.6, reviews: 234, brand: "DigiWorld", image: "mouse.jpg", badge: none },
  { id: 8, name: "Portable Charger", price: 49.99, originalPrice: none, rating: 4.3, reviews: 178, brand: "SmartGear", image: "charger.jpg", badge: none },
  { id: 9, name: "Webcam HD Pro", price: 129.99, originalPrice: none, rating: 4.5, reviews: 87, brand: "TechPro", image: "webcam.jpg", badge: none },
  { id: 10, name: "Desk Microphone", price: 149.00, originalPrice: 199.00, rating: 4.7, reviews: 145, brand: "AudioTech", image: "mic.jpg", badge: "Sale" },
  { id: 11, name: "Monitor Stand", price: 59.99, originalPrice: none, rating: 4.4, reviews: 67, brand: "SmartGear", image: "stand.jpg", badge: none },
