<div class={"coming-soon-page coming-soon-page--" ++ backgroundStyle}>
    // Decorative Elements
    <div class="coming-soon-page__bg-effects">
        <div class="coming-soon-page__circle coming-soon-page__circle--1"></div>
        <div class="coming-soon-page__circle coming-soon-page__circle--2"></div>
        <div class="coming-soon-page__circle coming-soon-page__circle--3"></div>
    </div>

    <div class="coming-soon-page__container">
        // Logo/Brand
        <div class="coming-soon-page__brand">
            <div class="coming-soon-page__logo">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
            </div>
        </div>

        // Main Content
        <div class="coming-soon-page__content">
            <span class="coming-soon-page__badge">Coming Soon</span>
            <h1 class="coming-soon-page__title">{title}</h1>
            <p class="coming-soon-page__subtitle">{subtitle}</p>
        </div>

        // Countdown
        <div class="coming-soon-page__countdown">
            <p class="coming-soon-page__launch-date">Launching {launchDate}</p>
            <div class="coming-soon-page__countdown-grid">
                <div class="coming-soon-page__countdown-item">
                    <span class="coming-soon-page__countdown-value">{countdown.days}</span>
                    <span class="coming-soon-page__countdown-label">Days</span>
                </div>
                <div class="coming-soon-page__countdown-item">
                    <span class="coming-soon-page__countdown-value">{countdown.hours}</span>
                    <span class="coming-soon-page__countdown-label">Hours</span>
                </div>
                <div class="coming-soon-page__countdown-item">
                    <span class="coming-soon-page__countdown-value">{countdown.minutes}</span>
                    <span class="coming-soon-page__countdown-label">Minutes</span>
                </div>
                <div class="coming-soon-page__countdown-item">
                    <span class="coming-soon-page__countdown-value">{countdown.seconds}</span>
                    <span class="coming-soon-page__countdown-label">Seconds</span>
                </div>
            </div>
        </div>

        // Email Signup
        <div class="coming-soon-page__signup">
            {if isSubscribed}
                <div class="coming-soon-page__signup-success">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                    <span>You're on the list! We'll notify you at launch.</span>
                </div>
            {else}
                <form class="coming-soon-page__signup-form" submit={handleSubscribe}>
                    <input
                        type="email"
                        class="coming-soon-page__signup-input"
                        placeholder="Enter your email address"
                        value={email}
                        change={(e) => email = e.target.value}
                        disabled={isLoading}
                        required
                    />
                    <button
                        type="submit"
                        class="coming-soon-page__signup-button"
                        disabled={isLoading}
                    >
                        {if isLoading}
                            <span class="coming-soon-page__spinner"></span>
                        {else}
                            Notify Me
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14M12 5l7 7-7 7"/>
                            </svg>
                        {/if}
                    </button>
                </form>
                <p class="coming-soon-page__signup-note">
                    Join 2,500+ others waiting for launch. No spam, ever.
                </p>
            {/if}
        </div>

        // Features Preview
        <div class="coming-soon-page__features">
            {for feature in features}
                <div class="coming-soon-page__feature">
                    <div class="coming-soon-page__feature-icon">
                        {getFeatureIcon(feature.icon)}
                    </div>
                    <div class="coming-soon-page__feature-content">
                        <h3 class="coming-soon-page__feature-title">{feature.title}</h3>
                        <p class="coming-soon-page__feature-description">{feature.description}</p>
                    </div>
                </div>
            {/for}
        </div>

        // Social Links
        <div class="coming-soon-page__social">
            <p class="coming-soon-page__social-label">Follow us for updates</p>
            <div class="coming-soon-page__social-links">
                {for link in socialLinks}
                    <a href={link.url} class="coming-soon-page__social-link" target="_blank" rel="noopener" aria-label={link.name}>
                        {getSocialIcon(link.icon)}
                    </a>
                {/for}
            </div>
        </div>
    </div>
</div>

