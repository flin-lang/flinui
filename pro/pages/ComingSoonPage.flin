// Pre-launch coming soon page with countdown and email capture
// ============================================================================
// Props:
//   - title: Page title (text)
//   - subtitle: Page subtitle (text)
//   - launchDate: Launch date string (text)
//   - features: List of upcoming feature highlights (list)
//   - backgroundStyle: Background style "gradient" | "particles" | "simple" (text)
//   - socialLinks: List of social links (list)
//   - onSubscribe: Subscribe callback (function or none)

title = props.title || "Something amazing is coming"
subtitle = props.subtitle || "We're working hard to bring you an incredible new product. Be the first to know when we launch."
launchDate = props.launchDate || "February 1, 2025"
backgroundStyle = props.backgroundStyle || "gradient"

features = props.features || [
    ["icon": "zap", "title": "Lightning Fast", "description": "Optimized for speed"],
    ["icon": "shield", "title": "Secure", "description": "Enterprise-grade security"],
    ["icon": "sparkles", "title": "Intuitive", "description": "Easy to use interface"]
]

socialLinks = props.socialLinks || [
    ["name": "Twitter", "url": "https://twitter.com", "icon": "twitter"],
    ["name": "LinkedIn", "url": "https://linkedin.com", "icon": "linkedin"],
    ["name": "Instagram", "url": "https://instagram.com", "icon": "instagram"]
]

onSubscribe = props.onSubscribe || none

email = ""
isSubscribed = false
isLoading = false

// Countdown
countdown = ["days": 30, "hours": 12, "minutes": 45, "seconds": 30]

handleSubscribe = () => {
    if email != "" {
        isLoading = true
        if onSubscribe != none {
            onSubscribe(email)
        }
        isLoading = false
        isSubscribed = true
    }
}

getFeatureIcon = (iconName) => match iconName {
    "zap" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
    "shield" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
    "sparkles" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
}

getSocialIcon = (iconName) => match iconName {
    "twitter" => <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
    "linkedin" => <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
