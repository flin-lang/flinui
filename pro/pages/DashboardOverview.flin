// Main dashboard overview with stats, charts, and recent activity
// ============================================================================
// Props:
//   - userName: User's name (text)
//   - stats: List of stat objects (list)
//   - recentActivity: List of activity objects (list)
//   - tasks: List of task objects (list)
//   - chartData: Chart data object (object or none)

userName = props.userName || "User"
greeting = getGreeting()

stats = props.stats || [
    ["label": "Total Revenue", "value": "$45,231.89", "change": "+20.1%", "trend": "up", "icon": "dollar"],
    ["label": "Active Users", "value": "2,350", "change": "+180", "trend": "up", "icon": "users"],
    ["label": "Pending Orders", "value": "12", "change": "-3", "trend": "down", "icon": "shopping"],
    ["label": "Conversion Rate", "value": "3.24%", "change": "+0.5%", "trend": "up", "icon": "chart"]
]

recentActivity = props.recentActivity || [
    ["type": "order", "message": "New order #1234 received", "time": "2 min ago", "user": "John Doe"],
    ["type": "user", "message": "New user registered", "time": "15 min ago", "user": "Jane Smith"],
    ["type": "payment", "message": "Payment received for #1230", "time": "1 hour ago", "user": "Bob Wilson"],
    ["type": "comment", "message": "New comment on Project Alpha", "time": "2 hours ago", "user": "Alice Brown"],
    ["type": "task", "message": "Task completed: Design review", "time": "3 hours ago", "user": "Charlie Davis"]
]

tasks = props.tasks || [
    ["title": "Review pull request", "priority": "high", "due": "Today", "completed": false],
    ["title": "Update documentation", "priority": "medium", "due": "Tomorrow", "completed": false],
    ["title": "Fix navigation bug", "priority": "high", "due": "Today", "completed": true],
    ["title": "Team meeting prep", "priority": "low", "due": "Wed", "completed": false]
]

topProducts = [
    ["name": "Product A", "sales": 1234, "revenue": "$12,340", "growth": "+12%"],
    ["name": "Product B", "sales": 987, "revenue": "$9,870", "growth": "+8%"],
    ["name": "Product C", "sales": 756, "revenue": "$7,560", "growth": "+15%"],
    ["name": "Product D", "sales": 543, "revenue": "$5,430", "growth": "-3%"]
]

getGreeting = () => {
    hour = 12 // In real app, get current hour
    match hour {
        h if h < 12 => "Good morning"
        h if h < 17 => "Good afternoon"
        _ => "Good evening"
    }
}

getStatIcon = (iconName) => match iconName {
    "dollar" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
    "users" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
    "shopping" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>
    "chart" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
}

getActivityIcon = (type) => match type {
    "order" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
    "user" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
    "payment" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="4" width="22" height="16" rx="2"/><line x1="1" y1="10" x2="23" y2="10"/></svg>
    "comment" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
    "task" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
}

<div class="dashboard-overview">
    // Header
    <header class="dashboard-overview__header">
        <div class="dashboard-overview__greeting">
            <h1 class="dashboard-overview__title">{greeting}, {userName}!</h1>
            <p class="dashboard-overview__subtitle">Here's what's happening with your projects today.</p>
        </div>
        <div class="dashboard-overview__actions">
            <button class="dashboard-overview__action-btn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                    <polyline points="17 8 12 3 7 8"/>
                    <line x1="12" y1="3" x2="12" y2="15"/>
                </svg>
                Export
            </button>
            <button class="dashboard-overview__action-btn dashboard-overview__action-btn--primary">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
                New Project
            </button>
        </div>
    </header>

    // Stats Grid
    <section class="dashboard-overview__stats">
        {for stat in stats}
            <div class="dashboard-stat-card">
                <div class="dashboard-stat-card__header">
                    <span class="dashboard-stat-card__label">{stat.label}</span>
                    <div class="dashboard-stat-card__icon">
                        {getStatIcon(stat.icon)}
                    </div>
                </div>
                <div class="dashboard-stat-card__value">{stat.value}</div>
                <div class={"dashboard-stat-card__change dashboard-stat-card__change--" ++ stat.trend}>
                    {if stat.trend == "up"}
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/>
                            <polyline points="17 6 23 6 23 12"/>
                        </svg>
                    {else}
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"/>
                            <polyline points="17 18 23 18 23 12"/>
                        </svg>
                    {/if}
                    <span>{stat.change}</span>
                    <span class="dashboard-stat-card__period">from last month</span>
                </div>
            </div>
        {/for}
    </section>

    // Main Content Grid
    <div class="dashboard-overview__grid">
        // Chart Section
        <section class="dashboard-overview__chart">
            <div class="dashboard-overview__section-header">
                <h2 class="dashboard-overview__section-title">Revenue Overview</h2>
                <div class="dashboard-overview__chart-tabs">
                    <button class="dashboard-overview__chart-tab dashboard-overview__chart-tab--active">Week</button>
                    <button class="dashboard-overview__chart-tab">Month</button>
                    <button class="dashboard-overview__chart-tab">Year</button>
                </div>
            </div>
            <div class="dashboard-overview__chart-area">
                // Chart placeholder
                <div class="dashboard-overview__chart-placeholder">
                    <svg viewBox="0 0 400 200" class="dashboard-overview__chart-svg">
                        <defs>
                            <linearGradient id="chartGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                                <stop offset="0%" style="stop-color: var(--flin-accent-gold); stop-opacity: 0.3"/>
                                <stop offset="100%" style="stop-color: var(--flin-accent-gold); stop-opacity: 0"/>
                            </linearGradient>
                        </defs>
                        <path d="M 0 150 Q 50 130 100 140 T 200 100 T 300 80 T 400 60 L 400 200 L 0 200 Z" fill="url(#chartGradient)"/>
                        <path d="M 0 150 Q 50 130 100 140 T 200 100 T 300 80 T 400 60" fill="none" stroke="var(--flin-accent-gold)" stroke-width="3"/>
                    </svg>
                    <div class="dashboard-overview__chart-labels">
                        <span>Mon</span>
                        <span>Tue</span>
                        <span>Wed</span>
                        <span>Thu</span>
                        <span>Fri</span>
                        <span>Sat</span>
                        <span>Sun</span>
                    </div>
                </div>
            </div>
        </section>

        // Recent Activity
        <section class="dashboard-overview__activity">
            <div class="dashboard-overview__section-header">
                <h2 class="dashboard-overview__section-title">Recent Activity</h2>
                <a href="/activity" class="dashboard-overview__view-all">View all</a>
            </div>
            <div class="dashboard-overview__activity-list">
                {for activity in recentActivity}
                    <div class="dashboard-activity-item">
                        <div class={"dashboard-activity-item__icon dashboard-activity-item__icon--" ++ activity.type}>
                            {getActivityIcon(activity.type)}
                        </div>
                        <div class="dashboard-activity-item__content">
                            <p class="dashboard-activity-item__message">{activity.message}</p>
                            <span class="dashboard-activity-item__meta">
                                <span class="dashboard-activity-item__user">{activity.user}</span>
                                <span class="dashboard-activity-item__separator">-</span>
                                <span class="dashboard-activity-item__time">{activity.time}</span>
                            </span>
                        </div>
                    </div>
                {/for}
            </div>
        </section>

        // Tasks
        <section class="dashboard-overview__tasks">
            <div class="dashboard-overview__section-header">
                <h2 class="dashboard-overview__section-title">My Tasks</h2>
                <button class="dashboard-overview__add-task">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"/>
                        <line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                    Add Task
                </button>
            </div>
            <div class="dashboard-overview__tasks-list">
                {for task in tasks}
                    <div class={"dashboard-task-item" ++ (if task.completed { " dashboard-task-item--completed" } else { "" })}>
                        <label class="dashboard-task-item__checkbox">
                            <input type="checkbox" checked={task.completed} />
                            <span class="dashboard-task-item__checkmark"></span>
                        </label>
                        <div class="dashboard-task-item__content">
                            <span class="dashboard-task-item__title">{task.title}</span>
                            <span class="dashboard-task-item__due">Due: {task.due}</span>
                        </div>
                        <span class={"dashboard-task-item__priority dashboard-task-item__priority--" ++ task.priority}>
                            {task.priority}
                        </span>
                    </div>
                {/for}
            </div>
        </section>

        // Top Products
        <section class="dashboard-overview__products">
            <div class="dashboard-overview__section-header">
                <h2 class="dashboard-overview__section-title">Top Products</h2>
                <a href="/products" class="dashboard-overview__view-all">View all</a>
            </div>
            <div class="dashboard-overview__products-table">
                <div class="dashboard-products-header">
                    <span>Product</span>
                    <span>Sales</span>
                    <span>Revenue</span>
                    <span>Growth</span>
                </div>
                {for product in topProducts}
                    <div class="dashboard-products-row">
                        <span class="dashboard-products-row__name">{product.name}</span>
                        <span class="dashboard-products-row__sales">{product.sales}</span>
                        <span class="dashboard-products-row__revenue">{product.revenue}</span>
                        <span class={"dashboard-products-row__growth" ++ (if product.growth.charAt(0) == "+" { " dashboard-products-row__growth--positive" } else { " dashboard-products-row__growth--negative" })}>
                            {product.growth}
                        </span>
                    </div>
                {/for}
            </div>
        </section>
    </div>
</div>

