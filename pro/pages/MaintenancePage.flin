// ============================================================================
// MaintenancePage.flin â€” FlinUI PRO Page Template
// Under maintenance page with countdown and status updates
// ============================================================================
// Props:
//   - title: Page title (string)
//   - message: Page message (string)
//   - estimatedTime: Estimated completion time (string)
//   - progress: Maintenance progress 0-100 (number)
//   - showCountdown: Show countdown timer (boolean)
//   - endTime: End time for countdown (timestamp or none)
//   - statusUpdates: List of status update objects (list)
//   - socialLinks: List of social links (list)
//   - notifyEmail: Enable email notification (boolean)
//   - onNotify: Notify callback (function or none)

title = props.title || "We're improving things"
message = props.message || "We're currently performing scheduled maintenance to bring you a better experience. We'll be back shortly!"
estimatedTime = props.estimatedTime || "2 hours"
progress = props.progress || 65
showCountdown = props.showCountdown || true
endTime = props.endTime || none
notifyEmail = props.notifyEmail || true
onNotify = props.onNotify || none

statusUpdates = props.statusUpdates || [
    ["time": "10:30 AM", "message": "Maintenance started", "status": "complete"],
    ["time": "10:45 AM", "message": "Database migration in progress", "status": "complete"],
    ["time": "11:00 AM", "message": "Updating application servers", "status": "in_progress"],
    ["time": "11:30 AM", "message": "Final testing and verification", "status": "pending"]
]

socialLinks = props.socialLinks || [
    ["name": "Twitter", "url": "https://twitter.com", "icon": "twitter"],
    ["name": "Status Page", "url": "#", "icon": "status"]
]

email = ""
emailSubmitted = false

// Countdown state
countdown = ["hours": 1, "minutes": 45, "seconds": 30]

handleNotify = () => {
    if onNotify != none && email != "" {
        onNotify(email)
        emailSubmitted = true
    }
}

getStatusIcon = (status) => match status {
    "complete" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
    "in_progress" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
}

getSocialIcon = (iconName) => match iconName {
    "twitter" => <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
    "status" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10"/></svg>
}

<div class="maintenance-page">
    <div class="maintenance-page__container">
        // Header
        <div class="maintenance-page__header">
            <div class="maintenance-page__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                </svg>
            </div>
            <h1 class="maintenance-page__title">{title}</h1>
            <p class="maintenance-page__message">{message}</p>
        </div>

        // Progress
        <div class="maintenance-page__progress-section">
            <div class="maintenance-page__progress-header">
                <span class="maintenance-page__progress-label">Progress</span>
                <span class="maintenance-page__progress-value">{progress}%</span>
            </div>
            <div class="maintenance-page__progress-bar">
                <div class="maintenance-page__progress-fill" style={"width: " ++ progress ++ "%"}></div>
            </div>
            <p class="maintenance-page__estimated">
                Estimated time remaining: <strong>{estimatedTime}</strong>
            </p>
        </div>

        // Countdown
        {if showCountdown}
            <div class="maintenance-page__countdown">
                <div class="maintenance-page__countdown-item">
                    <span class="maintenance-page__countdown-value">{countdown.hours}</span>
                    <span class="maintenance-page__countdown-label">Hours</span>
                </div>
                <span class="maintenance-page__countdown-separator">:</span>
                <div class="maintenance-page__countdown-item">
                    <span class="maintenance-page__countdown-value">{countdown.minutes}</span>
                    <span class="maintenance-page__countdown-label">Minutes</span>
                </div>
                <span class="maintenance-page__countdown-separator">:</span>
                <div class="maintenance-page__countdown-item">
                    <span class="maintenance-page__countdown-value">{countdown.seconds}</span>
                    <span class="maintenance-page__countdown-label">Seconds</span>
                </div>
            </div>
        {/if}

        // Status Updates
        <div class="maintenance-page__status">
            <h2 class="maintenance-page__status-title">Status Updates</h2>
            <div class="maintenance-page__status-list">
                {for update in statusUpdates}
                    <div class={"maintenance-page__status-item maintenance-page__status-item--" ++ update.status}>
                        <div class="maintenance-page__status-icon">
                            {getStatusIcon(update.status)}
                        </div>
                        <div class="maintenance-page__status-content">
                            <span class="maintenance-page__status-message">{update.message}</span>
                            <span class="maintenance-page__status-time">{update.time}</span>
                        </div>
                    </div>
                {/for}
            </div>
        </div>

        // Notification Signup
        {if notifyEmail}
            <div class="maintenance-page__notify">
                {if emailSubmitted}
                    <div class="maintenance-page__notify-success">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                            <polyline points="22 4 12 14.01 9 11.01"/>
                        </svg>
                        <span>We'll notify you when we're back online!</span>
                    </div>
                {else}
                    <h3 class="maintenance-page__notify-title">Get notified when we're back</h3>
                    <form class="maintenance-page__notify-form" submit={handleNotify}>
                        <input
                            type="email"
                            class="maintenance-page__notify-input"
                            placeholder="Enter your email"
                            value={email}
                            change={(e) => email = e.target.value}
                            required
                        />
                        <button type="submit" class="maintenance-page__notify-button">
                            Notify Me
                        </button>
                    </form>
                {/if}
            </div>
        {/if}

        // Social Links
        <div class="maintenance-page__social">
            <p class="maintenance-page__social-label">Follow us for updates:</p>
            <div class="maintenance-page__social-links">
                {for link in socialLinks}
                    <a href={link.url} class="maintenance-page__social-link" target="_blank" rel="noopener" aria-label={link.name}>
                        {getSocialIcon(link.icon)}
                        <span>{link.name}</span>
                    </a>
                {/for}
            </div>
        </div>
    </div>
</div>

