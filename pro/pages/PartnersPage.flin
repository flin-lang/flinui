// ============================================================================
// PartnersPage.flin â€” FlinUI PRO Page Template
// Partner showcase page with logos, partner tiers, and CTA
// ============================================================================
// Props:
//   - title: Page title (string)
//   - subtitle: Page subtitle (string)
//   - partners: List of partner objects (list)
//   - partnerTypes: List of partner type categories (list)
//   - benefits: List of partner benefits (list)
//   - onBecomePartner: Callback for partner signup (function or none)

title = props.title || "Our Partners"
subtitle = props.subtitle || "We work with industry leaders to deliver exceptional solutions for our customers."

partnerTypes = props.partnerTypes || ["All", "Technology", "Solutions", "Consulting", "Integration"]
selectedType = "All"

partners = props.partners || [
    ["name": "TechCorp", "type": "Technology", "tier": "Premier", "logo": none, "description": "Cloud infrastructure and hosting solutions."],
    ["name": "DataFlow", "type": "Technology", "tier": "Premier", "logo": none, "description": "Real-time data streaming and analytics."],
    ["name": "SecureNet", "type": "Technology", "tier": "Premier", "logo": none, "description": "Enterprise security and compliance."],
    ["name": "CloudBase", "type": "Technology", "tier": "Elite", "logo": none, "description": "Scalable cloud computing platform."],
    ["name": "AppMakers", "type": "Solutions", "tier": "Elite", "logo": none, "description": "Custom application development."],
    ["name": "DevOps Pro", "type": "Solutions", "tier": "Elite", "logo": none, "description": "CI/CD and automation solutions."],
    ["name": "ConsultX", "type": "Consulting", "tier": "Premier", "logo": none, "description": "Digital transformation consulting."],
    ["name": "StrategyFirst", "type": "Consulting", "tier": "Elite", "logo": none, "description": "Business strategy and advisory."],
    ["name": "IntegrateHub", "type": "Integration", "tier": "Premier", "logo": none, "description": "API integration specialists."],
    ["name": "ConnectAll", "type": "Integration", "tier": "Standard", "logo": none, "description": "System integration services."],
    ["name": "SmartSystems", "type": "Technology", "tier": "Standard", "logo": none, "description": "IoT and smart device solutions."],
    ["name": "AnalyticsPlus", "type": "Solutions", "tier": "Standard", "logo": none, "description": "Business intelligence tools."]
]

benefits = props.benefits || [
    ["icon": "badge", "title": "Partner Certification", "description": "Get certified and showcase your expertise to potential clients."],
    ["icon": "support", "title": "Priority Support", "description": "Access to dedicated partner support and technical resources."],
    ["icon": "revenue", "title": "Revenue Sharing", "description": "Earn commissions on referrals and joint opportunities."],
    ["icon": "marketing", "title": "Co-Marketing", "description": "Joint marketing campaigns and lead generation activities."],
    ["icon": "training", "title": "Training & Resources", "description": "Exclusive access to training materials and documentation."],
    ["icon": "listing", "title": "Partner Directory", "description": "Featured listing in our partner directory for visibility."]
]

tiers = [
    ["name": "Premier", "color": "gold", "benefits": ["Priority co-marketing", "Dedicated partner manager", "Early access to features", "Premium listing"]],
    ["name": "Elite", "color": "purple", "benefits": ["Co-marketing support", "Technical training", "Partner portal access", "Featured listing"]],
    ["name": "Standard", "color": "blue", "benefits": ["Partner resources", "Basic training", "Directory listing", "Community access"]]
]

onBecomePartner = props.onBecomePartner || none

filterPartners = () => {
    if selectedType == "All" {
        partners
    } else {
        partners.filter((p) => p.type == selectedType)
    }
}

getTierColor = (tier) => match tier {
    "Premier" => "gold"
    "Elite" => "purple"
    "Standard" => "blue"
    _ => "gray"
}

getBenefitIcon = (iconName) => match iconName {
    "badge" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 15l-2 5 2-2 2 2-2-5z"/><circle cx="12" cy="8" r="6"/></svg>
    "support" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
    "revenue" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
    "marketing" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 11 18-5v12L3 13v-2z"/><path d="M11.6 16.8a3 3 0 1 1-5.8-1.6"/></svg>
    "training" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/><path d="M12 7v6l3 2"/></svg>
    "listing" => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 9h6v6H9z"/></svg>
    _ => <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/></svg>
}

handleBecomePartner = () => {
    if onBecomePartner != none {
        onBecomePartner()
    }
}

<div class="partners-page">
    // Hero Section
    <section class="partners-hero">
        <div class="partners-hero__container">
            <span class="partners-hero__eyebrow">Partner Ecosystem</span>
            <h1 class="partners-hero__title">{title}</h1>
            <p class="partners-hero__subtitle">{subtitle}</p>
            <button class="partners-hero__cta" click={handleBecomePartner}>
                Become a Partner
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </button>
        </div>
    </section>

    // Featured Partners
    <section class="partners-featured">
        <div class="partners-featured__container">
            <h2 class="partners-featured__title">Trusted by industry leaders</h2>
            <div class="partners-featured__grid">
                {for partner in partners.filter((p) => p.tier == "Premier")}
                    <div class="partners-featured__logo">
                        {if partner.logo != none}
                            <img src={partner.logo} alt={partner.name} />
                        {else}
                            <span>{partner.name}</span>
                        {/if}
                    </div>
                {/for}
            </div>
        </div>
    </section>

    // Partner Tiers Section
    <section class="partners-tiers">
        <div class="partners-tiers__container">
            <div class="partners-tiers__header">
                <span class="partners-tiers__eyebrow">Partner Tiers</span>
                <h2 class="partners-tiers__title">Choose your partnership level</h2>
                <p class="partners-tiers__subtitle">
                    Select the tier that best fits your business and unlock exclusive benefits.
                </p>
            </div>
            <div class="partners-tiers__grid">
                {for tier in tiers}
                    <div class={"partners-tier-card partners-tier-card--" ++ tier.color}>
                        <div class={"partners-tier-card__badge partners-tier-card__badge--" ++ tier.color}>
                            {tier.name}
                        </div>
                        <h3 class="partners-tier-card__title">{tier.name} Partner</h3>
                        <ul class="partners-tier-card__benefits">
                            {for benefit in tier.benefits}
                                <li>
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                    {benefit}
                                </li>
                            {/for}
                        </ul>
                        <button class={"partners-tier-card__button partners-tier-card__button--" ++ tier.color}>
                            Apply Now
                        </button>
                    </div>
                {/for}
            </div>
        </div>
    </section>

    // Partner Directory
    <section class="partners-directory">
        <div class="partners-directory__container">
            <div class="partners-directory__header">
                <span class="partners-directory__eyebrow">Partner Directory</span>
                <h2 class="partners-directory__title">Find the right partner</h2>
                <p class="partners-directory__subtitle">
                    Explore our network of certified partners across industries.
                </p>
            </div>

            // Type Filter
            <div class="partners-directory__filter">
                {for type in partnerTypes}
                    <button
                        class={match selectedType { type => "partners-directory__filter-btn partners-directory__filter-btn--active" _ => "partners-directory__filter-btn" }}
                        click={() => selectedType = type}
                    >
                        {type}
                    </button>
                {/for}
            </div>

            // Partner Grid
            <div class="partners-directory__grid">
                {for partner in filterPartners()}
                    <div class="partners-card">
                        <div class={"partners-card__tier partners-card__tier--" ++ getTierColor(partner.tier)}>
                            {partner.tier}
                        </div>
                        <div class="partners-card__logo">
                            {if partner.logo != none}
                                <img src={partner.logo} alt={partner.name} />
                            {else}
                                <span>{partner.name.charAt(0)}</span>
                            {/if}
                        </div>
                        <h3 class="partners-card__name">{partner.name}</h3>
                        <span class="partners-card__type">{partner.type}</span>
                        <p class="partners-card__description">{partner.description}</p>
                        <a href="#" class="partners-card__link">
                            Learn more
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14M12 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                {/for}

                {if filterPartners().length == 0}
                    <div class="partners-directory__empty">
                        <p>No partners found in this category.</p>
                    </div>
                {/if}
            </div>
        </div>
    </section>

    // Benefits Section
    <section class="partners-benefits">
        <div class="partners-benefits__container">
            <div class="partners-benefits__header">
                <span class="partners-benefits__eyebrow">Why Partner With Us</span>
                <h2 class="partners-benefits__title">Grow your business together</h2>
                <p class="partners-benefits__subtitle">
                    Join our partner ecosystem and access exclusive resources, support, and opportunities.
                </p>
            </div>
            <div class="partners-benefits__grid">
                {for benefit in benefits}
                    <div class="partners-benefit-card">
                        <div class="partners-benefit-card__icon">
                            {getBenefitIcon(benefit.icon)}
                        </div>
                        <h3 class="partners-benefit-card__title">{benefit.title}</h3>
                        <p class="partners-benefit-card__description">{benefit.description}</p>
                    </div>
                {/for}
            </div>
        </div>
    </section>

    // CTA Section
    <section class="partners-cta">
        <div class="partners-cta__container">
            <h2 class="partners-cta__title">Ready to partner with us?</h2>
            <p class="partners-cta__subtitle">
                Join our growing network of partners and unlock new opportunities for your business.
            </p>
            <div class="partners-cta__actions">
                <button class="partners-cta__button partners-cta__button--primary" click={handleBecomePartner}>
                    Become a Partner
                </button>
                <a href="/contact" class="partners-cta__button partners-cta__button--secondary">
                    Contact Us
                </a>
            </div>
        </div>
    </section>
</div>

