// ============================================================================
// PressPage.flin â€” FlinUI PRO Page Template
// News and press releases page with media kit and contact info
// ============================================================================
// Props:
//   - companyName: Company name (text)
//   - pressReleases: List of press release objects (list)
//   - mediaLogos: List of media outlet logos (list)
//   - pressContact: Press contact information (object)

companyName = props.companyName || "Company"

pressReleases = props.pressReleases || [
    ["id": 1, "date": "January 5, 2025", "title": "Company Announces Series B Funding Round of $50M", "excerpt": "The funding will accelerate product development and global expansion efforts.", "category": "Funding", "url": "#"],
    ["id": 2, "date": "December 15, 2024", "title": "Company Named to Forbes Cloud 100 List", "excerpt": "Recognition highlights the company's rapid growth and market impact.", "category": "Awards", "url": "#"],
    ["id": 3, "date": "November 20, 2024", "title": "New Enterprise Features Launch", "excerpt": "Advanced security, compliance, and team management capabilities now available.", "category": "Product", "url": "#"],
    ["id": 4, "date": "October 8, 2024", "title": "Company Expands to European Market", "excerpt": "New offices in London and Berlin to serve growing customer base.", "category": "Expansion", "url": "#"],
    ["id": 5, "date": "September 1, 2024", "title": "Partnership with Major Tech Company Announced", "excerpt": "Strategic partnership to integrate services and expand reach.", "category": "Partnership", "url": "#"],
    ["id": 6, "date": "August 15, 2024", "title": "Company Surpasses 100,000 Customer Milestone", "excerpt": "Rapid adoption across startups and enterprises drives growth.", "category": "Milestone", "url": "#"]
]

mediaLogos = props.mediaLogos || [
    ["name": "TechCrunch", "url": "#"],
    ["name": "Forbes", "url": "#"],
    ["name": "Wired", "url": "#"],
    ["name": "VentureBeat", "url": "#"],
    ["name": "The Verge", "url": "#"],
    ["name": "Bloomberg", "url": "#"]
]

pressContact = props.pressContact || [
    "name": "Sarah Mitchell",
    "title": "Head of Communications",
    "email": "press@company.com",
    "phone": "+1 (555) 123-4567"
]

companyFacts = [
    ["label": "Founded", "value": "2020"],
    ["label": "Headquarters", "value": "San Francisco, CA"],
    ["label": "Employees", "value": "150+"],
    ["label": "Customers", "value": "100,000+"],
    ["label": "Funding", "value": "$75M"],
    ["label": "Valuation", "value": "$500M"]
]

categories = ["All", "Funding", "Product", "Awards", "Partnership", "Expansion", "Milestone"]
selectedCategory = "All"

filterPressReleases = () => {
    if selectedCategory == "All" {
        pressReleases
    } else {
        pressReleases.filter((p) => p.category == selectedCategory)
    }
}

getCategoryColor = (category) => match category {
    "Funding" => "green"
    "Product" => "blue"
    "Awards" => "gold"
    "Partnership" => "purple"
    "Expansion" => "cyan"
    "Milestone" => "orange"
    _ => "gray"
}

<div class="press-page">
    // Hero Section
    <section class="press-hero">
        <div class="press-hero__container">
            <span class="press-hero__eyebrow">Newsroom</span>
            <h1 class="press-hero__title">{companyName} Press Center</h1>
            <p class="press-hero__subtitle">
                Latest news, press releases, and media resources from {companyName}.
            </p>
        </div>
    </section>

    // Featured In Section
    <section class="press-featured">
        <div class="press-featured__container">
            <p class="press-featured__label">As featured in</p>
            <div class="press-featured__logos">
                {for logo in mediaLogos}
                    <a href={logo.url} class="press-featured__logo" target="_blank" rel="noopener">
                        <span>{logo.name}</span>
                    </a>
                {/for}
            </div>
        </div>
    </section>

    // Main Content
    <section class="press-main">
        <div class="press-main__container">
            // Press Releases
            <div class="press-releases">
                <div class="press-releases__header">
                    <h2 class="press-releases__title">Press Releases</h2>
                    <p class="press-releases__subtitle">All the latest news and announcements</p>
                </div>

                // Category Filter
                <div class="press-releases__filter">
                    {for cat in categories}
                        <button
                            class={match selectedCategory { cat => "press-releases__filter-btn press-releases__filter-btn--active" _ => "press-releases__filter-btn" }}
                            click={() => selectedCategory = cat}
                        >
                            {cat}
                        </button>
                    {/for}
                </div>

                // Press Release List
                <div class="press-releases__list">
                    {for release in filterPressReleases()}
                        <article class="press-release-card">
                            <div class="press-release-card__header">
                                <time class="press-release-card__date">{release.date}</time>
                                <span class={"press-release-card__category press-release-card__category--" ++ getCategoryColor(release.category)}>
                                    {release.category}
                                </span>
                            </div>
                            <h3 class="press-release-card__title">
                                <a href={release.url}>{release.title}</a>
                            </h3>
                            <p class="press-release-card__excerpt">{release.excerpt}</p>
                            <a href={release.url} class="press-release-card__link">
                                Read more
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </a>
                        </article>
                    {/for}

                    {if filterPressReleases().length == 0}
                        <div class="press-releases__empty">
                            <p>No press releases found in this category.</p>
                        </div>
                    {/if}
                </div>
            </div>

            // Sidebar
            <aside class="press-sidebar">
                // Company Facts
                <div class="press-sidebar__section">
                    <h3 class="press-sidebar__title">Company Facts</h3>
                    <div class="press-facts">
                        {for fact in companyFacts}
                            <div class="press-facts__item">
                                <span class="press-facts__label">{fact.label}</span>
                                <span class="press-facts__value">{fact.value}</span>
                            </div>
                        {/for}
                    </div>
                </div>

                // Media Kit
                <div class="press-sidebar__section">
                    <h3 class="press-sidebar__title">Media Kit</h3>
                    <p class="press-sidebar__text">
                        Download our brand assets including logos, screenshots, and executive bios.
                    </p>
                    <a href="#" class="press-sidebar__download">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                            <polyline points="7 10 12 15 17 10"/>
                            <line x1="12" y1="15" x2="12" y2="3"/>
                        </svg>
                        Download Media Kit
                    </a>
                    <div class="press-sidebar__assets">
                        <a href="#" class="press-sidebar__asset">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                <polyline points="21 15 16 10 5 21"/>
                            </svg>
                            Logos (ZIP)
                        </a>
                        <a href="#" class="press-sidebar__asset">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                                <polyline points="14 2 14 8 20 8"/>
                            </svg>
                            Fact Sheet (PDF)
                        </a>
                        <a href="#" class="press-sidebar__asset">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                            Executive Bios
                        </a>
                    </div>
                </div>

                // Press Contact
                <div class="press-sidebar__section">
                    <h3 class="press-sidebar__title">Press Contact</h3>
                    <div class="press-contact">
                        <div class="press-contact__avatar">
                            {pressContact.name.charAt(0)}
                        </div>
                        <div class="press-contact__info">
                            <span class="press-contact__name">{pressContact.name}</span>
                            <span class="press-contact__title">{pressContact.title}</span>
                        </div>
                    </div>
                    <div class="press-contact__details">
                        <a href={"mailto:" ++ pressContact.email} class="press-contact__link">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="2" y="4" width="20" height="16" rx="2"/>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                            </svg>
                            {pressContact.email}
                        </a>
                        <a href={"tel:" ++ pressContact.phone} class="press-contact__link">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
                            </svg>
                            {pressContact.phone}
                        </a>
                    </div>
                </div>

                // Newsletter Signup
                <div class="press-sidebar__section press-sidebar__section--highlight">
                    <h3 class="press-sidebar__title">Stay Updated</h3>
                    <p class="press-sidebar__text">
                        Subscribe to receive press releases directly to your inbox.
                    </p>
                    <form class="press-newsletter">
                        <input
                            type="email"
                            class="press-newsletter__input"
                            placeholder="Enter your email"
                        />
                        <button type="submit" class="press-newsletter__button">Subscribe</button>
                    </form>
                </div>
            </aside>
        </div>
    </section>
</div>

