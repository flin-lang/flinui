  { id: 1, name: "Wireless Headphones Pro", price: 299.99, originalPrice: 399.99, rating: 4.8, reviews: 256, image: "headphones.jpg", badge: "Best Seller" },
  { id: 2, name: "Smart Watch Series 5", price: 449.00, originalPrice: none, rating: 4.6, reviews: 189, image: "watch.jpg", badge: "New" },
  { id: 3, name: "Premium Leather Bag", price: 189.99, originalPrice: 249.99, rating: 4.9, reviews: 324, image: "bag.jpg", badge: none },
  { id: 4, name: "Minimalist Desk Lamp", price: 79.99, originalPrice: none, rating: 4.5, reviews: 87, image: "lamp.jpg", badge: none },
