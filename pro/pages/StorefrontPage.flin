  { id: 6, name: "Portable Bluetooth Speaker", price: 129.00, originalPrice: none, rating: 4.4, reviews: 167, image: "speaker.jpg", badge: none },
  { id: 7, name: "Ceramic Plant Pot Set", price: 39.99, originalPrice: none, rating: 4.8, reviews: 98, image: "pots.jpg", badge: none },
  { id: 8, name: "Fitness Resistance Bands", price: 24.99, originalPrice: 34.99, rating: 4.6, reviews: 534, image: "bands.jpg", badge: "Top Rated" }
