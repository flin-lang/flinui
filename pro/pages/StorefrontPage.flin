// State
cartCount = 3
searchQuery = ""
showMobileMenu = false

// Default categories
defaultCategories = [
  { id: 1, name: "Electronics", image: "electronics.jpg", count: 156 },
  { id: 2, name: "Clothing", image: "clothing.jpg", count: 324 },
