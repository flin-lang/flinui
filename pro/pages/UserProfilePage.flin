  id: "usr-001",
  name: "Alex Johnson",
  username: "@alexjohnson",
  email: "alex@company.com",
  avatar: none,
  role: "Senior Developer",
  company: "TechCorp Inc.",
  location: "San Francisco, CA",
  website: "https://alexjohnson.dev",
  bio: "Building the future of web development. Passionate about clean code, open source, and teaching others. Always learning, always growing.",
  joinedDate: "March 2024",
  followers: 2847,
  following: 156,
  posts: 89,
  isVerified: true,
  socialLinks: {
    twitter: "alexjohnson",
    github: "alexjohnson",
    linkedin: "alexjohnson"
  }
}

profile = user || defaultUser

// State
activeTab = "posts"
isFollowing = false
showEditModal = false

// Activity/Posts data
