// ============================================================================
// DashboardLayout.flin â€” FlinUI PRO Shell Component
// Full dashboard layout with sidebar, header, and content areas
// ============================================================================
// Props:
//   - sidebarWidth: Width of sidebar (string, default: "260px")
//   - headerHeight: Height of header (string, default: "64px")
//   - sidebarCollapsed: Sidebar collapsed state (boolean, default: false)
//   - collapsedWidth: Width when collapsed (string, default: "72px")
//   - showBreadcrumb: Show breadcrumb area (boolean, default: true)
//   - pageTitle: Page title text (string or none)
//   - pageDescription: Page description text (string or none)
// ============================================================================

sidebarWidth = props.sidebarWidth || "260px"
headerHeight = props.headerHeight || "64px"
sidebarCollapsed = props.sidebarCollapsed || false
collapsedWidth = props.collapsedWidth || "72px"
showBreadcrumb = props.showBreadcrumb || true
pageTitle = props.pageTitle || none
pageDescription = props.pageDescription || none

// State
mobileMenuOpen = false

currentSidebarWidth = {if sidebarCollapsed { collapsedWidth } else { sidebarWidth }}

toggleMobileMenu = () => {
    mobileMenuOpen = !mobileMenuOpen
}

closeMobileMenu = () => {
    mobileMenuOpen = false
}

<div class="flin-dashboard-layout {if sidebarCollapsed}sidebar-collapsed{/if} {if mobileMenuOpen}mobile-open{/if}"
     style="--sidebar-width: {currentSidebarWidth}; --header-height: {headerHeight}">

    // Sidebar
    <aside class="dashboard-sidebar">
        <div class="sidebar-header">
            {props.logo || none}
        </div>
        <nav class="sidebar-nav">
            {props.navigation || none}
        </nav>
        <div class="sidebar-footer">
            {props.sidebarFooter || none}
        </div>
    </aside>

    // Mobile overlay
    {if mobileMenuOpen}
        <div class="mobile-overlay" click={closeMobileMenu}></div>
    {/if}

    // Main area
    <div class="dashboard-main">
        // Header
        <header class="dashboard-header">
            <button class="mobile-menu-btn" click={toggleMobileMenu} aria-label="Toggle menu">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 12h18M3 6h18M3 18h18"/>
                </svg>
            </button>

            <div class="header-left">
                {props.headerLeft || none}
            </div>

            <div class="header-right">
                {props.headerRight || none}
            </div>
        </header>

        // Content area
        <main class="dashboard-content">
            // Breadcrumb
            {if showBreadcrumb}
                <div class="content-breadcrumb">
                    {props.breadcrumb || none}
                </div>
            {/if}

            // Page header
            {if pageTitle != none}
                <div class="page-header">
                    <div class="page-header-text">
                        <h1 class="page-title">{pageTitle}</h1>
                        {if pageDescription != none}
                            <p class="page-description">{pageDescription}</p>
                        {/if}
                    </div>
                    <div class="page-header-actions">
                        {props.actions || none}
                    </div>
                </div>
            {/if}

            // Main content
            <div class="content-body">
                {children}
            </div>
        </main>
    </div>
</div>

<style scoped>
