.mobile-menu-btn:hover {
    background: var(--flin-bg-surface);
}

.header-left {
    flex: 1;
    display: flex;
    align-items: center;
}

.header-right {
    display: flex;
    align-items: center;
    gap: var(--flin-space-3);
}

/* Content */
.dashboard-content {
    flex: 1;
    padding: var(--flin-space-6);
}

.content-breadcrumb {
    margin-bottom: var(--flin-space-4);
