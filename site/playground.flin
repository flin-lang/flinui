// FlinUI Playground - Live Code Editor
// Try FlinUI components in real-time

theme = "light"

// Editor content
editorCode = "// Try FlinUI components!\ncount = 0\n\n<Card>\n    <CardHeader title=\"Counter Example\" />\n    <CardBody>\n        <Text>Count: {count}</Text>\n        <Button \n            label=\"Increment\" \n            variant=\"primary\" \n            click={count = count + 1} \n        />\n    </CardBody>\n</Card>"

// Starter templates
templates = [
    { name: "Counter", icon: "üî¢" },
    { name: "Form", icon: "üìù" },
    { name: "Dashboard", icon: "üìä" },
    { name: "Modal", icon: "üí¨" }
]

activeTemplate = "Counter"

<div class="playground" data-theme={theme}>
    <header class="playground-header">
        <a href="/site/index.flin" class="brand">
            <img src="/public/logo.png" alt="FlinUI" class="logo" />
            <span>FlinUI Playground</span>
        </a>
        <div class="template-selector">
            {for tpl, idx in templates}
                <button
                    class="template-btn {match activeTemplate { tpl.name -> 'active', _ -> '' }}"
                    click={activeTemplate = tpl.name}
                >
                    {tpl.icon} {tpl.name}
                </button>
            {/for}
        </div>
        <div class="header-actions">
            <button class="action-btn">Share</button>
            <button class="theme-toggle" click={theme = match theme { "light" -> "dark", _ -> "light" }}>
                {match theme { "light" -> "üåô", _ -> "‚òÄÔ∏è" }}
            </button>
        </div>
    </header>

    <div class="playground-layout">
        <div class="editor-panel">
            <div class="panel-header">
                <span>Editor</span>
                <div class="panel-actions">
                    <button class="panel-btn">Format</button>
                    <button class="panel-btn">Reset</button>
                </div>
            </div>
            <div class="editor-area">
                <textarea
                    class="code-editor"
                    value={editorCode}
                    input={editorCode = event.target.value}
                    spellcheck="false"
                ></textarea>
            </div>
        </div>

        <div class="preview-panel">
            <div class="panel-header">
                <span>Preview</span>
                <div class="panel-actions">
                    <button class="panel-btn active">Desktop</button>
                    <button class="panel-btn">Tablet</button>
                    <button class="panel-btn">Mobile</button>
                </div>
            </div>
            <div class="preview-area">
                <div class="preview-content">
                    <div class="preview-placeholder">
                        <p>Live preview of your FLIN code</p>
                        <p class="preview-note">
                            Full playground coming soon!
                            For now, use: <code>flin dev your-file.flin</code>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="playground-footer">
        <div class="footer-info">
            <span>FlinUI v1.2.0</span>
            <span>‚Ä¢</span>
            <span>94 Components</span>
        </div>
        <div class="footer-links">
            <a href="/site/components.flin">Components</a>
            <a href="https://github.com/flin-lang/flinui">GitHub</a>
            <a href="https://discord.gg/7uxR6VfA">Discord</a>
        </div>
    </footer>
</div>

