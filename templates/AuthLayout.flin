}

.auth-layout--split .auth-content-panel {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--flin-color-white);
    padding: var(--flin-spacing-8);
}

.auth-layout--split .auth-content-wrapper {
    width: 100%;
    max-width: 400px;
}

.auth-layout--split .auth-card {
    padding: 0;
}

.auth-card-header--split {
    margin-bottom: var(--flin-spacing-8);
}

.auth-card-header--split .auth-title {
    text-align: left;
}

.auth-card-header--split .auth-subtitle {
    text-align: left;
}

/* Shared styles */
.auth-title {
    font-size: var(--flin-font-size-2xl);
    font-weight: var(--flin-font-weight-bold);
    color: var(--flin-color-gray-900);
    margin: 0 0 var(--flin-spacing-2) 0;
}

.auth-subtitle {
    font-size: var(--flin-font-size-base);
    color: var(--flin-color-gray-500);
    margin: 0;
}

.auth-card-body {
    width: 100%;
}

.auth-footer {
    margin-top: var(--flin-spacing-6);
    text-align: center;
    font-size: var(--flin-font-size-sm);
    color: var(--flin-color-gray-500);
}

.auth-layout--centered .auth-footer {
    color: rgba(255, 255, 255, 0.7);
}

.auth-layout--centered .auth-footer a {
    color: var(--flin-color-white);
}

/* Pattern backgrounds */
.auth-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    pointer-events: none;
}

.pattern-grid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 50px 50px;
