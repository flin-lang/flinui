    bottom: 0;
    background: radial-gradient(circle at 30% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
}

.pattern-circles {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 100%;
    height: 200%;
    background:
        radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
}

/* Responsive */
@media (max-width: 1024px) {
    .auth-image-panel {
        display: none;
    }

    .auth-layout--split .auth-content-panel {
        flex: none;
        width: 100%;
    }
}

@media (max-width: 768px) {
    .auth-layout--centered .auth-card {
        padding: var(--flin-spacing-6);
    }

    .auth-layout--split .auth-content-panel {
        padding: var(--flin-spacing-4);
    }

    .auth-title {
        font-size: var(--flin-font-size-xl);
    }
}

@media (max-width: 480px) {
    .auth-layout--centered .auth-content-wrapper {
        max-width: 100%;
    }

    .auth-layout--centered .auth-card {
        padding: var(--flin-spacing-5);
        border-radius: var(--flin-radius-lg);
    }

    .auth-layout--centered .auth-logo {
        height: 40px;
    }

    .auth-card-header {
        margin-bottom: var(--flin-spacing-6);
    }
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.auth-card {
    animation: fadeIn 0.4s ease-out;
}
</style>
