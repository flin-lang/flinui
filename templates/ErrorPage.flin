// ErrorPage.flin - Error pages (404, 500, etc.)

// Props
code = props.code || 404 // 404 | 500 | 403 | 401 | 503
title = props.title || nil
description = props.description || nil
backLink = props.backLink || nil // { href, text }
showHomeButton = props.showHomeButton ?? true
homeLink = props.homeLink || "/"
homeText = props.homeText || "Go to Homepage"
showIllustration = props.showIllustration ?? true
showSupportLink = props.showSupportLink || false
supportLink = props.supportLink || "/support"
supportText = props.supportText || "Contact Support"
variant = props.variant || "centered" // "centered" | "minimal" | "full"
customIllustration = props.customIllustration || nil
children = props.children || nil

// Default content based on error code
getDefaultContent = { errorCode ->
    match errorCode {
        404 -> {
            title: "Page Not Found",
            description: "Sorry, we couldn't find the page you're looking for. It might have been moved or deleted.",
            illustration: "üîç"
        }
        500 -> {
            title: "Server Error",
            description: "Oops! Something went wrong on our end. Our team has been notified and is working on it.",
            illustration: "‚ö†Ô∏è"
        }
        403 -> {
            title: "Access Denied",
            description: "You don't have permission to access this page. Please contact your administrator if you think this is a mistake.",
            illustration: "üö´"
        }
        401 -> {
            title: "Unauthorized",
            description: "Please sign in to access this page.",
            illustration: "üîí"
        }
        503 -> {
            title: "Service Unavailable",
            description: "We're performing scheduled maintenance. Please check back soon.",
            illustration: "üîß"
        }
        _ -> {
            title: "Something Went Wrong",
            description: "An unexpected error occurred. Please try again later.",
            illustration: "‚ùå"
        }
    }
}

defaultContent = getDefaultContent(code)
displayTitle = title || defaultContent.title
displayDescription = description || defaultContent.description
displayIllustration = customIllustration || defaultContent.illustration

// Computed
pageClass = "error-page error-page--" ++ variant

<div class={pageClass}>
    <div class="error-container">
        // Illustration
        {if showIllustration then
            <div class="error-illustration">
                {if customIllustration && customIllustration.includes("/") then
                    // It's an image URL
                    <img src={customIllustration} alt="" class="illustration-image" />
                else
                    // It's an emoji or text
                    <div class="illustration-emoji">
                        <span class="emoji-bg">{displayIllustration}</span>
                    </div>
                }
            </div>
        }

        // Error code
        <div class="error-code">
            <span class="code-number">{code}</span>
        </div>

        // Content
        <div class="error-content">
            <h1 class="error-title">{displayTitle}</h1>
            <p class="error-description">{displayDescription}</p>
        </div>

        // Custom content slot
        {if children then
            <div class="error-custom">
                {children}
            </div>
        }

        // Actions
        <div class="error-actions">
            {if backLink then
                <a href={backLink.href} class="error-btn error-btn--secondary">
                    <span class="btn-icon">‚Üê</span>
                    {backLink.text || "Go Back"}
                </a>
            }
            {if showHomeButton then
                <a href={homeLink} class="error-btn error-btn--primary">
                    {homeText}
                </a>
            }
        </div>

        // Support link
        {if showSupportLink then
            <div class="error-support">
                <p class="support-text">
                    Need help?
                    <a href={supportLink} class="support-link">{supportText}</a>
                </p>
            </div>
        }

        // Additional info (for 500 errors)
        {if code == 500 || code == 503 then
            <div class="error-info">
                <p class="info-text">
                    Error ID: <code class="error-id">{Math.random().toString(36).substr(2, 9).toUpperCase()}</code>
                </p>
            </div>
        }
    </div>

    // Decorative background
    {if variant == "full" then
        <div class="error-background">
            <div class="bg-shape bg-shape-1"></div>
            <div class="bg-shape bg-shape-2"></div>
            <div class="bg-shape bg-shape-3"></div>
        </div>
    }
</div>

