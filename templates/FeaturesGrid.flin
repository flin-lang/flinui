// FeaturesGrid.flin - Feature showcase grid

// Props
features = props.features || [] // [{icon, title, description, link, linkText}]
columns = props.columns || 3 // 2 | 3 | 4
variant = props.variant || "default" // "default" | "cards" | "minimal" | "icons"
title = props.title || nil
subtitle = props.subtitle || nil
alignment = props.alignment || "center" // "left" | "center"
iconSize = props.iconSize || "medium" // "small" | "medium" | "large"
showLinks = props.showLinks ?? true
children = props.children || nil

// Computed
gridClass = "features-grid features-grid--" ++ columns ++ " features-grid--" ++ variant ++ " features-grid--align-" ++ alignment
iconClass = "feature-icon feature-icon--" ++ iconSize

<section class="features-section">
    // Header
    {if title || subtitle then
        <div class="features-header">
            {if title then <h2 class="features-title">{title}</h2>}
            {if subtitle then <p class="features-subtitle">{subtitle}</p>}
        </div>
    }

    // Grid
    <div class={gridClass}>
        {features.map { feature ->
            <div class="feature-item" key={feature.title || feature.id}>
                // Icon
                {if feature.icon then
                    <div class={iconClass}>
                        {if feature.iconType == "image" then
                            <img src={feature.icon} alt="" class="icon-image" />
                        else
                            <span class="icon-emoji">{feature.icon}</span>
                        }
                    </div>
                }

                // Content
                <div class="feature-content">
                    {if feature.title then
                        <h3 class="feature-title">{feature.title}</h3>
                    }
                    {if feature.description then
                        <p class="feature-description">{feature.description}</p>
                    }
                    {if showLinks && feature.link then
                        <a href={feature.link} class="feature-link">
                            {feature.linkText || "Learn more"}
                            <span class="link-arrow">â†’</span>
                        </a>
                    }
                </div>
            </div>
        }}
    </div>

    // Custom content (e.g., CTA button)
    {if children then
        <div class="features-footer">
            {children}
        </div>
    }
</section>

<style scoped>
