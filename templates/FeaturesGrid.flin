}

.features-grid--3 {
    grid-template-columns: repeat(3, 1fr);
}

.features-grid--4 {
    grid-template-columns: repeat(4, 1fr);
}

/* Alignment */
.features-grid--align-center .feature-item {
    text-align: center;
}

.features-grid--align-center .feature-icon {
    margin-left: auto;
    margin-right: auto;
}

.features-grid--align-left .feature-item {
    text-align: left;
}

