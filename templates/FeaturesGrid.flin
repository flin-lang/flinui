    font-size: var(--flin-font-size-3xl);
    font-weight: var(--flin-font-weight-bold);
    color: var(--flin-color-gray-900);
    margin: 0 0 var(--flin-spacing-4) 0;
}

.features-subtitle {
    font-size: var(--flin-font-size-lg);
    color: var(--flin-color-gray-600);
    margin: 0;
    line-height: 1.7;
}

