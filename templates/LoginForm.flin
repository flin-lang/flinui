// LoginForm.flin - Complete login form with validation

// Props
onSubmit = props.onSubmit || { credentials -> }
showRememberMe = props.showRememberMe ?? true
showForgotPassword = props.showForgotPassword ?? true
forgotPasswordLink = props.forgotPasswordLink || "#"
forgotPasswordText = props.forgotPasswordText || "Forgot password?"
socialProviders = props.socialProviders || [] // [{id, name, icon, onClick}]
loading = props.loading || false
disabled = props.disabled || false
usernameLabel = props.usernameLabel || "Email"
usernamePlaceholder = props.usernamePlaceholder || "Enter your email"
usernameType = props.usernameType || "email" // "email" | "text"
passwordLabel = props.passwordLabel || "Password"
passwordPlaceholder = props.passwordPlaceholder || "Enter your password"
submitText = props.submitText || "Sign in"
loadingText = props.loadingText || "Signing in..."
rememberMeText = props.rememberMeText || "Remember me"
socialDividerText = props.socialDividerText || "Or continue with"
errorMessage = props.errorMessage || nil
successMessage = props.successMessage || nil

// State
username = ""
password = ""
rememberMe = false
showPassword = false
errors = {}
touched = {}

// Validation
validateUsername = {
    if username == "" then
        errors.username = "Email is required"
    else if usernameType == "email" && !username.includes("@") then
        errors.username = "Please enter a valid email"
    else
        errors.username = nil
}

validatePassword = {
    if password == "" then
        errors.password = "Password is required"
    else if password.length < 6 then
        errors.password = "Password must be at least 6 characters"
    else
        errors.password = nil
}

validateForm = {
    validateUsername()
    validatePassword()
    return !errors.username && !errors.password
}

// Handlers
handleUsernameChange = { value ->
    username = value
    if touched.username then validateUsername()
}

handleUsernameBlur = {
    touched.username = true
    validateUsername()
}

handlePasswordChange = { value ->
    password = value
    if touched.password then validatePassword()
}

handlePasswordBlur = {
    touched.password = true
    validatePassword()
}

handleRememberMeChange = { checked ->
    rememberMe = checked
}

togglePasswordVisibility = {
    showPassword = !showPassword
}

handleSubmit = { event ->
    event.preventDefault()
    touched.username = true
    touched.password = true

    if validateForm() then
        onSubmit({
            username: username,
            password: password,
            rememberMe: rememberMe
        })
}

handleSocialLogin = { provider ->
    if provider.onClick then provider.onClick()
}

// Computed
submitDisabled = loading || disabled
usernameInputClass = if errors.username && touched.username then "login-input login-input--error" else "login-input"
passwordInputClass = if errors.password && touched.password then "login-input login-input--error" else "login-input"

<form class="login-form" onSubmit={handleSubmit}>
    // Error message
    {if errorMessage then
        <div class="login-message login-message--error" role="alert">
            <span class="message-icon">‚ö†</span>
            <span class="message-text">{errorMessage}</span>
        </div>
    }

    // Success message
    {if successMessage then
        <div class="login-message login-message--success" role="status">
            <span class="message-icon">‚úì</span>
            <span class="message-text">{successMessage}</span>
        </div>
    }

    // Username/Email field
    <div class="login-field">
        <label class="login-label" htmlFor="login-username">{usernameLabel}</label>
        <input
            type={usernameType}
            id="login-username"
            class={usernameInputClass}
            placeholder={usernamePlaceholder}
            value={username}
            onChange={e -> handleUsernameChange(e.target.value)}
            onBlur={handleUsernameBlur}
            disabled={submitDisabled}
            autoComplete={if usernameType == "email" then "email" else "username"}
            aria-invalid={if errors.username && touched.username then "true" else "false"}
            aria-describedby={if errors.username then "username-error" else nil}
        />
        {if errors.username && touched.username then
            <span class="login-error" id="username-error" role="alert">{errors.username}</span>
        }
    </div>

    // Password field
    <div class="login-field">
        <div class="login-label-row">
            <label class="login-label" htmlFor="login-password">{passwordLabel}</label>
            {if showForgotPassword then
                <a href={forgotPasswordLink} class="login-forgot-link">{forgotPasswordText}</a>
            }
        </div>
        <div class="login-password-wrapper">
            <input
                type={if showPassword then "text" else "password"}
                id="login-password"
                class={passwordInputClass}
                placeholder={passwordPlaceholder}
                value={password}
                onChange={e -> handlePasswordChange(e.target.value)}
                onBlur={handlePasswordBlur}
                disabled={submitDisabled}
                autoComplete="current-password"
                aria-invalid={if errors.password && touched.password then "true" else "false"}
                aria-describedby={if errors.password then "password-error" else nil}
            />
            <button
                type="button"
                class="login-password-toggle"
                onClick={togglePasswordVisibility}
                aria-label={if showPassword then "Hide password" else "Show password"}
                tabIndex="-1"
            >
                {if showPassword then "üëÅ" else "üëÅ‚Äçüó®"}
            </button>
        </div>
        {if errors.password && touched.password then
            <span class="login-error" id="password-error" role="alert">{errors.password}</span>
        }
    </div>

    // Remember me checkbox
    {if showRememberMe then
        <div class="login-remember">
            <label class="login-checkbox-label">
                <input
                    type="checkbox"
                    class="login-checkbox"
                    checked={rememberMe}
                    onChange={e -> handleRememberMeChange(e.target.checked)}
                    disabled={submitDisabled}
                />
                <span class="login-checkbox-custom"></span>
                <span class="login-checkbox-text">{rememberMeText}</span>
            </label>
        </div>
    }

    // Submit button
    <button
        type="submit"
        class="login-submit"
        disabled={submitDisabled}
    >
        {if loading then
            <span class="login-spinner"></span>
        }
        <span>{if loading then loadingText else submitText}</span>
    </button>

    // Social login providers
    {if socialProviders.length > 0 then
        <div class="login-social">
            <div class="login-divider">
                <span class="login-divider-text">{socialDividerText}</span>
            </div>

            <div class="login-social-buttons">
                {socialProviders.map { provider ->
                    <button
                        type="button"
                        class="login-social-btn"
                        onClick={ handleSocialLogin(provider) }
                        disabled={submitDisabled}
                        key={provider.id}
                        aria-label={"Sign in with " ++ provider.name}
                    >
                        {if provider.icon then
                            <span class="social-icon">{provider.icon}</span>
                        }
                        <span class="social-name">{provider.name}</span>
                    </button>
                }}
            </div>
        </div>
    }
</form>

