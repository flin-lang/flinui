// MonitoringDashboard.flin - System monitoring dashboard template

// Props
title = props.title || "System Monitoring"
subtitle = props.subtitle || "Infrastructure Health Dashboard"
cpuUsage = props.cpuUsage || 0
memoryUsage = props.memoryUsage || 0
diskUsage = props.diskUsage || 0
uptime = props.uptime || "0%"

<div class="monitoring-dashboard">
    <header class="monitoring-header">
        <h1 class="monitoring-title">{title}</h1>
        {if subtitle != ""}
            <p class="monitoring-subtitle">{subtitle}</p>
        {/if}
    </header>

    <div class="monitoring-stats">
        <div class="stat-card">
            <span class="stat-label">CPU</span>
            <span class="stat-value">{cpuUsage}%</span>
        </div>
        <div class="stat-card">
            <span class="stat-label">Memory</span>
            <span class="stat-value">{memoryUsage}%</span>
        </div>
        <div class="stat-card">
            <span class="stat-label">Disk</span>
            <span class="stat-value">{diskUsage}%</span>
        </div>
        <div class="stat-card">
            <span class="stat-label">Uptime</span>
            <span class="stat-value">{uptime}</span>
        </div>
    </div>

    <div class="monitoring-content">
        <div class="monitoring-card">
            <h3 class="card-title">System Status</h3>
            <div class="status-indicator status-indicator--healthy">
                <span class="status-dot"></span>
                <span class="status-text">All Systems Operational</span>
            </div>
        </div>
    </div>
</div>

