    text-align: center;
    margin-bottom: var(--flin-space-12);
}

.pricing-title {
    font-size: var(--flin-text-3xl);
    font-weight: var(--flin-font-bold);
    color: var(--flin-fg);
    margin: 0 0 var(--flin-space-4) 0;
}

.pricing-subtitle {
    font-size: var(--flin-text-lg);
    color: var(--flin-fg-muted);
    margin: 0;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--flin-space-6);
    max-width: var(--flin-breakpoint-lg);
    margin: 0 auto;
}

.pricing-card {
    background: var(--flin-bg);
    border: 1px solid var(--flin-neutral-200);
    border-radius: var(--flin-radius-xl);
    padding: var(--flin-space-8);
    text-align: center;
    position: relative;
}

.pricing-card--highlighted {
    border-color: var(--flin-primary);
    box-shadow: var(--flin-shadow-lg);
}

.plan-badge {
    position: absolute;
    top: calc(-1 * var(--flin-size-3));
    left: 50%;
    transform: translateX(-50%);
    background: var(--flin-primary);
    color: white;
    padding: var(--flin-space-1) var(--flin-space-3);
    border-radius: var(--flin-radius-full);
    font-size: var(--flin-text-sm);
    font-weight: var(--flin-font-medium);
}

.plan-name {
    font-size: var(--flin-text-xl);
    font-weight: var(--flin-font-semibold);
    color: var(--flin-fg);
    margin: 0 0 var(--flin-space-4) 0;
}

.plan-price {
    margin-bottom: var(--flin-space-6);
}

.price-currency {
    font-size: var(--flin-text-xl);
    color: var(--flin-fg-muted);
}

.price-amount {
    font-size: var(--flin-text-5xl);
    font-weight: var(--flin-font-bold);
    color: var(--flin-fg);
}

.price-period {
    font-size: var(--flin-text-sm);
    color: var(--flin-fg-muted);
}

.plan-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--flin-space-8) 0;
}

.feature-item {
    padding: var(--flin-space-2) 0;
