// PricingTable.flin - Pricing comparison table

// Props
title = props.title || ""
subtitle = props.subtitle || ""
currency = props.currency || "$"
billingPeriod = props.billingPeriod || "monthly"

<section class="pricing-section">
    {if title != ""}
        <div class="pricing-header">
            <h2 class="pricing-title">{title}</h2>
            {if subtitle != ""}
                <p class="pricing-subtitle">{subtitle}</p>
            {/if}
        </div>
    {/if}

    <div class="pricing-grid">
        <div class="pricing-card">
            <h3 class="plan-name">Basic</h3>
            <div class="plan-price">
                <span class="price-currency">{currency}</span>
                <span class="price-amount">9</span>
                <span class="price-period">/{billingPeriod}</span>
            </div>
            <ul class="plan-features">
                <li class="feature-item">5 Projects</li>
                <li class="feature-item">10GB Storage</li>
                <li class="feature-item">Email Support</li>
            </ul>
            <button class="plan-cta">Get Started</button>
        </div>

        <div class="pricing-card pricing-card--highlighted">
            <span class="plan-badge">Popular</span>
            <h3 class="plan-name">Pro</h3>
            <div class="plan-price">
                <span class="price-currency">{currency}</span>
                <span class="price-amount">29</span>
                <span class="price-period">/{billingPeriod}</span>
            </div>
            <ul class="plan-features">
                <li class="feature-item">Unlimited Projects</li>
                <li class="feature-item">100GB Storage</li>
                <li class="feature-item">Priority Support</li>
            </ul>
            <button class="plan-cta">Get Started</button>
        </div>

        <div class="pricing-card">
            <h3 class="plan-name">Enterprise</h3>
            <div class="plan-price">
                <span class="price-currency">{currency}</span>
                <span class="price-amount">99</span>
                <span class="price-period">/{billingPeriod}</span>
            </div>
            <ul class="plan-features">
                <li class="feature-item">Everything in Pro</li>
                <li class="feature-item">Unlimited Storage</li>
                <li class="feature-item">Dedicated Support</li>
            </ul>
            <button class="plan-cta">Contact Sales</button>
        </div>
    </div>
</section>

<style scoped>
