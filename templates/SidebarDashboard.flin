<aside class="sidebar">
  <!-- Toggle Button -->
  <button
    click={onToggle}
    class="sidebar-toggle"
    aria-label="Toggle sidebar"
  >
    <svg class="toggle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <!-- Menu -->
  <nav class="sidebar-nav">
    <!-- Main Section -->
    <div class="menu-section">
      {if !collapsed}
        <p class="section-title">MAIN</p>
      {/if}
      <ul class="section-items">
        {for item in mainItems}
          <li>
            {if currentPath == item["href"]}
              <a href={item["href"]} class="menu-item menu-item-active">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {else}
              <a href={item["href"]} class="menu-item">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {/if}
          </li>
        {/for}
      </ul>
    </div>

    <!-- Manage Section -->
    <div class="menu-section">
      {if !collapsed}
        <p class="section-title">MANAGE</p>
      {/if}
      <ul class="section-items">
        {for item in manageItems}
          <li>
            {if currentPath == item["href"]}
              <a href={item["href"]} class="menu-item menu-item-active">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {else}
              <a href={item["href"]} class="menu-item">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {/if}
          </li>
        {/for}
      </ul>
    </div>

    <!-- Account Section -->
    <div class="menu-section">
      {if !collapsed}
        <p class="section-title">ACCOUNT</p>
      {/if}
      <ul class="section-items">
        {for item in accountItems}
          <li>
            {if currentPath == item["href"]}
              <a href={item["href"]} class="menu-item menu-item-active">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {else}
              <a href={item["href"]} class="menu-item">
                <svg class="menu-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={getIconPath(item["icon"])} />
                </svg>
                {if !collapsed}
                  <span class="menu-label">{item["label"]}</span>
                {/if}
              </a>
            {/if}
          </li>
        {/for}
      </ul>
    </div>
  </nav>

  <!-- User Info -->
  <div class="sidebar-footer">
    <div class="user-info">
      <div class="user-avatar">U</div>
      {if !collapsed}
        <div class="user-details">
          <p class="user-email">user@example.com</p>
          <p class="user-plan">Free Plan</p>
        </div>
      {/if}
    </div>
  </div>
</aside>

