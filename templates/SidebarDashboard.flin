  ["icon": "domains", "label": "Domains", "href": "/dashboard/domains"],
  ["icon": "env", "label": "Environment", "href": "/dashboard/env"],
  ["icon": "secrets", "label": "Secrets", "href": "/dashboard/secrets"]
]

// Menu items - Account section
